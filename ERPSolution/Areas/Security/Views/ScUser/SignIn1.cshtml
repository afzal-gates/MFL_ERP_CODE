@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="content" ng-controller="ScUserController as vm">
    <!-- BEGIN LOGIN FORM -->
    
        <form class="login-form" name="frmSignIn" action="SignIn" method="post" novalidate
              ng-submit="vm.submit(frmSignIn.$valid,vm.form)">

            <div class="form-body">

                <h3 class="form-title">Log In</h3>
                @*<div class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        <span>
                            Enter any username and password.
                        </span>
                </div>*@

                

                <div class="form-group" >
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label visible-ie8 visible-ie9">Username</label>
                    
                    <input class="form-control" type="text" autocomplete="off" placeholder="User name"
                               name="LOGIN_ID" ng-model="vm.form.LOGIN_ID" required />  
                    
                    <div class="help-block help-block-error" style="color:#a94442;" ng-messages="frmSignIn.LOGIN_ID.$error" ng-if="frmSignIn.$submitted">
                        <div ng-message="required">Please input user name</div>
                    </div>                  
                </div>
                

                <div class="form-group" >
                    <label class="control-label visible-ie8 visible-ie9">Password</label>
                    <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password"
                           name="PASSWORD_HASH" ng-model="vm.form.PASSWORD_HASH" required />
                    
                    <div class="help-block help-block-error" style="color:#a94442;" ng-messages="frmSignIn.PASSWORD_HASH.$error" ng-if="frmSignIn.$submitted">
                        <div ng-message="required">Please input password</div>
                    </div>  
                </div>


                <div class="form-group" >
                    <label class="control-label visible-ie8 visible-ie9">Please input how much displayed below</label>
                    <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Please input how much displayed below"
                           name="CAPTCHA_VALUE" ng-model="vm.form.CAPTCHA_VALUE" required />  
                    
                    <div class="help-block help-block-error" style="color:#a94442;" ng-messages="frmSignIn.CAPTCHA_VALUE.$error" ng-if="frmSignIn.$submitted">
                        <div ng-message="required">Please input how much displayed below</div>
                    </div>                 
                </div>

                <div class="form-group">
                    @Html.Partial("CaptchaImage");
                    <a class="col-md-offset-3" ><i class='fa fa-refresh'></i>&nbsp; Try Another</a>

                    @*<img alt="Captcha" src="@Url.Action("CaptchaImage")" style="" />
                    <a class="col-md-offset-4" href="/ScUser/SignIn"><i class='fa fa-refresh'></i>&nbsp; Try Another</a>*@
                </div>

                @*<div class="help-block help-block-error" ng-messages="frmSignIn.$error" ng-if="frmCompany.$submitted">
                    <div ng-message="required">Please input valid username & password</div>
                </div>*@

                

                <div class="form-actions">
                    <button type="submit" class="btn btn-success uppercase" >Login</button>
                    @*<label class="rememberme check">
                            <input type="checkbox" name="remember" value="1" />Remember
                        </label>*@
                    <a href="javascript:;" id="forget-password" class="forget-password">Forgot Password?</a>
                </div>


                @*<div class="create-account">
                        <p>
                            <a href="javascript:;" id="register-btn" class="uppercase">Create an account</a>
                        </p>
                    </div>*@

            </div>
        </form>

        <!-- END LOGIN FORM -->
