<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>
    <form name="formData" class="form-horizontal" style="background-color: white;">
        <div class="portlet-body">
            <div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
                <div class="page-splash">
                    <div class="page-splash-message">
                        <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                    </div>
                </div>
            </div>
            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>User & Store Mapping</b></legend>
                <div><label id="lblMsg"></label></div>
                <div class="row">

                    <div class="form-group">
                        <div class="col-md-4 col-md-offset-4" style="padding-top:2px;">
                            <div class="demo-section k-content">
                                <select id="customers" kendo-drop-down-list options="vm.userList" ng-model="vm.form.SC_USER_ID"
                                        class="form-control required" style="width:100%;" ></select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-sm blue" ng-disabled="!vm.form.SC_USER_ID" ng-click="vm.getStoreUserList();">
                                Load
                            </button>
                        </div>
                    </div>

                    <div style="padding:3px;">
                    </div>
                    <div class="form-group">
                        <div class="col-md-12" style="text-align:center;">
                            <button type="submit" ng-if="vm.form.RF_ACTN_STATUS_ID>0" class="btn btn-sm yellow-gold" ng-click="vm.submitData(vm.form);">Update</button>
                            <button type="submit" ng-if="!vm.form.RF_ACTN_STATUS_ID>0" class="btn btn-sm green" ng-click="vm.submitData(vm.form);">Save</button>
                        </div>
                    </div>
                    <div style="padding:3px;">
                    </div>
                    <div style="padding:2px;">
                        <div kendo-grid k-options="vm.gridOptions" id="kendoGrid" k-data-source="vm.gridOptionsDS"></div>
                    </div>
                </div>
            </fieldset>
            <div style="padding:3px;">
            </div>
        </div>
    </form>
</div>

