<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>
    <form name="formData" class="form-horizontal" style="background-color: white;">
        <div class="portlet-body">
            <div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
                <div class="page-splash">
                    <div class="page-splash-message">
                        <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                    </div>
                </div>
            </div>
            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Key Info</b></legend>
                <div><label id="lblMsg"></label></div>
                <div class="row">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            <span aria-required="true" class="required">*</span>
                            Code
                        </label>
                        <div class="col-md-4 ">
                            <div class="demo-section k-content">
                                <input type="text" ng-model="vm.form.RPT_TMPLT_CODE" />
                                <input type="hidden" ng-model="vm.form.RF_RPT_TMPLT_ID" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">
                            <span aria-required="true" class="required">*</span>
                            Name
                        </label>
                        <div class="col-md-4 ">
                            <div class="demo-section k-content">
                                <input type="text" ng-model="vm.form.RPT_TMPLT_NAME" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">
                            <span aria-required="true" class="required">*</span>
                            Path
                        </label>
                        <div class="col-md-4 ">
                            <div class="demo-section k-content">
                                <input type="text" ng-model="vm.form.RPT_PATH_URL" class="form-control" />
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-4">
                            <span aria-required="true" class="required">*</span>
                            Type
                        </label>
                        <div class="col-md-4 ">
                            <div class="demo-section k-content">
                                <select kendo-drop-down-list options="vm.reportTypeList" ng-model="vm.form.LK_RPT_DOC_TYPE_ID"
                                        class="form-control required" style="width:100%;"></select>
                            </div>
                        </div>
                        <div class="col-md-2">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-1">
                        </div>

                        <div class="col-md-10" style="max-height: 300px; overflow-y: scroll;">
                            <table class="clsTableMtex" style="overflow-y:scroll;">
                                <thead class="clstheadMtex">
                                    <tr class="clstheadMtex">
                                        <td class="clstdMtex">Select</td>
                                        <td class="clstdMtex">Buyer Name</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr ng-repeat="item in vm.buyerList" class="clstdMtex">
                                        <td class="clstdMtex">
                                            <input type="checkbox" ng-true-value="'Y'" ng-false-value="'N'" ng-model="item.IS_SELECT" />
                                            <input type="hidden" ng-model="vm.form.RF_RPT_TMPLT_BYR_ID" />
                                            <input type="hidden" ng-model="vm.form.MC_BUYER_ID" />
                                        </td>
                                        <td class="clstdMtex">{{item.BUYER_NAME_EN}}</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                        
                        <div class="col-md-1">
                        </div>
                    </div>
                    @*<div class="col-md-3">
                            <table class="clsTableMtex">
                                <thead class="clstheadMtex">
                                    <tr>
                                        <td>Select</td>
                                        <td>Buyer Name</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr ng-repeat="item in vm.buyerList" class="clstdMtex">
                                        <td>
                                            <input type="checkbox" ng-true-value="'Y'" ng-false-value="'N'" ng-model="item.IS_SELECT" />
                                            <input type="hidden" ng-model="vm.form.RF_RPT_TMPLT_BYR_ID" />
                                            <input type="hidden" ng-model="vm.form.MC_BUYER_ID" />
                                        </td>
                                        <td>{{item.BUYER_NAME_EN}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>*@
                    <div style="padding:3px;">
                    </div>
                    <div class="form-group">
                        <div class="col-md-12" style="text-align:center;">
                            <button type="submit" ng-if="vm.form.RF_RPT_TMPLT_ID>0" class="btn btn-sm yellow-gold" ng-click="vm.submitData(vm.form);">Update</button>
                            <button type="submit" ng-if="!vm.form.RF_RPT_TMPLT_ID>0" class="btn btn-sm green" ng-click="vm.submitData(vm.form);">Save</button>
                            <button type="button" class="btn btn-sm default" ui-sref="ReportTemplate()" ui-sref-opts="{reload: true}">Cancel</button>
                        </div>
                    </div>
                    <div style="padding:3px;">
                    </div>
                    <div style="padding:2px;">
                        <div kendo-grid k-options="vm.gridOptions" id="kendoGrid" k-data-source="vm.gridOptionsDS"></div>
                    </div>
                </div>
            </fieldset>
            <div style="padding:3px;">
            </div>
        </div>
    </form>
</div>

