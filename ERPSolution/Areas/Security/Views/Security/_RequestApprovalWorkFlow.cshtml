</div>



<script type="text/ng-template" id="ActionType.html">
    <input id="access_token" data-ng-model="token" type="hidden"
           data-ng-init="token='@Session["access_token"]'" />
    <div class="modal-body">
        <div class="portlet grey-cascade box">
            <div class="portlet-title">
                <div>
                    <h3 class="title">
                        Main Action
                        <span class="pull-right"><i class="fa fa-times red" ng-click="cancel([])"></i></span>
                    </h3>
                </div>
            </div>
            <div class="portlet-body">

                <fieldset class="custom-fieldset">
                    <legend class="custom-legend"><b>Action Type</b></legend>

                    <div class="row">
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Type Code
                            </label>
                            <div class="col-md-2">
                                <div class="col-md-6" style="padding:0px;">
                                    <input type="text" name="ACTN_TYPE_CODE" readonly ng-model="form.ACTN_TYPE_CODE" class="form-control" />
                                </div>

                                <div class="col-md-6">
                                    <input type="text" name="RF_ACTN_TYPE_ID" readonly ng-model="form.RF_ACTN_TYPE_ID" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-2">

                            </div>

                            <label class="col-md-2 control-label">
                                <span aria-required="true" class="required"></span>
                                Type Name
                            </label>
                            <div class="col-md-4">
                                <input type="text" name="ACTN_TYPE_NAME" ng-model="form.ACTN_TYPE_NAME" class="form-control" />

                            </div>
                        </div>
                    </div>

                    <div style="padding:3px;">
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Short Name
                            </label>
                            <div class="col-md-4">
                                <input type="text" name="ACTN_TYPE_SNAME" ng-model="form.ACTN_TYPE_SNAME" class="form-control" />

                            </div>

                            <label class="col-md-2 control-label">
                                <span aria-required="true" class="required"></span>
                                Page URL
                            </label>
                            <div class="col-md-4">
                                <input type="text" name="PAGE_URL" ng-model="form.PAGE_URL" class="form-control" />

                            </div>
                        </div>
                    </div>
                    <div style="padding:3px;">
                    </div>

                    <div class="row">
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Is Active
                            </label>
                            <div class="col-md-2">
                                <input type="checkbox" name="IS_ACTIVE" ng-model="form.IS_ACTIVE" ng-true-value="'Y'" ng-false-value="'N'" />

                            </div>

                        </div>
                    </div>
                    <div style="padding:3px;">
                    </div>
                    <div style="padding:3px;">
                    </div>
                    <div class="row">
                        <div class="col-md-12" style="text-align:center;">
                            <button type="submit" ng-if="form.RF_ACTN_TYPE_ID>0" class="btn btn-sm yellow-gold" ng-click="submitAll(form);">Update</button>
                            <button type="submit" ng-if="!form.RF_ACTN_TYPE_ID>0" class="btn btn-sm green" ng-click="submitAll(form);">Save</button>
                            <button type="button" class="btn btn-sm" ng-click="reset(form);">Clear</button>
                        </div>
                    </div>
                    <div style="padding:3px;">
                    </div>
                    <div style="padding:3px;">
                    </div>
                    <div kendo-grid="webapiGrid" k-options="gridOptions" id="IDActionTypeDS"></div>

                </fieldset>
            </div>
        </div>
    </div>
</script>


