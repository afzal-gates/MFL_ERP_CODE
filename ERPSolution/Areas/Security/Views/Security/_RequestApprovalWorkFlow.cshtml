<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>
    <form name="formData" style="background-color: white;">
        <div class="portlet-body">
            <div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
                <div class="page-splash">
                    <div class="page-splash-message">
                        <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                    </div>
                </div>
            </div>
            <div class="row">

                <div class=" form-group">
                    <div class="col-md-3" style="padding-right:0px;">
                        <fieldset class="custom-fieldset">
                            <legend class="custom-legend"><b>Master List</b></legend>
                            <div class="form-group">

                                <div class="input-icon right col-md-10" style="padding-bottom:3px;">
                                    <i class="icon-magnifier"></i>
                                    <input type="text" class="form-control form-control-solid" ng-model="q" placeholder="search..." ng-change="vm.ActionTypeList.filter( { field:'ACTN_TYPE_NAME', operator :'contains', value: q })" ng-model-options="{ debounce: { 'default': 500, 'blur': 0 } }">
                                </div>

                                @*<label class="control-label col-md-4">
                                    <span aria-required="true" class="required">*</span>
                                    Search
                                </label>
                                <div class="col-md-6">
                                    <input type="text" name="TASK_NAME" ng-model="vm.form.TASK_NAME" class="form-control" ng-keyup="vm.filterTaskList();" />
                                    
                                </div>*@
                                <div class="col-md-2" style="padding:0px;">
                                    <a title="Add New" ng-click="vm.openActionType()" class="btn btn-sm yellow"><i class="fa fa-plus"> New</i></a>
                                    @*<input type="button" class="form-control btn btn-sm yellow" ng-click="vm.openActionType();" title="+ New" value="+ New" />*@
                                </div>
                            </div>
                            <div class="form-group" style="padding-top:20px;">


                                <div kendo-list-view
                                     k-selectable="'single'"
                                     @*k-data-text-field="'TA_TASK_NAME_EN'" k-data-value-field="'MC_TNA_TASK_ID'"*@
                                     k-data-source="vm.ActionTypeList"
                                     k-on-change="vm.getActionTypeList(dataItem);">

                                    <div k-template>
                                        <dd class="k-state-default" style="padding: 5px; border-bottom: solid 1px; border-color: lightgray; ">
                                            {{dataItem.ACTN_TYPE_NAME}}
                                        </dd>
                                    </div>
                                </div>
                                <div kendo-pager k-data-source="vm.ActionTypeList"></div>
                            </div>
                            @*<div class="" style="max-height: 500px; overflow: scroll !important;">
                                    <ul ng-repeat="m in vm.TnaTaskList">
                                        <li>
                                            <a ng-click="vm.getTnaTaskStatusList(m);">{{m.TA_TASK_NAME_EN}}</a>
                                        </li>

                                    </ul>
                                </div>*@
                        </fieldset>
                    </div>
                    <div class="col-md-9" style="padding-left:2px;">
                        <fieldset class="custom-fieldset">
                            <legend class="custom-legend"><b>Master Data</b></legend>
                            <div><label id="lblMsg"></label></div>
                            <div class="row" style="padding-left: 5px; padding-right: 5px;">

                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-1">
                                        </div>
                                        <label class="control-label col-md-2">
                                            <span aria-required="true" class="required">*</span>
                                            Action Name
                                        </label>
                                        <div class="col-md-3">
                                            <input type="text" name="ACTN_STATUS_NAME" ng-model="vm.form.ACTN_STATUS_NAME" class="form-control required" />

                                        </div>

                                        <label class="col-md-2 control-label">
                                            <span aria-required="true" class="required">*</span>
                                            Task Message
                                        </label>
                                        <div class="col-md-3">
                                            <input type="text" name="EVENT_NAME" ng-model="vm.form.EVENT_NAME" class="form-control required" />

                                        </div>
                                    </div>
                                </div>

                                <div style="padding:3px;">
                                </div>

                                <div class="row">
                                    <div class="form-group">

                                        <div class="col-md-1">
                                        </div>
                                        <label class="control-label col-md-2 ">
                                            <span aria-required="true" class="required">*</span>
                                            Status Order
                                        </label>
                                        <div class="col-md-1">
                                            <input type="number" min="1" name="ACTION_SORT" ng-model="vm.form.ACTION_SORT" class="form-control double" />
                                            @*<input type="text" name="RF_ACTN_STATUS_ID" ng-model="vm.form.RF_ACTN_STATUS_ID" class="form-control" />*@
                                            <input type="hidden" name="RF_ACTN_STATUS_ID" ng-model="vm.form.RF_ACTN_STATUS_ID" />
                                            <input type="hidden" name="RF_ACTN_TYPE_ID" ng-model="vm.form.RF_ACTN_TYPE_ID" />
                                        </div>
                                        <div class="col-md-2">
                                        </div>
                                        <label class="control-label col-md-2">
                                            <span aria-required="true" class="required"></span>
                                            Parent
                                        </label>
                                        <div class="col-md-3">
                                            <select class="form-control" kendo-drop-down-list name="PARENT_ID" id="PARENT_ID" k-option-label="'-- Select Parent Event --'"
                                                    k-data-text-field="'ACTN_STATUS_NAME'" k-data-value-field="'RF_ACTN_STATUS_ID'"
                                                    k-auto-bind="'true'" k-data-source="vm.parentList" k-delay="vm.parentList" k-filter="'contains'" ng-model="vm.form.PARENT_ID"></select>
                                        </div>

                                    </div>
                                </div>
                                <div style="padding:3px;">
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-1">
                                        </div>
                                        <label class="control-label col-md-2 ">
                                            <span aria-required="true" class="required"></span>
                                            Section
                                        </label>
                                        <div class="col-md-3">
                                            <select class="form-control" kendo-drop-down-list name="HR_DEPARTMENT_ID" id="HR_DEPARTMENT_ID" k-option-label="'-- Select Section --'"
                                                    k-data-text-field="'DEPARTMENT_NAME_EN'" k-data-value-field="'HR_DEPARTMENT_ID'"
                                                    k-auto-bind="'true'" k-data-source="vm.sectionList" k-delay="vm.sectionList" k-filter="'contains'" ng-model="vm.form.HR_DEPARTMENT_ID"></select>
                                        </div>

                                        <label class="col-md-2 control-label">
                                            <span aria-required="true" class="required"></span>
                                            Next Action
                                        </label>
                                        <div class="col-md-2">
                                            <input type="text" name="NXT_ACTION_NAME" ng-model="vm.form.NXT_ACTION_NAME" class="form-control" />


                                        </div>
                                    </div>
                                </div>

                                <div style="padding:3px;">
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-1">
                                        </div>
                                        <label class="control-label col-md-2 ">
                                            <span aria-required="true" class="required">*</span>
                                            Assign To 
                                        </label>
                                        <div class="col-md-3">

                                            <select id="customers" kendo-multi-select options='vm.userList' style="border: 1px solid #898383;"
                                                    ng-model='vm.form.ASSIGNED_TO_LST' class='required'></select>

                                        </div>

                                        <label class="col-md-2 control-label">
                                            <span aria-required="true" class="required"></span>
                                            Execution By
                                        </label>
                                        <div class="col-md-3">
                                            <select id="customers" kendo-drop-down-list options="vm.userList" ng-model="vm.form.EXEC_BY_ID" class="form-control" style="width:100%;"></select>

                                        </div>
                                    </div>
                                </div>
                                <div style="padding:3px;">
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-1">
                                        </div>
                                        <label class="control-label col-md-2">
                                            <span aria-required="true" class="required"></span>
                                            Role Flag
                                        </label>
                                        <div class="col-md-3">
                                            <select name="ACTN_ROLE_FLAG" class="form-control" ng-model="vm.form.ACTN_ROLE_FLAG">
                                                <option value="RI">Requisition Initiator</option>
                                                <option value="RA">Requisition Approver</option>
                                                <option value="SI">Store Issuer</option>
                                                <option value="SR">Store Receiver</option>
                                                <option value="DN">Complete</option>
                                            </select>
                                        </div>

                                        <label class="control-label col-md-2">
                                            <span aria-required="true" class="required"></span>
                                            Aprover Level #
                                        </label>
                                        <div class="col-md-2">
                                            <input type="number" name="APROVER_LVL_NO" ng-model="vm.form.APROVER_LVL_NO" />

                                        </div>
                                    </div>
                                </div>
                                <div style="padding:3px;">
                                </div>

                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-1">
                                        </div>
                                        <label class="control-label col-md-2">
                                            <span aria-required="true" class="required"></span>
                                            Is Active
                                        </label>
                                        <div class="col-md-2">
                                            <input type="checkbox" name="IS_ACTIVE" ng-model="vm.form.IS_ACTIVE" ng-true-value="'Y'" ng-false-value="'N'" />

                                        </div>

                                        <div class="col-md-1">
                                        </div>
                                        <label class="control-label col-md-2">
                                            <span aria-required="true" class="required"></span>
                                            Is Repeat
                                        </label>
                                        <div class="col-md-2">
                                            <input type="checkbox" name="IS_REPEAT" ng-model="vm.form.IS_REPEAT" ng-true-value="'Y'" ng-false-value="'N'" />

                                        </div>
                                    </div>
                                </div>

                                <div style="padding:3px;">
                                </div>
                                <div class="row">
                                    <div class="col-md-12" style="text-align:center;">
                                        <button type="submit" ng-if="vm.form.RF_ACTN_STATUS_ID>0" class="btn btn-sm yellow-gold" ng-click="vm.submitData(vm.form);">Update</button>
