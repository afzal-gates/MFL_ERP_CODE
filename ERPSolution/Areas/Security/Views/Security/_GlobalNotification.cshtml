<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>
    <form name="formData" class="form-horizontal" style="background-color: white;">
        <div class="portlet-body">

            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Notification Data</b></legend>
                <div class="row" style="padding-left: 5px; padding-right: 5px;">

                    <div><label id="lblMsg"></label></div>

                    <div class="form-group">
                        <div class="col-md-1">
                        </div>
                        <label class="control-label col-md-2">
                            <span aria-required="true" class="required"></span>
                            Notification Title:
                        </label>
                        <div class="col-md-2">

                            <input type="text" class="form-control required" id="title" ng-model="vm.form.title">
                        </div>
                    </div>




                    <div class="form-group">
                        <div class="col-md-1">
                        </div>
                        <label class="control-label col-md-2">
                            <span aria-required="true" class="required"></span>
                            Notification Type:
                        </label>
                        <div class="col-md-2">

                            @*<select kendo-drop-down-list name="TYPE_ID" id="TYPE_ID" class="form-control requiredDDL"
                                    options="vm.TypeList" ng-model="vm.form.TYPE_ID"></select>*@

                            <select class="form-control requiredDDL" id="alert-type" ng-model="vm.form.TYPE_ID">
                                <option value="remove" selected>-- Select Type --</option>
                                <option value="info" selected>Information</option>
                                <option value="success">Success</option>
                                <option value="warning">Warning</option>
                                <option value="danger">Error</option>
                            </select>
                        </div>

                    </div>


                    <div class="form-group">
                        <div class="col-md-1">
                        </div>
                        <label class="control-label col-md-2">
                            <span aria-required="true" class="required"></span>
                            Notification Message:
                        </label>
                        <div class="col-md-6">

                            <textarea class="form-control required" style="min-height:70px;" id="title" ng-model="vm.form.message"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-1">
                        </div>
                        <label class="control-label col-md-2">
                            <span aria-required="true" class="required"></span>
                            Message Time:
                        </label>
                        <div class="col-md-2">

                            <input type="number" class="form-control required" id="title" ng-model="vm.form.msgTime">
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-1">
                        </div>
                        <label class="control-label col-md-2">
                            <span aria-required="true" class="required"></span>
                            Off-line Time:
                        </label>
                        <div class="col-md-2">

                            <input type="number" class="form-control required" id="title" ng-model="vm.form.offline">
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-1">
                            </div>
                            <label class="control-label col-md-2">
                            </label>
                            <div class="col-md-8">

                                <button type="button" class="btn btn-primary" id="send-notification" ng-click="vm.showMessage();"> Send to All</button>
                                <button type="button" class="btn btn-default" id="clear-notification" ng-click="vm.clearMessage();"> Clear Message</button>
                            </div>
                        </div>

                    </div>
                </div>
            </fieldset>
        </div>
    </form>


</div>