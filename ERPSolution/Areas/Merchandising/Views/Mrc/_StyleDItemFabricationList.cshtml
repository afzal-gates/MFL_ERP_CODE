<fieldset class="custom-fieldset" style="padding-top: 0px;padding-bottom: 0px;">
    <legend class="custom-legend"> <b>Fabric Details</b> </legend>

    <div class="row" style="padding-top:5px">
        <div class="col-md-1">
            <a ui-sref="StyleH.Item.Fab({MC_STYLE_H_ID:vm.params.MC_STYLE_H_ID,MC_STYLE_D_ITEM_ID : vm.params.MC_STYLE_D_ITEM_ID,MC_STYLE_D_FAB_ID:0})" class="btn btn-xs blue">
                <i class="fa fa-plus"></i> Add New
            </a>
        </div>
    </div>


    <div class="table-scrollable" ng-if="vm.FabList.length>0">
        <table class="table table-striped table-bordered table-advance table-hover">
            <thead>
                <tr>
                    <th>
                        SL
                    </th>
                    <th class="hidden-xs">
                        Part
                    </th>
                    <th>
                        Fabric Description
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in vm.FabList">
                    <td>
                        {{$index+1}}
                    </td>
                    <td class="hidden-xs">
                        {{item.GARM_PART}}
                    </td>
                    <td>
                        {{item.FABRIC_DESC}}
                    </td>
                    <td>
                        <a class="btn default btn-xs blue" ui-sref="StyleH.Item.Fab({MC_STYLE_H_ID:vm.params.MC_STYLE_H_ID,MC_STYLE_D_ITEM_ID : vm.params.MC_STYLE_D_ITEM_ID,MC_STYLE_D_FAB_ID:item.MC_STYLE_D_FAB_ID})">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</fieldset>