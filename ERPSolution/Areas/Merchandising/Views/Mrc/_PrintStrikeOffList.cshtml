<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>

    <div class="portlet-body">

        <div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
            <div class="page-splash">
                <div class="page-splash-message">
                    <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                </div>
            </div>
        </div>

        <input ng-model="vm.form.CREATED_BY" type="hidden" data-ng-init="vm.form.CREATED_BY='@Session["multiScUserId"]'" />

        <div class="row">
            <div class="col-md-12">
                <fieldset class="custom-fieldset" style="padding: 5px;">
                    <legend class="custom-legend"></legend>

                    <div class="form-group">
                        <label class="col-md-1" style="padding-right:0px;">
                            Search By
                        </label>
                        <div class="col-md-4">
                            <select kendo-drop-down-list name="MC_BYR_ACC_ID" class="form-control" options="vm.buyerAccList" ng-model="vm.form.MC_BYR_ACC_ID"></select>
                        </div>
                        <div class="col-md-1">
                            <button class="btn btn-sm" ng-click="vm.showPrintDesign()">Show</button>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-sm blue" ng-click="vm.addNewPrintDesign()">Add New <i class="fa fa-plus"></i></button>
                        </div>
                    </div>

                </fieldset>
            </div>
        </div>

        <br />
        <div>
            <kendo-grid k-options="vm.gridOptionsPrint" id="PrintGrid"></kendo-grid>
        </div>

    </div>
</div>





