        <div class="row">
            <div class="col-md-12">
                <fieldset class="custom-fieldset">
                    <legend class="custom-legend">Search</legend>

                    <table class="clsTable">
                        <tbody class="clsthead">
                            <tr class="clstd">
                                
                                <td class="clstd">
                                    <b>Buyer A/C</b>
                                </td>

                                <td class="clstd">
                                    <b>Style/Order#</b>
                                </td>
                                <td class="clstd">
                                    <b>Shipment Month</b>
                                </td>
                                <td class="clstd">
                                    <b>Approve From</b>
                                </td>
                                <td class="clstd">
                                    <b>Approve To</b>
                                </td>

                                <td class="clstd">
                                    <b>Action</b>
                                </td>
                            </tr>

                            <tr class="clstd">
                                <td class="clstd" width="20%">
                                    <select kendo-drop-down-list name="MC_BYR_ACC_GRP_ID" class="form-control" k-filter="'contains'" k-option-label="'-- Select --'"
                                            k-options="vm.buyerAcGrpList" ng-model="vm.form.MC_BYR_ACC_GRP_ID"
                                            k-data-text-field="'BYR_ACC_GRP_NAME_EN'" k-data-value-field="'MC_BYR_ACC_GRP_ID'"
                                            k-auto-bind="'true'"></select>
                                </td>
                                <td class="clstd" width="25%">
                                    <select kendo-drop-down-list name="MC_STYLE_H_EXT_ID" class="form-control" k-filter="'contains'" k-option-label="'-- Select --'"
                                            k-template="vm.styleExtTemplate" k-value-template="vm.styleExtValueTemplate"
                                            k-options="vm.styleExtOption" k-data-source="vm.styleExtDataSource" ng-model="vm.form.MC_STYLE_H_EXT_ID"
                                            k-data-text-field="'STYLE_NO'" k-data-value-field="'MC_STYLE_H_EXT_ID'"
                                            k-auto-bind="'true'"></select>
                                </td>
                                <td class="clstd" width="15%">
                                    <select class="form-control" kendo-drop-down-list name="MONTHOF" k-option-label="'-- Select Month --'"
                                            k-data-text-field="'MONTHOF'" k-data-value-field="'MONTHOF'" k-filter="'contains'"
                                            k-auto-bind="'true'" k-data-source="vm.shipMonthList" ng-model="vm.form.MONTHOF"
                                            k-on-change="vm.onChangeShipMonth(vm.form,kendoEvent)"></select>
                                </td>
                                <td class="clstd" width="15%">
                                    <input type="text" class="form-control" ng-click="vm.fromDateOpen($event)" datepicker-popup="{{vm.dtFormat}}"
                                           name="FROM_DATE" ng-model="vm.form.FROM_DATE" is-open="vm.fromDateOpened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close" />
                                </td>

                                <td class="clstd" width="15%">
                                    <input type="text" class="form-control" ng-click="vm.toDateOpen($event)" datepicker-popup="{{vm.dtFormat}}"
                                           name="TO_DATE" ng-model="vm.form.TO_DATE" is-open="vm.toDateOpened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close" />
                                </td>
                                
                                <td class="clstd" width="10%">
                                    <button type="button" class="btn btn-sm blue" ng-click="vm.getBookingList();"><i class='fa fa-search'></i> Show</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>


                    
                </fieldset>
            </div>
        </div>

