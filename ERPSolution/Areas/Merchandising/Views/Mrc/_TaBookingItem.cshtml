        <button type="button" class="btn btn-sm yellow-gold" ng-if="vm.params.pSCM_PURC_REQ_H_ID>0" ng-click="vm.submit(myForm.$valid,'Y');">Update</button>
        <a class="btn btn-sm blue" ng-click="vm.printRequisition(vm.params)" ng-disabled="vm.params.pSCM_PURC_REQ_H_ID<1"><i class="fa fa-file-pdf-o"></i> Print</i></a>
