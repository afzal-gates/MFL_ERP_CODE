                                <button class="btn btn-sm" ng-click="vm.showLabdip()" ng-class="{'disabled':!vm.form.MC_BYR_ACC_ID}">Show</button>
                            </div>
                            @*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <div class="col-md-1">
