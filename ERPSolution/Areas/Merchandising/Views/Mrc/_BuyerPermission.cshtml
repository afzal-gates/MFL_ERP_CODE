<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>

    <div class="portlet-body form">

        <div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
            <div class="page-splash">
                <div class="page-splash-message">
                    <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                </div>
            </div>
        </div>

        <form class="form-horizontal" role="form" name="TnaTemplateForm" novalidate ng-submit="vm.changeUserId(vm.form.SC_USER_ID)">
            <div class="row" style="margin:auto;">

                <input id="access_token" data-ng-model="token" type="hidden"
                       data-ng-init="token='@Session["access_token"]'" />
                <input ng-model="vm.form.CREATED_BY" type="hidden"
                       data-ng-init="vm.form.CREATED_BY='@Session["multiScUserId"]'" />

                <input id="access_token" ng-model="vm.form.LAST_UPDATED_BY" type="hidden"
                       ng-init="vm.form.LAST_UPDATED_BY='@Session["multiScUserId"]'" />

                <br />
                <br />

                <div class="form-group">
                    <div class="col-md-4 col-md-offset-4" style="padding-top:2px;">
                        <div class="demo-section k-content">
                            <select id="customers" kendo-drop-down-list options="vm.userList" ng-model="vm.form.SC_USER_ID" class="form-control" style="width:100%;"></select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-sm blue" ng-disabled="!vm.form.SC_USER_ID">
                            Load
                        </button>
                    </div>
                </div>


            </div>
        </form>
            <div class="row" style="margin:auto;">
                <div class="col-md-10 col-md-offset-1">
                    <fieldset class="custom-fieldset">
                        <legend class="custom-legend">Buer Account List</legend>

                        <kendo-grid k-options="vm.gridOptions" id="kendoGrid"></kendo-grid>


                        <div class="col-md-4 col-md-offset-4" align="center" style="padding-top:10px; padding-bottom:10px;">
                            <button type="button" class="btn btn-sm green" ng-click="vm.saveGridData(token,vm.form.CREATED_BY,vm.form.SC_USER_ID)" ng-disabled="!vm.form.SC_USER_ID">Save</button>
                            <button type="button" class="btn btn-sm default" ng-click="vm.changeUserId(vm.form.SC_USER_ID)" ng-disabled="!vm.form.SC_USER_ID">Cancel</button>
                        </div>

                    </fieldset>
                </div>

            </div>
</div>
</div>

