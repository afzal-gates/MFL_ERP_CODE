<script type="text/ng-template" id="OfficeMapModal.html">
    <input id="access_token" data-ng-model="token" type="hidden"
           data-ng-init="token='@Session["access_token"]'" />
    <input ng-model="CREATED_BY" type="hidden"
           data-ng-init="CREATED_BY='@Session["multiScUserId"]'" />

    <div class="modal-body">
        <div class="portlet grey-cascade box">
            <div class="portlet-title">
                <div>
                    <h3 class="title">
                        Buyer : {{buyer.BUYER_NAME_EN}}
                        <span class="pull-right"><i class="fa fa-times red" ng-click="cancel()"></i></span>
                    </h3>
                </div>
            </div>
            <div class="portlet-body">
                

                    <dualmultiselect options="demoOptions" ng-model="selectedOffId"></dualmultiselect>

                    <br />
                    <div class="row">

                        
                        <div class="col-md-4 col-md-offset-4">
                            <button type="button" class="btn btn-sm default" ng-click="cancel()">Cancel</button>
                            <button type="button" class="btn btn-sm green" ng-click="save(demoOptions.selectedItems,token)">Save</button>
                        </div>
                    </div>
         
           </div>
        </div>
    </div>
</script>







