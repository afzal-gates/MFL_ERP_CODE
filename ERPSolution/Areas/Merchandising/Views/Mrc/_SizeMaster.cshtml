<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>

    <div class="portlet-body form">

        <div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
            <div class="page-splash">
                <div class="page-splash-message">
                    <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                </div>
            </div>
        </div>


        <form class="form-horizontal" role="form" name="SizeMasterForm" novalidate ng-submit="vm.submitSizeData(vm.form,token)">

            <div class="form-body clearfix">
                <div class="row" style="margin:auto;padding-top:10px;">


                    <input id="access_token" data-ng-model="token" type="hidden"
                           data-ng-init="token='@Session["access_token"]'" />
                    <input ng-model="vm.form.CREATED_BY" type="hidden"
                           data-ng-init="vm.form.CREATED_BY='@Session["multiScUserId"]'" />

                    <input id="access_token" ng-model="vm.form.LAST_UPDATED_BY" type="hidden"
                           ng-init="vm.form.LAST_UPDATED_BY='@Session["multiScUserId"]'" />


                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            Size Code
                        </label>
                        <div class="col-md-2">
                            <input type="text" name="SIZE_CODE" ng-model="vm.form.SIZE_CODE" class="form-control" required />
                        </div>

                        <div class="col-md-5 col-md-offset-1">
                            <div ng-messages="SizeMasterForm.SIZE_CODE.$error" ng-if="SizeMasterForm.$submitted || SizeMasterForm.SIZE_CODE.$touched">
                                <div ng-message="required" class="field-validation-error">The field Size Code is required</div>
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            <span aria-required="true" class="required">*</span>
                            Size Name (En)
                        </label>
                        <div class="col-md-3">
                            <input type="text" name="SIZE_NAME_EN" ng-model="vm.form.SIZE_NAME_EN" class="form-control" required />
                        </div>
                        <div class="col-md-5">
                            <div ng-messages="SizeMasterForm.SIZE_NAME_EN.$error" ng-if="SizeMasterForm.$submitted || SizeMasterForm.SIZE_NAME_EN.$touched">
                                <div ng-message="required" class="field-validation-error">The field Size Name (En) is required</div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            Size Name (Bn)
                        </label>
                        <div class="col-md-3">
                            <input type="text" name="SIZE_NAME_BN" ng-model="vm.form.SIZE_NAME_BN" class="form-control banglafont" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label" style="padding-top: 8px;">
                            Is Active ?
                        </label>
                        <div class="col-md-1">
                            <div class="checkbox-list">
                                <label class="checkbox-inline" style="margin-left:20px;">
                                    <span><input type="checkbox" style="margin-top:0px;"ng-model="vm.form.IS_ACTIVE" ng-true-value="'Y'" ng-false-value="'N'"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
               
                 <div class="row" style="margin:auto;padding-top:10px;">
                    <div class="col-md-3 col-md-offset-3">
                        <button type="submit" ng-if="vm.form.MC_SIZE_ID" class="btn btn-xs yellow-gold" ng-class="{'disabled':!SizeMasterForm.$valid}">Update</button>
                        <button type="submit" ng-if="!vm.form.MC_SIZE_ID" class="btn btn-xs green" ng-class="{'disabled':!SizeMasterForm.$valid}">Save</button>
                        <button type="button" class="btn btn-xs default" ui-sref="SizeMaster({ MC_SIZE_ID : null })" ui-sref-opts="{reload: true}">Cancel</button>
                    </div>
                 </div>

                <div class="row" style="margin:auto;padding-top:10px;" ng-if="vm.errors">
                    <div class="alert alert-warning" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                        <ul ng-repeat="field in vm.errors">
                            <li ng-repeat="error in field" ng-bind="error"></li>
                        </ul>
                    </div>
                </div>

                <div class="row" style="padding-top:10px;">
                    <div class="col-md-8 col-md-offset-1">
                        <kendo-grid k-options="vm.gridOptions"></kendo-grid>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>



