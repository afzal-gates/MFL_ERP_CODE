<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">MultiTex ERP</a>

    </li>
    <li>
        <a href="#">Merchandising</a>

    </li>
    <li>
        <a href="#">{{vm.Title}}</a>
    </li>
</ul>



<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>

    <div class="portlet-body form">

        <div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
            <div class="page-splash">
                <div class="page-splash-message">
                    <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                </div>
            </div>
        </div>
        <br />
        <div class="row" style="margin:auto;">
            <div class="col-md-3" style="padding-right:5px;">
                <fieldset class="custom-fieldset">
                    <legend class="custom-legend">Spec. Template List</legend>
                    <div class="row" style="padding-left: 5px; padding-right: 5px;">
                        <div class="col-md-12" align="right">
                            <a class="btn btn-xs grey-cascade" ng-click="vm.addItemTempName()">
                                <i class="fa fa-plus">Add</i>
                            </a>
                        </div>
                    </div>

                    <div class="input-icon right" style="padding-bottom:3px;">
                        <i class="icon-magnifier"></i>
                        <input type="text" class="form-control form-control-solid" ng-model="q" placeholder="search..." ng-change="vm.dataSource.filter( { field:'ACCS_PO_TMPLT_NAME', operator :'contains', value: q })" ng-model-options="{ debounce: { 'default': 500, 'blur': 0 } }">
                    </div>



                    <div style="padding:5px;">
                        <div kendo-list-view
                             k-selectable="'single'"
                             k-data-source="vm.dataSource"
                             k-on-change="vm.onItemChange(dataItem)"
                             k-on-data-bound="vm.onDataBound(kendoEvent)">

                            <div k-template>
                                <dd class="k-state-default" style="padding: 5px; border-bottom: solid 1px; border-color: lightgray; ">
                                    {{dataItem.ACCS_PO_TMPLT_NAME}}
                                </dd>
                            </div>
                        </div>
                        <div kendo-pager k-data-source="vm.dataSource"></div>
                    </div>


                </fieldset>
            </div>

            <div class="col-md-9" style="padding-left:5px;padding-right:5px;">
                <fieldset class="custom-fieldset">
                    <legend class="custom-legend">Item wise Controls Specification</legend>

                    <div class="row well-sm" style="padding-left: 5px; padding-right: 5px;" ng-if="vm.params.pMC_ACCS_PO_TMPLT_H_ID">

                        <div class="col-md-3" align="right">
                            <h4 style=" margin-top:3px;"> <small>Template Name :</small></h4>
                        </div>
                        <div class="col-md-9">
                            <input type="text" name="BUYER_NAME_EN" ng-model="vm.form.ACCS_PO_TMPLT_NAME" class="form-control" />
                        </div>
                    </div>

                    <div class="row" style="padding-left: 5px; padding-right: 5px;" ng-if="vm.params.pMC_ACCS_PO_TMPLT_H_ID">
                        <div class="col-md-6">
                            <h4 style="margin-top:0px;">Trim & Accessories List</h4>
                        </div>
                        <div class="col-md-6" align="right">
                            <a class="btn btn-xs grey-cascade" ng-click="vm.addTempHeaderD()">
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>


                    <div style="padding:5px;">
                        <div kendo-grid k-options="vm.gridOptions" id="IDHeaderD" k-data-source="vm.dsHeaderD"></div>
                    </div>
                    <hr />
                    <div class="row" style="padding-left: 5px; padding-right: 5px;">
                        <div class="col-md-6">
                            <h4 style="margin-top:0px;">Control Specification</h4>
                        </div>
                        <div class="col-md-6" align="right">
                            <a class="btn btn-xs grey-cascade">
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>

                    <div style="padding:5px;">
                        <div kendo-grid k-options="vm.OptionsForControlCfg" id="kendoGrid" k-data-source="vm.dsControlCfg"></div>
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="row" style="margin:auto;padding:5px;">
            <div class="col-md-5 col-md-offset-7" align="right">
                <button type="button" class="btn btn-sm green" ng-click="vm.submitData()" ng-disabled="!vm.params.pMC_ACCS_PO_TMPLT_H_ID">Save</button>
                <button type="button" class="btn btn-sm default" ng-click="vm.onItemChange(vm.form)" ng-disabled="!vm.params.pMC_ACCS_PO_TMPLT_H_ID">Cancel</button>
            </div>
        </div>

    </div>
</div>


<script type="text/ng-template" id="NewControlTempBooking.html">
    <div class="modal-body">
        <div class="portlet grey-cascade box">
            <div class="portlet-title">
                <div>
                    <h3 class="title">
                        New Control Template
                        <span class="pull-right"><i class="fa fa-times red" ng-click="cancel(vm.form)"></i></span>
                    </h3>
                </div>
            </div>
            <div class="portlet-body">
                <form class="form-horizontal" role="form" name="CtrlTemplateForm" novalidate>
                    <div class="form-body clearfix">
                        <div class="row" style="margin:auto;padding-top:10px;">
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    <span aria-required="true" class="required">*</span>
                                    Control Template Name
                                </label>
                                <div class="col-md-7">
                                    <input type="text" name="ACCS_PO_TMPLT_NAME" ng-model="form.ACCS_PO_TMPLT_NAME" class="form-control" required />

                                    <div ng-messages="CtrlTemplateForm.ACCS_PO_TMPLT_NAME.$error" ng-if="CtrlTemplateForm.$submitted || CtrlTemplateForm.ACCS_PO_TMPLT_NAME.$touched">
                                        <p ng-message="required" class="field-validation-error">Template Name is required</p>
                                    </div>
                                </div>
                            </div>


                            <br />
                            <div class="row">
                                <div class="col-md-5 col-md-offset-4">
                                    <button type="button" ng-if="vm.form.MC_ACCS_PO_TMPLT_H_ID" ng-click="save(form)" class="btn btn-sm yellow-gold" ng-class="{'disabled':!CtrlTemplateForm.$valid}">Update</button>
                                    <button type="button" ng-if="!vm.form.MC_ACCS_PO_TMPLT_H_ID" ng-click="save(form)" class="btn btn-sm green" ng-class="{'disabled':!CtrlTemplateForm.$valid}">Save</button>
                                    <button type="button" class="btn btn-sm default" ng-click="cancel()">Cancel</button>
                                </div>
                            </div>

                            <div class="row" style="margin:auto;padding-top:10px;" ng-if="vm.errors">
                                <div class="alert alert-warning" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                    <ul ng-repeat="field in vm.errors">
                                        <li ng-repeat="error in field" ng-bind="error"></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</script>

