<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">MultiTex ERP</a>
    </li>
    <li>
        <a href="#">Merchandising</a>
    </li>
    <li>
        <a href="#">Fabric Development Style Gallery</a>
    </li>
</ul>

<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>

    <div class="portlet-body">

        <div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
            <div class="page-splash">
                <div class="page-splash-message">
                    <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                </div>
            </div>
        </div>

        <form class="form-horizontal" role="form" name="frmStyleListFabDev" novalidate ng-submit="vm.getStyleData(vm.form.MC_BYR_ACC_ID)">

            <script type="text/ng-template" id="ImageShowup">
                <div class="modal-body">
                    <div class="thumbnail" style="text-align: center;">
                        <div id="divImgShowImage"><img id="imgShowImage" src="{{STYL_KEY_IMG}}" alt="No Photo" width="350px" height="350px"></div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4 col-md-offset-10">
                            <button type="button" class="btn btn-sm default" ng-click="cancel()">Cancel</button>
                        </div>
                    </div>

                </div>
            </script>



            <input id="access_token" data-ng-model="token" type="hidden"
                   data-ng-init="token='@Session["access_token"]'" />
            <input ng-model="vm.form.CREATED_BY" type="hidden"
                   data-ng-init="vm.form.CREATED_BY='@Session["multiScUserId"]'" />

            <input ng-model="vm.form.LAST_UPDATED_BY" type="hidden"
                   ng-init="vm.form.LAST_UPDATED_BY='@Session["multiScUserId"]'" />

            <div class="form-group">
                <div class="col-md-1" style="left: 5px;">
                    <a ui-sref="StyleHFabDev({MC_STYLE_H_ID : 0})" class="btn btn-sm blue">
                        <i class="fa fa-plus"></i> Add New
                    </a>
                </div>
                <div class="col-md-2 col-md-offset-5" style="padding-top:3px;" align="right">
                    <b>Buyer A/C</b>

                </div>
                <div class="col-md-3">
                    <div class="demo-section k-content">
                        <select kendo-drop-down-list name="MC_BYR_ACC_ID" id="MC_BYR_ACC_ID" class="form-control" options="vm.buyerAcList"
                                ng-model="vm.form.MC_BYR_ACC_ID"></select>
                    </div>
                </div>

                <div class="col-md-1">
                    <button type="submit" class="btn btn-sm blue" ng-disabled="!vm.form.MC_BYR_ACC_ID">
                        Show
                    </button>
                </div>
            </div>

        </form>

        <div style="padding:5px;">
            <kendo-grid k-options="vm.gridOptions" id="kendoGrid"></kendo-grid>           
        </div>

    </div>
</div>

