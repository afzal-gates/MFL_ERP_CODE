<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">MultiTex ERP</a>

    </li>
    <li>
        <a href="#">Knitting</a>

    </li>
    <li>
        <a href="#">Yarn Issue List</a>
    </li>
</ul>



<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>

    <div class="portlet-body">

        <div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
            <div class="page-splash">
                <div class="page-splash-message">
                    <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                </div>
            </div>
        </div>
        <input id="access_token" data-ng-model="token" type="hidden"
               data-ng-init="token='@Session["access_token"]'" />
        <input ng-model="vm.form.CREATED_BY" type="hidden"
               data-ng-init="vm.form.CREATED_BY='@Session["multiScUserId"]'" />

        <input id="access_token" ng-model="vm.form.LAST_UPDATED_BY" type="hidden"
               ng-init="vm.form.LAST_UPDATED_BY='@Session["multiScUserId"]'" />

        <div class="row" style="padding:5px">
            <div class="col-md-1">
                <a ui-sref="YarnIssue({pKNT_YRN_ISS_H_ID : 0})" class="btn btn-sm blue">
                    <i class="fa fa-plus"></i> Add New
                </a>
            </div>
        </div>


        <fieldset class="custom-fieldset">
            <legend class="custom-legend"><b>Searching Data</b></legend>
            <table class="clsTable">
                <thead class="clsthead">
                    <tr>
                        <th class="clstd">
                            <span aria-required="true" class="required"></span>
                            Requisition No
                        </th>
                        <th class="clstd" style="width:150px;">
                            <span aria-required="true" class="required"></span>
                            Date
                        </th>
                        <th class="clstd" >
                            <span aria-required="true" class="required"></span>
                            Requisition Type
                        </th>
                        <th class="clstd" >
                            <span aria-required="true" class="required"></span>
                            Action Status
                        </th>

                        <th class="clstd">
                            <span aria-required="true" class="required"></span>
                            Buyer
                        </th>

                        <th class="clstd">
                            <span aria-required="true" class="required"></span>
                            Order No
                        </th>
                        <th class="clstd">
                            <span aria-required="true" class="required"></span>
                            Yarn Count
                        </th>
                        <th class="clstd">
                            <span aria-required="true" class="required"></span>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clstr">
                        <td class="clstd">
                            <input type="text" name="STR_REQ_NO" ng-model="vm.form.STR_REQ_NO" class="form-control" />
                        </td>
                        <td class="clstd">
                            <input type="text" class="form-control" ng-click="STR_REQ_DT_LNopen($event)" datepicker-popup="{{vm.dtFormat}}"
                                   name="DC_MRR_DT" max-date="vm.today" ng-model="vm.form.STR_REQ_DT" is-open="STR_REQ_DT_LNopened"
                                   datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close" />

                        </td>
                        <td class="clstd">

                            <input type="text" name="REQ_TYPE_NAME" ng-model="vm.form.REQ_TYPE_NAME" class="form-control" />
                        </td>
                        <td class="clstd">

                            <input type="text" name="EVENT_NAME" ng-model="vm.form.EVENT_NAME" class="form-control" />
                        </td>
                        <td class="clstd">

                            <input type="text" name="BYR_ACC_NAME_EN" ng-model="vm.form.BYR_ACC_NAME_EN" class="form-control" />
                        </td>
                        <td class="clstd">

                            <input type="text" name="MC_ORDER_NO_LST" ng-model="vm.form.MC_ORDER_NO_LST" class="form-control" />
                        </td>
                        <td class="clstd">

                            <input type="text" name="YR_COUNT_NO" ng-model="vm.form.YR_COUNT_NO" class="form-control" />
                        </td>
                        
                        
                        <td class="clstd">
                            <button type="button" class="btn btn-sm default" ng-click="vm.searchData()"><i class="fa fa-search"></i> Search</button>
                        </td>

                    </tr>
                </tbody>
            </table>
        </fieldset>



        <div style="padding:5px;">

            <kendo-grid k-options="vm.gridOptions" k-data-source="vm.gridOptionsDS">
                <div k-detail-template>
                    <div>
                        <div kendo-grid k-options="vm.detailGridOptionsForIssue(dataItem)"></div>
                    </div>
                </div>
            </kendo-grid>

        </div>
        <div class="row">
            <div class="col-md-12" style="text-align:right">
               <button type="button" class="btn btn-sm green" ng-click="vm.submitAll(vm.form);">Clear Mark as Closed</button>
            </div>
        </div>
    </div>
</div>
