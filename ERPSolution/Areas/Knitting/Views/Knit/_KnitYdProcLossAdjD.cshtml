<div ng-init="Showed=true">

    <div class="col-md-3" ng-class="{'col-md-pull-0' : !Showed, 'col-md-3' : Showed }" ng-hide="!Showed" style="padding-right:0px;">
        <fieldset class="custom-fieldset" style="min-width:inherit" ng-disabled="form.RF_ACTN_STATUS_ID==87||form.RF_ACTN_STATUS_ID==19">
            <legend class="custom-legend">Y/D Program</legend>

            <div kendo-grid k-options="$parent.ydProgramOptions" k-data-source="$parent.ydProgramDataSource"></div>

            <div class="col-md-12" style="text-align:right;padding-right:0px;padding-top:5px">
                <button type="button" class="btn btn-sm blue" ng-click="vm.includeBill()">Include</button>
            </div>
        </fieldset>

    </div>


    <div class="col-md-9" ng-class="{'col-md-9' : Showed, 'col-md-12' : !Showed }">
        <a class="btn btn-xs btn-link" ng-click="Showed= !Showed"><i class="fa" ng-class="{'fa-chevron-left' : Showed, 'fa-chevron-right' : !Showed }"></i> {{Showed?'Hide':'Show'}} Y/D Program List</a>

        <fieldset class="custom-fieldset" ng-disabled="form.RF_ACTN_STATUS_ID==87||(form.RF_ACTN_STATUS_ID==19 && form.ACTION_USER_TYPE=='SENDER')">
            <legend class="custom-legend">P/L Detail</legend>

            <div kendo-grid k-options="vm.plAdjDtlOptions" k-data-source="vm.plAdjDtlDataSource"></div>
        </fieldset>



        <div class="col-md-12" style="padding-top:5px">
            <div class="form-group">

                <button type="button" class="btn btn-sm green" ng-click="vm.submitData(token, 'N', $parent.form.RF_ACTN_STATUS_ID)" ng-show="$parent.form.KNT_YD_PL_ADJ_H_ID<1"
                        ng-class="{'disabled':!frmYdProcLossAdj.$valid || $parent.form.RF_ACTN_STATUS_ID==87 || vm.plAdjDtlDataSource.data().length<1}">
                    Save
                </button>
                <button type="button" class="btn btn-sm yellow-gold" ng-click="vm.submitData(token, 'N', $parent.form.RF_ACTN_STATUS_ID)" ng-show="$parent.form.KNT_YD_PL_ADJ_H_ID>0"
                        ng-class="{'disabled':!frmYdProcLossAdj.$valid || $parent.form.RF_ACTN_STATUS_ID==87 || (form.RF_ACTN_STATUS_ID==19 && form.ACTION_USER_TYPE=='SENDER')}">
                    Update
                </button>

