                <button type="button" class="btn btn-sm blue" ng-click="vm.submitData(token, 'N', 19)" ng-show="$parent.form.RF_ACTN_STATUS_ID==18">Send for Verify</button>
                <button type="button" class="btn btn-sm blue" ng-click="vm.submitData(token, 'Y', $parent.form.RF_ACTN_STATUS_ID)" ng-show="$parent.form.RF_ACTN_STATUS_ID==19 && $parent.form.ACTION_USER_TYPE=='RECEIVER'">Verify</button>
