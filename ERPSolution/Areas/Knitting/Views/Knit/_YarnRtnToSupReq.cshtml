<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>
    <form name="formData" class="form-horizontal" style="background-color: white;">
        <div class="portlet-body">

            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Master Data</b></legend>
                <div class="row" style="padding-left: 5px; padding-right: 5px;">

                    <div class="row">
                        <div class="form-group">

                            <div class="col-md-1"></div>
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Return Type
                            </label>
                            <div class="col-md-3">
                                <select kendo-drop-down-list name="LK_REQ_STATUS_ID" id="LK_REQ_STATUS_ID" class="form-control required"
                                        options="vm.ReturnTypeList" ng-model="vm.form.LK_REQ_STATUS_ID"></select>
                                @*<select kendo-drop-down-list name="LK_YRN_RT_TYP_ID" id="LK_YRN_RT_TYP_ID" class="form-control required"
                                        options="vm.ReturnTypeList" ng-model="vm.form.LK_YRN_RT_TYP_ID"></select>*@
                                
                            </div>
                            <label class="control-label col-md-2 ">
                                <span aria-required="true" class="required">*</span>
                                Requisition Type
                            </label>
                            <div class="col-md-3">
                                <select kendo-drop-down-list name="RF_REQ_TYPE_ID" id="RF_REQ_TYPE_ID" class="form-control required"
                                        options="vm.reqTypeList" ng-model="vm.form.RF_REQ_TYPE_ID"></select>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-1">
                            </div>
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Requisition No
                            </label>
                            <div class="col-md-2">
                                <input type="text" name="STR_REQ_NO" ng-model="vm.form.STR_REQ_NO" placeholder="[Auto Generate]" readonly="readonly" class="form-control" />
                                <input type="hidden" id="KNT_YRN_STR_RPL_REQ_H_ID" name="KNT_YRN_STR_RPL_REQ_H_ID" ng-model="vm.form.KNT_YRN_STR_RPL_REQ_H_ID" />
                            </div>

                            <div class="col-md-1">
                            </div>
                            <label class="col-md-2 control-label">
                                <span aria-required="true" class="required">*</span>
                                Date of Requisition
                            </label>
                            <div class="col-md-2">
                                <input type="text" class="form-control required" ng-click="STR_REQ_DT_LNopen($event)" datepicker-popup="{{vm.dtFormat}}"
                                       name="STR_REQ_DT" max-date="vm.today" ng-model="vm.form.STR_REQ_DT" is-open="STR_REQ_DT_LNopened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close"
                                       required />

                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">

                            <div class="col-md-1">
                            </div>
                            <label class="control-label col-md-2 ">
                                <span aria-required="true" class="required">*</span>
                                Company
                            </label>
                            <div class="col-md-3">

                                <select kendo-drop-down-list name="HR_COMPANY_ID" id="HR_COMPANY_ID" class="form-control required"
                                        options="vm.companyList" ng-model="vm.form.HR_COMPANY_ID"></select>

                            </div>

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Store
                            </label>
                            <div class="col-md-3">
                                <select kendo-drop-down-list name="SCM_STORE_ID" id="SCM_STORE_ID" class="form-control required"
                                        options="vm.reqStoreList" ng-model="vm.form.SCM_STORE_ID"></select>

                            </div>

                        </div>
                    </div>


                    <div class="row">

                        <div class="form-group">

                            <div class="col-md-1">
                            </div>
                            <label class="control-label col-md-2 ">
                                <span aria-required="true" class="required">*</span>
                                Requisition By
                            </label>
                            <div class="col-md-3">
                                <select id="customers" kendo-drop-down-list options="vm.userList" k-ng-delay="vm.userList" 
                                        ng-model="vm.form.STR_REQ_BY" class="form-control" style="width:100%;"></select>

                            </div>
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Requisition To
                            </label>
                            <div class="col-md-3">
                                <select id="customers" kendo-drop-down-list options="vm.userList" k-ng-delay="vm.userList"
                                        ng-model="vm.form.STR_REQ_TO" class="form-control" style="width:100%;"></select>

                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">

                            <div class="col-md-1">
                            </div>
                            <label class="control-label col-md-2 ">
                                <span aria-required="true" class="required"></span>
                                Remarks
                            </label>
                            <div class="col-md-8">
                                <textarea id="REMARKS" name="REMARKS" ng-model="vm.form.REMARKS" class="form-control"></textarea>
                            </div>

                        </div>
                    </div>

                </div>
            </fieldset>


            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Search By</b></legend>
                <div><label id="lblMsgSub"></label></div>
                <div class="row" style="padding-left: 5px; padding-right: 5px;">

                    @**********************************************************************@

                    <table class="clsTable">
                        <tr class="clsthead">
                            <td class="clstd">
                                Supplier
                            </td>

                            <td class="clstd">
                                Yarn Item
                            </td>
                            <td class="clstd">
                                Brand
                            </td>

                            <td class="clstd">
                                Lot #
                            </td>
                            <td class="clstd">
                                L/C #
                            </td>
                            <td class="clstd">
                                Action
                            </td>
                        </tr>
                        <tr class="clsthead">

                            <td class="clstd">
                                <select class="form-control" kendo-drop-down-list name="SCM_SUPPLIER_ID" id="SCM_SUPPLIER_ID" k-option-label="'-- Select Supplier --'"
                                        k-data-text-field="'SUP_TRD_NAME_EN'" k-data-value-field="'SCM_SUPPLIER_ID'" ng-disabled="vm.form.SUP_CTRL_DISABLE>0"
                                        k-auto-bind="'true'" k-data-source="vm.supplierList" k-delay="vm.supplierList" k-filter="'contains'"
                                        ng-model="vm.form.SCM_SUPPLIER_ID" k-on-change="vm.getOtherData(kendoEvent)"></select>

                            </td>
                            <td class="clstd">
                                <select class="form-control " kendo-drop-down-list name="YARN_ITEM_ID" id="YARN_ITEM_ID" k-option-label="'-- Select Yarn Item --'"
                                        k-data-text-field="'ITEM_NAME_EN'" k-data-value-field="'YARN_ITEM_ID'"
                                        k-auto-bind="'true'" k-data-source="vm.DyItemList" k-ng-delay="vm.DyItemList" k-filter="'contains'"
                                        ng-disabled="vm.form.KNT_YRN_STR_RPL_REQ_H_ID>0" ng-model="vm.form.YARN_ITEM_ID" k-on-change="vm.getItemStock(kendoEvent)"></select>

                            </td>
                            <td class="clstd">
                                <select class="form-control" kendo-drop-down-list name="RF_BRAND_ID" id="RF_BRAND_ID" k-option-label="'-- Select Brand --'"
                                        k-data-text-field="'BRAND_NAME_EN'" k-data-value-field="'RF_BRAND_ID'"
                                        k-auto-bind="'true'" k-data-source="vm.categoryBrandList" k-ng-delay="vm.categoryBrandList" k-filter="'contains'" ng-disabled="vm.form.KNT_YRN_STR_RPL_REQ_H_ID>0" ng-model="vm.form.RF_BRAND_ID"></select>

                            </td>

                            <td class="clstd">
                                <input type="text" name="YRN_LOT_NO" ng-model="vm.form.YRN_LOT_NO" ng-hide="vm.form.KNT_YRN_STR_REQ_H_ID>0" ng-disabled="vm.form.KNT_YRN_STR_RPL_REQ_H_ID>0" class="form-control" />

                                <select class="form-control" ng-hide="!vm.form.KNT_YRN_STR_REQ_H_ID>0" kendo-drop-down-list name="KNT_YRN_LOT_ID" id="KNT_YRN_LOT_ID" k-option-label="'-- Select Lot # --'"
                                        k-data-text-field="'YRN_LOT_NO'" k-data-value-field="'KNT_YRN_LOT_ID'"
                                        k-auto-bind="'true'" k-data-source="vm.yarnLotList" k-ng-delay="vm.yarnLotList" k-filter="'contains'" ng-disabled="vm.form.KNT_YRN_STR_RPL_REQ_H_ID>0" ng-model="vm.form.KNT_YRN_LOT_ID"></select>

                            </td>
                            <td class="clstd">
                                <input type="text" name="IMP_LC_NO" ng-model="vm.form.IMP_LC_NO" class="form-control" />

                            </td>
                            <td class="clstd">
                                <button type="button" class="btn btn-sm " ng-disabled="vm.form.KNT_YRN_STR_RPL_REQ_H_ID>0" ng-click="vm.getRequisitionInfo()">Search</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </fieldset>


            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Details Data</b></legend>
                <table class="clsTableMtex">

                    <tr class="clstheadMtex">

                        <td class="clstdMtex">
                            <b>Yarn Item</b>
                        </td>
                        <td class="clstdMtex">
                            <b>Brand</b>
                        </td>
                        <td class="clstdMtex">
                            <b>Lot #</b>
                        </td>
                        <td class="clstdMtex">
                            <b>L/C #</b>
                        </td>
                        <td class="clstdMtex">
                            <b>Stock Qty(Kg)</b>
                        </td>

