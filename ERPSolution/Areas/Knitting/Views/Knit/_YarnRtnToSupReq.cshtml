                        </td>

                        <td class="clstdMtex">
                            {{item.STOCK_QTY}}
                        </td>
                        @*<td class="clstdMtex">
                            <input type="number" name="PACK_ISS_QTY" ng-model="item.PACK_ISS_QTY" style="max-width:80px; text-align:right;" class="form-control" />

                        </td>*@

                        <td class="clstdMtex">
                            <input type="number" name="REQ_RTN_QTY" ng-model="item.REQ_RTN_QTY" style="max-width:80px; text-align:right;" ng-change="vm.checkReturnQty(item)" class="form-control " />

                        </td>
                        <td class="clstdMtex">
                            <input type="text" name="SP_NOTE" ng-model="item.SP_NOTE" style="max-width:180px; text-align:right;" class="form-control" />

                        </td>

                        <td class="clstdMtex">

                            <button type="button" ng-if="!vm.formItem.uid" class="btn btn-sm green" style="max-width:100px;" ng-click="vm.addToGrid(item)">Add to Grid</button>
                        </td>
                    </tr>
                </table>

                <div style="padding:3px;">
                </div>

                <div style="padding:3px;">
                </div>

                <div style="padding:2px;">
                    <div kendo-grid k-options="vm.gridOptionsRtnItem" id="IDRequisitionDS" k-data-source="vm.ReturnItemList"></div>
                </div>

                <div style="padding:3px;">
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <button type="button" class="btn btn-sm blue" ui-sref="YarnRtnToSupReqList">Back To List</button>
                        <button type="submit" ng-if="vm.form.KNT_YRN_STR_RPL_REQ_H_ID>0" class="btn btn-sm yellow-gold" ng-disabled="!vm.form.RF_ACTN_STATUS_ID>0" ng-click="vm.submitConfirm(vm.form);">Submit</button>
                        <button type="submit" ng-if="!vm.form.KNT_YRN_STR_RPL_REQ_H_ID>0" class="btn btn-sm green" ng-click="vm.submitAll(vm.form);">Save</button>
                        <button type="button" class="btn btn-sm default" ui-sref="YarnRtnToSupReq({pKNT_YRN_STR_RPL_REQ_H_ID : 0})" ui-sref-opts="{reload: true}">Cancel</button>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        @*<button type="button" ng-if="vm.form.KNT_YRN_STR_RPL_REQ_H_ID>0" class="btn btn-sm blue" ng-click="vm.sendMail()">Email</button>*@
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Action Status
                    </label>
                    <div class="col-md-2" ng-if="vm.form.RF_ACTN_VIEW>0">
                        <select kendo-drop-down-list name="RF_ACTN_STATUS_ID" id="RF_ACTN_STATUS_ID" class="form-control required"
                                options="vm.statusList" ng-model="vm.form.RF_ACTN_STATUS_ID" required></select>
                    </div>

                    <div class="col-md-2" ng-if="!vm.form.RF_ACTN_VIEW>0">

                        <input type="text" ng-model="vm.form.ACTN_STATUS_NAME" style="width: 100%;" readonly="readonly" />
                        <input type="hidden" ng-model="vm.form.RF_ACTN_STATUS_ID" />

                    </div>
                </div>
            </fieldset>

        </div>
        <div style="padding:3px;">
        </div>
    </form>
</div>
