<div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
    <div class="page-splash">
        <div class="page-splash-message">
            <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
        </div>
    </div>
</div>

<div class="portlet box blue-dark">


    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
            @*<a href="javascript:;" class="collapse">
                </a>*@
            @*<a href="#portlet-config" data-toggle="modal" class="config">
                </a>
                <a href="javascript:;" class="reload">
                </a>*@
            @*<a href="javascript:;" class="remove">
                </a>*@
        </div>
    </div>

    <div class="portlet-body">

        <form class="form-horizontal form-body" name="frmOilReqIss4SubStr">
            <input id="access_token" data-ng-model="token" type="hidden" data-ng-init="token='@Session["access_token"]'" />

            <div class="row">
                <div class="col-md-12">

                    <fieldset class="custom-fieldset" style="margin-bottom:5px">
                        <legend class="custom-legend">Key Information</legend>

                        <div class="row" style="margin:auto;" ng-show="vm.errors">
                            <div class="alert alert-danger" role="alert">
                                @*<button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>*@
                                <div style="padding: 0px 0px 15px 25px; ">
                                    <b>Please fix the following errors ....</b>
                                </div>
                                <ul ng-repeat="field in vm.errors">
                                    <li ng-repeat="error in field" ng-bind="error"></li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-group">
                            
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Requisition For
                            </label>
                            <div class="col-md-3">
                                <select class="form-control" kendo-drop-down-list name="INV_ITEM_CAT_ID" k-option-label="'-- Select Category --'"
                                        k-data-text-field="'ITEM_CAT_NAME_EN'" k-data-value-field="'INV_ITEM_CAT_ID'" k-filter="'contains'"
                                        k-auto-bind="'true'" k-options="vm.categoryOptions" k-data-source="vm.categoryDataSource" @*k-ng-delay="vm.styleList"*@
                                        ng-disabled="vm.form.RF_ACTN_STATUS_ID>44"
                                        ng-model="vm.form.INV_ITEM_CAT_ID" required></select>
                            </div>

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Requisition Type
                            </label>
                            <div class="col-md-3">
                                <select class="form-control" kendo-drop-down-list name="RF_REQ_TYPE_ID" k-option-label="'-- Select Req Type --'"
                                        k-data-text-field="'REQ_TYPE_NAME'" k-data-value-field="'RF_REQ_TYPE_ID'" k-filter="'contains'"
                                        k-auto-bind="'true'" k-options="vm.reqTypeOptions" k-data-source="vm.reqTypeDataSource" @*k-ng-delay="vm.styleList"*@
                                        ng-disabled="vm.form.RF_ACTN_STATUS_ID>44"
                                        ng-model="vm.form.RF_REQ_TYPE_ID" required></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Company
                            </label>
                            <div class="col-md-3">
                                <select class="form-control" kendo-drop-down-list name="HR_COMPANY_ID" k-option-label="'-- Select Company --'"
                                        k-data-text-field="'COMP_NAME_EN'" k-data-value-field="'HR_COMPANY_ID'" k-filter="'contains'"
                                        k-auto-bind="'true'" k-options="vm.companyOptions" k-data-source="vm.companyDataSource" @*k-ng-delay="vm.styleList"*@
                                        ng-disabled="vm.form.RF_ACTN_STATUS_ID>44"
                                        ng-model="vm.form.HR_COMPANY_ID" required></select>
                            </div>

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Department
                            </label>
                            <div class="col-md-3">
                                <select class="form-control" kendo-drop-down-list name="HR_DEPARTMENT_ID" k-option-label="'-- Select Department --'"
                                        k-data-text-field="'DEPARTMENT_NAME_EN'" k-data-value-field="'HR_DEPARTMENT_ID'" k-filter="'contains'"
                                        k-auto-bind="'true'" k-options="vm.departmentOptions" k-data-source="vm.departmentDataSource" @*k-ng-delay="vm.styleList"*@
                                        ng-disabled="vm.form.RF_ACTN_STATUS_ID>44"
                                        ng-model="vm.form.HR_DEPARTMENT_ID" required></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Issue From
                            </label>
                            <div class="col-md-3">
                                <select class="form-control" kendo-drop-down-list name="ISS_STORE_ID" k-option-label="'-- Select Store --'"
                                        k-data-text-field="'STORE_NAME_EN'" k-data-value-field="'SCM_STORE_ID'" k-filter="'contains'"
                                        k-auto-bind="'true'" k-options="vm.storeOptions" k-data-source="vm.storeDataSource" @*k-ng-delay="vm.styleList"*@
                                        ng-disabled="vm.form.RF_ACTN_STATUS_ID>44"
                                        ng-model="vm.form.ISS_STORE_ID" required></select>                    
                            </div>

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Issue To
                            </label>
                            <div class="col-md-3">
                                <select class="form-control" kendo-drop-down-list name="RCV_STORE_ID" k-option-label="'-- Select Store --'"
                                        k-data-text-field="'STORE_NAME_EN'" k-data-value-field="'SCM_STORE_ID'" k-filter="'contains'"
                                        k-auto-bind="'true'" k-options="vm.storeOptions" k-data-source="vm.storeDataSource" @*k-ng-delay="vm.styleList"*@
                                        ng-disabled="vm.form.RF_ACTN_STATUS_ID>44"
                                        ng-model="vm.form.RCV_STORE_ID" required></select>                                
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">                                
                                Requisition No
                            </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="STR_REQ_NO" placeholder="[Auto Gen]" ng-model="vm.form.STR_REQ_NO" readonly />
                            </div>

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Date of Requisition
                            </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control required" ng-click="vm.STR_REQ_DT_LNopen($event)" datepicker-popup="{{vm.dtFormat}}"
                                       name="STR_REQ_DT" max-date="vm.today" is-open="vm.STR_REQ_DT_LNopened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close"
                                       ng-disabled="vm.form.RF_ACTN_STATUS_ID>44"
                                       ng-model="vm.form.STR_REQ_DT" required />
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Requisition By
                            </label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="STR_REQ_BY_NAME" ng-model="vm.form.STR_REQ_BY_NAME" data-ng-init="vm.form.STR_REQ_BY_NAME='@Session["multiLoginEmpName"]'" readonly />
                                @*<textarea ng-model="vm.form.EMPLOYEE_PROFILE" rows="1" class="form-control"
                                          data-ng-init="vm.form.EMPLOYEE_PROFILE='@Session["multiLoginEmpName"]' + ', '+'@Session["multiLoginEmpDesigName"]'+', '+'@Session["multiLoginEmpCoreDeptName"]'" ng-disabled="true" />*@
                            </div>

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Requisition To
                            </label>
                            <div class="col-md-3">
                                <select class="form-control" kendo-drop-down-list name="STR_REQ_TO" k-option-label="'-- Select User --'"
                                        @*k-template="vm.userTemplate" k-value-template="vm.userValueTemplate"*@
                                        k-data-text-field="'LOGIN_ID'" k-data-value-field="'SC_USER_ID'" k-filter="'contains'"
                                        k-auto-bind="'true'" k-options="vm.userOptions" k-data-source="vm.userDataSource" @*k-ng-delay="vm.styleList"*@
                                        ng-disabled="vm.form.RF_ACTN_STATUS_ID>44"
                                        ng-model="vm.form.STR_REQ_TO" required></select>
                            </div>
                        </div>

                        
                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Remarks
                            </label>
                            <div class="col-md-8">
                                <textarea class="form-control" name="ISS_REMARKS" ng-model="vm.form.ISS_REMARKS" rows="2"></textarea>
                            </div>

                        </div>


                    </fieldset>

                    
                    <fieldset class="custom-fieldset">
                        <legend class="custom-legend"><b>Details Data</b></legend>
                        
                        <div style="padding:2px;">
                            <div kendo-grid k-options="vm.reqDtlOptions" k-data-source="vm.reqDtlDataSource"></div>
                        </div>

                    </fieldset>




                </div>

                <div class="col-md-12" style="padding-top:5px; padding-right:30px">
                    <div class="form-group" @*style="text-align:right"*@>
                        <div class="col-md-6">
                            @*<button class="btn btn-sm green" type="button" ng-click="vm.submitData(token)" ng-show="vm.form.SCM_STR_OIL_REQ_H_ID<1"
                                    ng-class="{'disabled':frmOilReqIss4SubStr.$invalid}">
                                Save
                            </button>*@

                            <button class="btn btn-sm yellow-gold" type="button" ng-click="vm.submitIssueRequisition('N')" ng-show="vm.form.SCM_STR_OIL_REQ_H_ID>0"
                                    ng-class="{'disabled':frmOilReqIss4SubStr.$invalid||vm.form.RF_ACTN_STATUS_ID==46}">
                                Update
                            </button>

                            @*<button class="btn btn-sm blue" type="button" ng-click="vm.cancel()">
                                Cancel
                            </button>*@

                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn btn-sm blue" type="button" ng-click="vm.submitIssueRequisition('Y')" ng-show="vm.form.SCM_STR_OIL_REQ_H_ID>0"
                                    ng-class="{'disabled':frmOilReqIss4SubStr.$invalid||vm.form.RF_ACTN_STATUS_ID==46}">
                                Finalize
                            </button>

                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn btn-sm blue-hoki" type="button" ng-click="vm.backToList()"
                                    @*ng-class="{'disabled':$parent.frmSampleProduction.$invalid||$parent.IS_PROD_SUBMIT=='Y'||$parent.HAS_DATA_PROD_GRID=='N'}"*@>
                                Back
                            </button>  
                            
                            @*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn btn-sm blue" type="button" ng-click="vm.submitIssueRequisition()" ng-show="vm.form.RF_ACTN_STATUS_ID==44"
                                    ng-class="{'disabled':frmOilReq4SubStr.$invalid||vm.form.SCM_STR_OIL_REQ_H_ID<1}">
                                Submit
                            </button>*@                          
                        </div>

                        <div class="col-md-6">
                            <label class="control-label col-md-5">
                                <span aria-required="true" class="required">*</span>
                                Take Action {{vm.form.RF_ACTN_STATUS_ID}}
                            </label>
                            <div class="col-md-7">
                                <select class="form-control" kendo-drop-down-list name="RF_ACTN_STATUS_ID" k-option-label="'-- Select Status --'"
                                        k-data-text-field="'ACTN_STATUS_NAME'" k-data-value-field="'RF_ACTN_STATUS_ID'" k-filter="'contains'"
                                        k-auto-bind="'true'" k-options="vm.actionOptions" k-data-source="vm.actionDataSource" @*k-ng-delay="vm.styleList"*@
                                        ng-model="vm.form.RF_ACTN_STATUS_ID_NEXT" required></select>
                            </div>
                        </div>
                    </div>
                </div>

                @*<pre>{{frmOilReqIss4SubStr.$error|json}}</pre>*@
                @*<pre>{{vm.form|json}}</pre>*@

            </div>
        </form>



    </div>

</div>











