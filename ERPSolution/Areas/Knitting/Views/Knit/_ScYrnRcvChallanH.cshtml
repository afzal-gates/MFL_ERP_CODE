                                                k-data-text-field="'SUP_TRD_NAME_EN'" k-data-value-field="'SCM_SUPPLIER_ID'"
                                                k-auto-bind="'true'" k-options="vm.supplierOption" k-data-source="vm.supplierDataSource" ng-model="vm.form.SCM_SUPPLIER_ID"
                                                required></select>
                                    </div>

                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-sm blue" ng-click="vm.getProgramList()" title="Search"><i class="fa fa-search"></i> </button>
                                    </div>

                                </div>

                                @*<div class="form-group">
                                                                        
                                    <div class="col-md-offset-3 col-md-5">
                                        <button type="button" class="btn btn-sm blue" ng-click="vm.getProgramList()" title="Search"><i class="fa fa-search"></i> </button>
                                    </div>

                                </div>*@

                                
                                @*<div class="form-group" ng-show="vm.IS_PROG_PARAM=='Y'">
