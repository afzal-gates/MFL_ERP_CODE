                                    </div>
                                </div>*@

                       
                            </fieldset>


                            <div class="form-group" @*ng-show="vm.IS_PROG_PARAM=='Y'"*@ style="padding-top:10px">
                                <div class="col-md-12" style="padding-right:10px">                                    
                                    <kendo-grid k-options="vm.kntScProgGridOption" k-data-source="vm.kntScProgGridDataSource" k-on-change="vm.onChangeSelectProg(dataItem)"></kendo-grid>
