                                        k-auto-bind="'true'" k-data-source="vm.operatorDataSource" k-ng-delay="vm.operatorDataSource"
                                        k-filter="'contains'" ng-model="vm.form.OPERATOR_ID"></select>

                            </div>

                        </div>


                        <div class="form-group">
                           
                            <label class="col-md-2 control-label">
                                <span aria-required="true" class="requiredSub">*</span>
                                Machine
                            </label>
                            <div class="col-md-3">

                                <select kendo-drop-down-list name="DF_MACHINE_ID" id="DF_MACHINE_ID" class="form-control required"
                                        options="vm.machineList" ng-model="vm.form.DF_MACHINE_ID"></select>
                            </div>
                            <label class="col-md-3 control-label">
                                <span aria-required="true" class="required">*</span>
                                Process
                            </label>
                            <div class="col-md-3">
                                <select kendo-drop-down-list name="DF_PROC_TYPE_ID" id="DF_PROC_TYPE_ID" class="form-control required"
                                        options="vm.processList" ng-model="vm.form.DF_PROC_TYPE_ID" ng-change="vm.searchMappingList()"></select>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required">*</span>
                                Wash Qty(Pcs)
                            </label>
                            <div class="col-md-2">

                                <input type="number" name="WASH_QTY" id="WASH_QTY" ng-model="vm.form.WASH_QTY" class="form-control" />

                            </div>

                            <div class="col-md-1">
                            </div>
                            <div class="col-md-1">
                            </div>
                            <label class="col-md-2 control-label">
                                <span aria-required="true" class="required">*</span>
                                Ref Challan
                            </label>
                            <div class="col-md-3">
                                <input type="text" name="REF_GT_PASS_NO" id="REF_GT_PASS_NO" ng-model="vm.form.REF_GT_PASS_NO" class="form-control" />


                            </div>
                        </div>


                        <div class="form-group">

                            <label class="control-label col-md-2 ">
                                <span aria-required="true" class="required"></span>
                                Remarks
                            </label>
                            <div class="col-md-9">
                                <textarea id="REMARKS" name="REMARKS" ng-model="vm.form.REMARKS" class="form-control"></textarea>
                            </div>

                        </div>



                    </fieldset>

                </div>

                <div class="col-md-4" style="padding-left:5px;">
                    <fieldset class=" custom-fieldset">
                        <legend class="custom-legend"><b>Total</b></legend>

                        <div class="form-group">
                            <div class="col-md-1"></div>

                            <label class="control-label col-md-5">
                                <span aria-required="true" class="required">*</span>
                                Today's Target:
                            </label>
                            <div class="col-md-6">
                                <input type="text" ng-model="vm.form.TGT_DAY_PROD_QTY" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-1"></div>

                            <label class="control-label col-md-5">
                                <span aria-required="true" class="required">*</span>
                                Today's Production:
                            </label>
                            <div class="col-md-6">
                                <input type="text" ng-model="vm.form.TODAY_PROD_QTY" />
                            </div>
                        </div>
                        <div style="border-top:1px solid grey; padding-bottom:5px;">

                        </div>
                        <div class="form-group">
                            <div class="col-md-1"></div>

                            <label class="control-label col-md-5">
                                <span aria-required="true" class="required">*</span>
                                Due:
                            </label>
                            <div class="col-md-6">
                                <input type="text" ng-model="vm.form.DUE_WASH_QTY" />
                            </div>
                        </div>

                    </fieldset>

