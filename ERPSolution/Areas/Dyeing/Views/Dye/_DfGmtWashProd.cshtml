                                        k-data-source="vm.OrderDs" k-options="vm.OrderDs" ng-model="vm.form.MC_ORDER_H_ID"
                                        k-data-text-field="'ORDER_NO'" k-data-value-field="'MC_ORDER_H_ID'" k-on-select="vm.getShipmentList(kendoEvent);"
                                        k-auto-bind="'true'"></select>
                                @*<select kendo-drop-down-list name="STYLE_NO" id="STYLE_NO" class="form-control requiredSub3"
                                        k-filter="'contains'" k-option-label="'-- Select Style No--'" k-template="vm.templateStyle" k-value-template="vm.valueTemplateStyle"
                                        k-data-source="vm.StyleExtDs" ng-k-delay="vm.StyleExtDs" ng-model="vm.form.MC_STYLE_H_EXT_ID"
                                        k-data-text-field="'STYLE_NO'" k-data-value-field="'MC_STYLE_H_EXT_ID'" k-on-select="vm.getOrderList(kendoEvent)"
                                        k-auto-bind="'true'" ng-disabled="true"></select>*@
                            </div>

                        </div>

                        <div class="form-group">

                            @*<label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Order #
                            </label>
                            <div class="col-md-3">

                                <select class="form-control" kendo-drop-down-list name="MC_ORDER_H_ID" id="MC_ORDER_H_ID" k-option-label="'-- Select Order --'"
                                        k-data-text-field="'ORDER_NO'" k-data-value-field="'MC_ORDER_H_ID'" k-template="vm.templateOrder" k-value-template="vm.valueTemplateOrder"
                                        k-auto-bind="'true'" k-data-source="vm.OrderDs" k-ng-delay="vm.OrderDs" k-filter="'contains'" k-on-select="vm.getShipmentList(kendoEvent);"
                                        ng-model="vm.form.MC_ORDER_H_ID" ng-disabled="true"></select>
                            </div>
                            <div class="col-md-1"></div>*@

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Shipment Date
                            </label>
                            <div class="col-md-2">

                                <select class="form-control" kendo-drop-down-list name="MC_ORDER_SHIP_ID" id="MC_ORDER_SHIP_ID" k-option-label="'-- Select Shipment Date --'"
                                        k-data-text-field="'SHIP_DT'" k-data-value-field="'MC_ORDER_SHIP_ID'" k-template="vm.template" k-value-template="vm.valueTemplate"
                                        k-auto-bind="'true'" k-data-source="vm.shipmentDateDs" k-ng-delay="vm.shipmentDateDs" k-filter="'contains'"
                                        ng-model="vm.form.MC_ORDER_SHIP_ID" ng-disabled="true"></select>

                            </div>
                        </div>

                        <div class="form-group">

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Rqd Process
                            </label>
                            <div class="col-md-3">

                                <select kendo-drop-down-list id="DF_PROC_TYPE_ID" name="DF_PROC_TYPE_ID" class="form-control requiredSub"
                                        options="vm.processTypeList" ng-model="vm.form.DF_PROC_TYPE_ID" ng-disabled="true"></select>

                            </div>
                            <div class="col-md-1"></div>

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Wash Qty(Pcs)
                            </label>
                            <div class="col-md-2">

                                <input type="number" class="form-control" name="WASH_RQD_QTY" id="WASH_RQD_QTY" ng-model="vm.form.WASH_RQD_QTY" ng-disabled="true" />
                            </div>
                        </div>

                        <div class="form-group">

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Target (Pcs)/Hrs
                            </label>
                            <div class="col-md-2">

                                <input type="number" class="form-control" name="TGT_HR_PROD_QTY" id="TGT_HR_PROD_QTY" ng-model="vm.form.TGT_HR_PROD_QTY" ng-disabled="true" />

                            </div>

                            <div class="col-md-1">
                            </div>
                            <label class="col-md-3 control-label">
                                <span aria-required="true" class="required"></span>
                                Target (Pcs)/Day
                            </label>
                            <div class="col-md-2">
                                <input type="number" class="form-control" name="TGT_DAY_PROD_QTY" id="TGT_DAY_PROD_QTY" ng-model="vm.form.TGT_DAY_PROD_QTY" ng-disabled="true" />


                            </div>
                        </div>

                        <div class="form-group">

                            <label class="control-label col-md-2 ">
                                <span aria-required="true" class="required"></span>
                                Start Date
                            </label>
                            <div class="col-md-2">
                                <input type="text" class="form-control required" ng-click="TGT_ST_DT_LNopen($event)" ng-focus="TGT_ST_DT_LNopen($event)" datepicker-popup="{{vm.dtFormat}}"
                                       name="TGT_ST_DT" max-date="vm.today" ng-model="vm.form.TGT_ST_DT" is-open="TGT_ST_DT_LNopened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close"
                                       ng-disabled="true" />

                            </div>

                            <div class="col-md-1">
                            </div>
                            <div class="col-md-1">
                            </div>

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Close Date
                            </label>
                            <div class="col-md-2">
                                <input type="text" class="form-control required" ng-click="TGT_END_DT_LNopen($event)" ng-focus="TGT_END_DT_LNopen($event)" datepicker-popup="{{vm.dtFormat}}"
                                       name="TGT_END_DT" min-date="vm.today" ng-model="vm.form.TGT_END_DT" is-open="TGT_END_DT_LNopened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close"
