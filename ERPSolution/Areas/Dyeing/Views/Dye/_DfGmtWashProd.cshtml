    <form name="formData" class="form-horizontal" style="background-color: white;">
        <div class="portlet-body">


            <div class="form-group">
                <div class="col-md-8" style="padding-right:5px;">
                    <fieldset class=" custom-fieldset" ng-disabled="true">
                        <legend class="custom-legend"><b>Requisition Info</b></legend>
                        
                        <div class="form-group">

                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Floor
                            </label>
                            <div class="col-md-3">
                                <select class="form-control required" kendo-drop-down-list name="HR_PROD_FLR_ID" k-option-label="'-- Select Floor --'"
