                            <thead class="clstheadMtex">
                                <tr>
                                    <th class="clstdMtex">SL</th>
                                    <th class="clstdMtex">Date</th>
                                    <th class="clstdMtex">Shift</th>
                                    <th class="clstdMtex">Day Prod Qty</th>
                                </tr>
