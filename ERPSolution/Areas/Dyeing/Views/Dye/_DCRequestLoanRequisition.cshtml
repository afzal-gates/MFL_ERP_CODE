                                k-auto-bind="'true'" k-data-source="vm.supplierList" k-delay="vm.supplierList" k-filter="'contains'"
                                ng-model="vm.form.SCM_SUPPLIER_ID" k-on-change="vm.getSupplierLoanDtl(kendoEvent)"></select>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        Requisition No
                    </label>
                    <div class="col-md-2">
                        <input type="text" name="STR_REQ_NO" placeholder="[Auto Gen]" ng-model="vm.form.STR_REQ_NO" readonly="readonly" class="form-control" />
                        <input type="hidden" id="DYE_STR_REQ_H_ID" name="DYE_STR_REQ_H_ID" ng-model="vm.form.DYE_STR_REQ_H_ID" />
                    </div>

                    <div class="col-md-1">
                    </div>
                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required">*</span>
                        Date of Requisition
                    </label>
                    <div class="col-md-2">
                        <input type="text" class="form-control required" ng-click="STR_REQ_DT_LNopen($event)" ng-focus="STR_REQ_DT_LNopen($event)" datepicker-popup="{{vm.dtFormat}}"
                               name="STR_REQ_DT" max-date="vm.today" ng-model="vm.form.STR_REQ_DT" is-open="STR_REQ_DT_LNopened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close"
                               required />

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-1"></div>

                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Requisition By
                    </label>
                    <div class="col-md-2">
                        <select id="customers" kendo-drop-down-list options="vm.userList" ng-model="vm.form.STR_REQ_BY" class="form-control" style="width:100%;"></select>

                    </div>

                    <div class="col-md-1"></div>

                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Requisition To
                    </label>
                    <div class="col-md-2">
                        <select id="customers" kendo-drop-down-list options="vm.userList" ng-model="vm.form.STR_REQ_TO" class="form-control" style="width:100%;"></select>


                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Loan Ref. No
                    </label>
                    <div class="col-md-2">
                        <input type="text" name="SUP_LN_REQ_NO" placeholder="[Loan Ref. No]" ng-model="vm.form.SUP_LN_REQ_NO" class="form-control required" />
                    </div>

                    <label class="control-label col-md-3 ">
                        <span aria-required="true" class="required"></span>
                        Remarks
                    </label>
                    <div class="col-md-3">
                        <textarea id="REMARKS" name="REMARKS" ng-model="vm.form.REMARKS" class="form-control"></textarea>
                    </div>



                </div>

            </fieldset>

            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Details Data  <input type="button" class="form-control btn btn-sm yellow" ng-click="vm.openSupplierLoanDtl(vm.form.SCM_SUPPLIER_ID);" title="Show Supplier Details" value="Show Supplier Details" /></b></legend>
                <table style="width:100%">

                    <tr>
                        <td style="border: solid 1px black; width: 20%; padding-top: 5px; padding-bottom: 5px; padding-left: 5px; ">
                            <b>Dyes Chemical Item</b>
                        </td>

                        <td style="border: solid 1px black; width: 10%; padding-top: 5px; padding-bottom: 5px; padding-left:5px;">
                            <b>Brand</b>
                        </td>

                        <td style="border: solid 1px black; width: 5%; padding-top: 5px; padding-bottom: 5px; padding-left: 5px; ">
                            <b>Requested Stock</b>
                        </td>
                        <td style="border: solid 1px black; width: 5%; padding-top: 5px; padding-bottom: 5px; padding-left: 5px; ">
                            <b>Others Stock</b>
                        </td>
                        <td style="border: solid 1px black; width: 5%; padding-top: 5px; padding-bottom: 5px; padding-left: 5px; ">
                            <b>Reqd. Qty</b>
                        </td>

                        <td style="border: solid 1px black; width: 5%; padding-top: 5px; padding-bottom: 5px; padding-left: 5px; ">
                            <b>UoM</b>
                        </td>
                        <td style="border: solid 1px black; width: 10%; padding-top: 5px; padding-bottom: 5px; padding-left: 5px; ">
                            <b>Action</b>
                        </td>

                    </tr>
                    <tr class="">
                        <td style="padding:5px;border:solid 1px black;width:15%;">

                            <select class="form-control requiredSub " kendo-drop-down-list name="DC_ITEM_ID" id="DC_ITEM_ID" k-option-label="'-- Select Dyes Chemical Item --'"
                                    k-data-text-field="'ITEM_NAME_EN'" k-data-value-field="'INV_ITEM_ID'"
                                    k-auto-bind="'true'" k-data-source="vm.DyItemList" k-ng-delay="vm.DyItemList" k-filter="'contains'" ng-model="vm.formItem.DC_ITEM_ID" k-on-change="vm.getItemBrandName(kendoEvent)"></select>

                            <input type="hidden" name="DYE_STR_TR_REQ_H_ID" ng-model="vm.formItem.DYE_STR_TR_REQ_H_ID" class="form-control" />
                            <input type="hidden" name="KNT_YRN_RCV_D_ID" ng-model="vm.formItem.KNT_YRN_RCV_D_ID" class="form-control" />
                        </td>

                        <td style="padding:5px;border:solid 1px black;width: 10%;">
                            <input type="text" name="BRAND_NAME_EN" ng-model="vm.formItem.BRAND_NAME_EN" class="form-control" />
                        </td>

                        <td style="padding:5px;border:solid 1px black;width: 5%;">
                            <input type="number" name="CENTRAL_STK" ng-model="vm.formItem.CENTRAL_STK" class="form-control" readonly="readonly" />
                        </td>
                        <td style="padding:5px;border:solid 1px black;width: 5%;">
                            <input type="number" name="SUB_STK" ng-model="vm.formItem.SUB_STK" class="form-control" readonly="readonly" />

                        </td>
                        <td style="padding:5px;border:solid 1px black;width: 5%;">
                            <input type="number" name="RQD_QTY" ng-model="vm.formItem.RQD_QTY" min="1" class="form-control doubleSub" ng-change="vm.checkStock()" />

                        </td>
                        <td style="padding:5px;border:solid 1px black;width: 5%;">
                            <select class="form-control requiredSub" style="min-width: 50px; max-width: 160px;" kendo-drop-down-list name="QTY_MOU_ID" id="QTY_MOU_ID" k-option-label="'--UoM--'"
                                    k-data-text-field="'MOU_CODE'" k-data-value-field="'RF_MOU_ID'"
                                    k-auto-bind="'true'" k-data-source="vm.mOUList" k-filter="'contains'" ng-model="vm.formItem.QTY_MOU_ID"></select>

                        </td>

                        <td style="padding:5px;border:solid 1px black;width: 10%; text-align:center;">
                            <button type="button" ng-if="vm.formItem.uid" class="btn btn-sm yellow" ng-click="vm.addToGrid(vm.formItem)">Update to Grid</button>
                            <button type="button" ng-if="!vm.formItem.uid" class="btn btn-sm green" ng-click="vm.addToGrid(vm.formItem)">Add to Grid</button>
                        </td>
                    </tr>
                </table>

                <div style="padding:3px;">
                </div>

                <div style="padding:3px;">
                </div>

                <div style="padding:2px;">
                    <div kendo-grid k-options="vm.gridOptionsItem" id="IDRequisitionDS" k-data-source="vm.ReceiveItemList"></div>
                </div>

            </fieldset>
        </div>
        <div style="padding:3px;">
        </div>
        <div class="row">
            <div class="col-md-3">
                <button type="button" class="btn btn-sm blue" ui-sref="DCRequestLoanRequisitionList">Back To List</button>
                <button type="button" ng-if="vm.form.DYE_STR_REQ_H_ID>0" class="btn btn-sm yellow-gold" ng-disabled="!vm.form.RF_ACTN_STATUS_ID>0" ng-click="vm.submitAll(vm.form);">Submit</button>
                <button type="button" ng-if="!vm.form.DYE_STR_REQ_H_ID>0" class="btn btn-sm green" ng-disabled="!vm.form.RF_ACTN_STATUS_ID>0" ng-click="vm.submitAll(vm.form);">Save</button>
                <button type="button" class="btn btn-sm default" ui-sref="DCRequestLoanRequisition({pDYE_STR_REQ_H_ID : 0})" ui-sref-opts="{reload: true}">Cancel</button>
            </div>

            <label class="control-label col-md-1">
                <span aria-required="true" class="required">*</span>
                Take Action
            </label>
            <div class="col-md-2" ng-if="vm.form.RF_ACTN_VIEW>0">
                <select kendo-drop-down-list name="RF_ACTN_STATUS_ID" id="RF_ACTN_STATUS_ID" class="form-control required"
                        options="vm.statusList" ng-model="vm.form.RF_ACTN_STATUS_ID" required></select>
            </div>

            <div class="col-md-2" ng-if="!vm.form.RF_ACTN_VIEW>0">

                <input type="text" ng-model="vm.form.ACTN_STATUS_NAME" style="width: 100%;" readonly="readonly" />
                <input type="hidden" ng-model="vm.form.RF_ACTN_STATUS_ID" />

            </div>
            @*<div class="col-md-2">
                    <select kendo-drop-down-list name="RF_ACTN_STATUS_ID" id="RF_ACTN_STATUS_ID" class="form-control required"
                            options="vm.statusList" ng-model="vm.form.RF_ACTN_STATUS_ID" tabindex="5" required></select>
                </div>*@

        </div>
        <div style="padding:3px;">
        </div>
    </form>
</div>

