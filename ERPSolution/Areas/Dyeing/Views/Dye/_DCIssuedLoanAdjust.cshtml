                            <input type="hidden" name="DYE_SUP_LN_STK_ID" ng-model="item.DYE_SUP_LN_STK_ID" class="form-control" />
                            <input type="hidden" name="SCM_SUPPLIER_ID" ng-model="item.SCM_SUPPLIER_ID" class="form-control" />
                            <input type="hidden" name="DC_ITEM_ID" ng-model="item.DC_ITEM_ID" class="form-control" />
                            <input type="hidden" name="INV_ITEM_CAT_ID" ng-model="item.INV_ITEM_CAT_ID" class="form-control" />

                        </td>

                        <td class="clstdMtex">
                            {{item.BRAND_NAME_EN}}
                            @*<input type="text" name="BRAND_NAME_EN" ng-model="item.BRAND_NAME_EN" class="form-control" />*@
                        </td>

                        <td class="clstdMtex">
                            {{item.STOCK_QTY/1000}}
                            @*<input type="number" name="STOCK_QTY" ng-model="item.STOCK_QTY" class="form-control" readonly="readonly" />*@
                        </td>

                        <td class="clstdMtex">
                            {{item.LN_RTN_BAL_QTY}}
