                            </div>
                        </div>
                    </div>
                    <div style="padding:3px;">
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-1">
                            </div>
                            <label class="control-label col-md-2">
                                <span aria-required="true" class="required"></span>
                                Return Challan No
                            </label>
                            <div class="col-md-2">
                                <input type="text" name="RET_CHALAN_NO" @*placeholder="[Auto Gen]"*@ ng-model="vm.form.RET_CHALAN_NO" @*readonly="readonly"*@ class="form-control required" />
