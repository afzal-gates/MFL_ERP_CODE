                        </td>

                        <td class="clstdMtex">
                            {{item.PACK_MOU_CODE}}
                        </td>

                        <td class="clstdMtex">
                            <input type="number" name="QTY_PER_PACK" ng-model="item.QTY_PER_PACK" style="text-align:right;max-width:80px;" class="form-control" ng-class="{'doubleSub': item.RET_QTY>0}" ng-change="vm.checkStock(item)" />
