<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>
    <form name="formData" class="form-horizontal" style="background-color: white;">
        <div class="portlet-body">

            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Master Data</b></legend>
                <div><label id="lblMsgSub"></label></div>

                <div class="form-group">
                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        Requisition No
                    </label>
                    <div class="col-md-2">
                        <input type="text" name="PURC_REQ_NO" placeholder="[Auto Gen]" ng-model="vm.form.PURC_REQ_NO" readonly="readonly" class="form-control" />
                        <input type="hidden" id="SCM_PURC_REQ_H_ID" name="SCM_PURC_REQ_H_ID" ng-model="vm.form.SCM_PURC_REQ_H_ID" />
                    </div>

                    <div class="col-md-1">
                    </div>
                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required">*</span>
                        Date of Requisition
                    </label>
                    <div class="col-md-2">
                        <input type="text" class="form-control required" ng-click="PURC_REQ_DT_LNopen($event)" datepicker-popup="{{vm.dtFormat}}"
                               name="PURC_REQ_DT" max-date="vm.today" ng-model="vm.form.PURC_REQ_DT" is-open="PURC_REQ_DT_LNopened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close"
                               required />

                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2 ">
                        <span aria-required="true" class="required">*</span>
                        Payment Method
                    </label>
                    <div class="col-md-3">
                        <select kendo-drop-down-list name="LK_PAY_MTHD_ID" id="LK_PAY_MTHD_ID" class="form-control required"
                                options="vm.paymentMethodList" ng-model="vm.form.LK_PAY_MTHD_ID" tabindex="5" required></select>
                    </div>

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Location Source Type
                    </label>
                    <div class="col-md-3">

                        <select kendo-drop-down-list name="LK_LOC_SRC_TYPE_ID" id="LK_LOC_SRC_TYPE_ID" class="form-control required"
                                options="vm.sourceTypeList" ng-model="vm.form.LK_LOC_SRC_TYPE_ID" tabindex="5" required></select>
                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2 ">
                        <span aria-required="true" class="required">*</span>
                        Requisition Type
                    </label>
                    <div class="col-md-3">
                        <select kendo-drop-down-list name="LK_REQ_TYPE_ID" id="LK_REQ_TYPE_ID" class="form-control required"
                                options="vm.reqTypeList" ng-model="vm.form.LK_REQ_TYPE_ID" tabindex="5" required></select>
                    </div>

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Source of Requisition
                    </label>
                    <div class="col-md-3">

                        <select kendo-drop-down-list name="LK_REQ_SRC_ID" id="LK_REQ_SRC_ID" class="form-control required"
                                options="vm.reqSourceList" ng-model="vm.form.LK_REQ_SRC_ID" tabindex="5" required></select>
                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2 ">
                        <span aria-required="true" class="required">*</span>
                        Company/Importer
                    </label>
                    <div class="col-md-3">
                        <select kendo-drop-down-list name="HR_COMPANY_ID" id="HR_COMPANY_ID" class="form-control required"
                                options="vm.companyList" ng-model="vm.form.HR_COMPANY_ID" tabindex="5" required></select>

                    </div>

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Department
                    </label>
                    <div class="col-md-3">
                        <select kendo-drop-down-list name="HR_DEPARTMENT_ID" id="HR_DEPARTMENT_ID" class="form-control required"
                                options="vm.departmentList" ng-model="vm.form.HR_DEPARTMENT_ID" tabindex="5" required></select>

                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2 ">
                        <span aria-required="true" class="required">*</span>
                        Requisition By
                    </label>
                    <div class="col-md-3">
                        <select id="customers" kendo-drop-down-list options="vm.userList" ng-model="vm.form.PURC_REQ_BY" class="form-control" style="width:100%;"></select>

                        @*<input type="text" name="PURC_REQ_BY_NAME" ng-model="vm.form.PURC_REQ_BY_NAME" data-ng-init="vm.form.PURC_REQ_BY_NAME='@Session["multiLoginId"]'" readonly="readonly" class="form-control" />
                            <input type="hidden" name="PURC_REQ_BY" ng-model="vm.form.PURC_REQ_BY" data-ng-init="vm.form.PURC_REQ_BY=1" class="form-control" />*@
                    </div>

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Requisition To
                    </label>
                    <div class="col-md-3">
                        <select id="customers" kendo-drop-down-list options="vm.userList" ng-model="vm.form.PURC_REQ_TO" class="form-control" style="width:100%;"></select>

                        @*<input type="text" name="PURC_REQ_TO_NAME" ng-model="vm.form.PURC_REQ_TO_NAME" data-ng-init="vm.form.PURC_REQ_TO_NAME='@Session["multiLoginId"]'" readonly="readonly" class="form-control" />
                            <input type="hidden" name="PURC_REQ_TO" ng-model="vm.form.PURC_REQ_TO" data-ng-init="vm.form.PURC_REQ_TO=1" class="form-control" />*@

                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2 ">
                        <span aria-required="true" class="required">*</span>
                        Priority
                    </label>
                    <div class="col-md-3">
                        <select kendo-drop-down-list name="LK_PRIORITY_ID" id="LK_PRIORITY_ID" class="form-control required"
                                options="vm.PriorityList" ng-model="vm.form.LK_PRIORITY_ID" tabindex="5" required></select>
                    </div>

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Status
                    </label>
                    <div class="col-md-3">
                        <select kendo-drop-down-list name="LK_REQ_STATUS_ID" id="LK_REQ_STATUS_ID" class="form-control required"
                                options="vm.statusList" ng-model="vm.form.LK_REQ_STATUS_ID" tabindex="5" required></select>

                        @*<select class="form-control requiredSub" kendo-drop-down-list name="LK_REQ_STATUS_ID" id="LK_REQ_STATUS_ID" k-option-label="'-- Select Status --'"
                            k-data-text-field="'BANK_NAME_EN'" k-data-value-field="'LK_REQ_STATUS_ID'"
                            k-auto-bind="'true'" k-data-source="vm.bankListData" k-delay="vm.bankListData" k-filter="'contains'" ng-model="vm.form.LK_REQ_STATUS_ID"></select>*@
                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2 ">
                        <span aria-required="true" class="required"></span>
                        Remarks
                    </label>
                    <div class="col-md-8">
                        <textarea id="REMARKS" name="REMARKS" ng-model="vm.form.REMARKS" class="form-control"></textarea>
                    </div>

                </div>

            </fieldset>


            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b></b></legend>

                <div class="form-group">

                    <div class="col-md-1"></div>
                    <label class="control-label col-md-2" style="padding:5px;">
                        <span aria-required="true" class="required"></span>
                        Item Category
                    </label>
                    <div class="col-md-2" style="padding:5px;">

                        @*<select kendo-multi-select options='vm.itemCategoryList' id="INV_ITEM_CAT_LST" style="border: 1px solid #898383;" ng-model='vm.form.INV_ITEM_CAT_LST' class='required'></select>*@


                        <select class="form-control requiredSub" kendo-drop-down-list @*kendo-multi-select*@ name="INV_ITEM_CAT_ID" id="INV_ITEM_CAT_ID" k-option-label="'-- Select Category --'"
                                k-data-text-field="'ITEM_CAT_NAME_EN'" k-data-value-field="'INV_ITEM_CAT_ID'"
                                k-auto-bind="'true'" k-data-source="vm.itemCategoryList" k-delay="vm.itemCategoryList" k-filter="'contains'" ng-model="vm.form.INV_ITEM_CAT_ID" k-on-change="vm.getItemDataByCategory(kendoEvent)"></select>
                    </div>

                    <label class="col-md-1 control-label" style="padding:5px;">
                        <span aria-required="true" class="required">*</span>
                        Currency
                    </label>
                    <div class="col-md-2" style="padding:5px;">
                        <select kendo-drop-down-list id="RF_CURRENCY_ID" name="RF_CURRENCY_ID" class="form-control" @*ng-disabled="vm.isManagementType!=true"*@
                                options="vm.currencyList" ng-model="vm.form.RF_CURRENCY_ID"></select>
                    </div>
                    <label class="control-label col-md-1 " style="padding:5px;">
                        <span aria-required="true" class="required">*</span>
                        Quantity in
                    </label>
                    <div class="col-md-2" style="padding:5px;">
                        <select kendo-drop-down-list id="QTY_MOU_ID" name="QTY_MOU_ID" class="form-control requiredSub"
                                options="vm.mOUList" ng-model="vm.form.QTY_MOU_ID"></select>

                    </div>

                </div>

            </fieldset>


            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Details Data</b></legend>
                <table style="width:100%">

                    <tr>
                        <td style="border: solid 1px black; width: 15%; padding-top: 5px; padding-bottom: 5px; padding-left: 5px; ">
                            <b>Dyes/Chemical Item</b>
                        </td>
                        <td style="border: solid 1px black; width: 10%; padding-top: 5px; padding-bottom: 5px; padding-left:5px;">
                            <b>Brand</b>
