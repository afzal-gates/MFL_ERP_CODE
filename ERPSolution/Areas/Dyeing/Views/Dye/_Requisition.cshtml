                    </tr>
                </table>

                <div style="padding:3px;">
                </div>

                <div style="padding:3px;">
                </div>

                <div style="padding:2px;">
                    <div kendo-grid k-options="vm.gridOptionsItem" id="IDRequisitionDS" k-data-source="vm.RequisitionItemList"></div>
                </div>

            </fieldset>
        </div>
        <div style="padding:3px;">
        </div>
        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-sm blue" ui-sref="RequisitionList">Back To List</button>
                <button type="button" ng-if="vm.form.SCM_PURC_REQ_H_ID>0" class="btn btn-sm yellow-gold" ng-click="vm.submitAll(vm.form);">Update</button>
                <button type="button" ng-if="!vm.form.SCM_PURC_REQ_H_ID>0" class="btn btn-sm green" ng-click="vm.submitAll(vm.form);">Save</button>
                <button type="button" class="btn btn-sm default" ui-sref="Requisition({pSCM_PURC_REQ_H_ID : 0})" ui-sref-opts="{reload: true}">Cancel</button>
            </div>
        </div>
        <div style="padding:3px;">
        </div>
    </form>
</div>
