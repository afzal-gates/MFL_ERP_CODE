<div class="modal-body">
    <div class="portlet grey-cascade box">
        <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">{{alert.msg}}</alert>

        <div class="portlet-title">
            <div>
                <h3 style="padding-top:10px;margin-top:3px;">
                    Dyeing Batch Plan
                    <span class="pull-right"><i class="fa fa-times red" ng-click="cancel()"></i></span>
                </h3>
            </div>
        </div>
        <div class="portlet-body">
            <form class="form-horizontal" role="form" name="DyeingBatchPlanSchedule" novalidate>
                <div class="form-group">
                    <label class="col-md-2 control-label">
                        Plan Ref#
                    </label>
                    <div class="col-md-4" style="padding-top:5px;">
                        <input type="text" class="form-control" ng-model="form.SCDL_REF_NO" disabled>
                    </div>
                    <div class="col-md-4 col-md-offset-2" style="padding-top:5px;text-align:right;">
                        <div class="radio-list">
                            <label class="radio-inline">
                                <input type="radio" name="IS_SMP_BLK" ng-model="form.IS_SMP_BLK" ng-value="'B'" disabled> Bulk
                            </label>

                            <label class="radio-inline">
                                <input type="radio" name="IS_SMP_BLK" ng-model="form.IS_SMP_BLK" ng-value="'S'" disabled> Sample
                            </label>

                        </div>
                    </div>



                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">
                        From Dt
                    </label>
                    <div class="col-md-4" style="padding-top:5px;">
                        <input kendo-date-time-picker k-ng-model="form.START_DT" @*k-min="form.PRE_BC_END_DT"*@ k-options="datePickerOptions" class="form-control" style="width: 100%;" />
                    </div>
                    <label class="col-md-2 control-label">
                        To Dt
                    </label>
                    <div class="col-md-4" style="padding-top:5px;">
                        <input kendo-date-time-picker k-ng-model="form.END_DT" k-min="form.START_DT" k-rebind="form.START_DT" class="form-control" k-options="datePickerOptionsEnd" required style="width: 100%;" />
                    </div>
                </div>

                <div class="form-group" ng-if="form.DATE_DIFF">
                    <label class="col-md-2 control-label">
                        Duration
                    </label>
                    <div class="col-md-4" style="padding-top:5px;">
                        {{form.DATE_DIFF}} Days
                    </div>
                </div>


                <div class="form-group">
                    <label for="selectPeriod" class="col-md-2 control-label">
                        Note
                    </label>
                    <div class="col-md-10">
                        <textarea rows="3" name="SCDL_NOTE" class="form-control" cols="50" ng-model="form.SCDL_NOTE"></textarea>
                    </div>
                </div>



                <div class="form-group" ng-if="form.DYE_BATCH_SCDL_ID>0">
                    <label class="col-md-8 control-label"></label>
                    <div class="col-md-4" style="text-align:right;">
                        <div class="checkbox-list">
                            <label class="checkbox-inline" style="margin-left:20px">
                                <span><input type="checkbox" ng-model="form.IS_FINALIZED" ng-true-value="'Y'" ng-false-value="'N'"></span> Is Finalized?
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group form-actions">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="button" ng-if="form.DYE_BATCH_SCDL_ID<0" class="btn green btn-sm" ng-click="save(form)" ng-disabled="DyeingBatchPlanSchedule.$invalid"> Save</button>
                        <button type="button" ng-if="form.DYE_BATCH_SCDL_ID>0" class="btn btn-sm yellow-gold" ng-click="save(form)" ng-disabled="DyeingBatchPlanSchedule.$invalid">Update</button>
                        <button type="button" class="btn btn-default btn-sm" ng-click="cancel()">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>