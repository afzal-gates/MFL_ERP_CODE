<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">MultiTex ERP</a>

    </li>
    <li>
        <a href="#">Dyeing Finishing</a>

    </li>
    <li>
        <a href="#" ng-bind="vm.Title"></a>
    </li>
</ul>

<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>
    <form name="formData" class="form-horizontal" style="background-color: white;">
        <div class="portlet-body">

            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Program Information By Batch:</b></legend>
                <div><label id="lblMsg"></label></div>

                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2 ">
                        <span aria-required="true" class="required">*</span>
                        Company
                    </label>
                    <div class="col-md-3">
                        <select kendo-drop-down-list name="HR_COMPANY_ID" id="HR_COMPANY_ID" class="form-control required"
                                options="vm.companyList" ng-model="vm.form.HR_COMPANY_ID" tabindex="5" required></select>

                    </div>

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        S/C Party
                    </label>
                    <div class="col-md-2">
                        <select class="form-control required" kendo-drop-down-list name="SCM_SUPPLIER_ID" k-option-label="'-- Select S/C Party --'"
                                k-data-text-field="'SUP_TRD_NAME_EN'" k-data-value-field="'SCM_SUPPLIER_ID'" k-filter="'contains'"
                                k-auto-bind="'true'" k-data-source="vm.supplierList" k-ng-delay="vm.supplierList"
                                ng-model=" vm.form.SCM_SUPPLIER_ID"></select>
                    </div>
                    <div class="col-md-2">
                        <a ng-click="vm.loadPendingProgram();" class="btn btn-xs blue"><i class="fa fa-search"> Load</i></a>
                        <input type="checkbox" id="IS_ALT_PARTY" name="IS_ALT_PARTY" ng-model="vm.form.IS_ALT_PARTY" ng-true-value="'Y'" ng-false-value="'N'" />
                        <label for="IS_ALT_PARTY">Change Party?</label>
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        Chalan No
                    </label>
                    <div class="col-md-2">
                        <input type="text" name="CHALAN_NO" placeholder="[Auto Gen]" ng-model="vm.form.CHALAN_NO" readonly="readonly" class="form-control " />

                    </div>

                    <div class="col-md-1">
                    </div>
                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required">*</span>
                        Chalan Date
                    </label>
                    <div class="col-md-2">
                        <input type="text" class="form-control required" ng-click="CHALAN_DT_LNopen($event)" ng-focus="CHALAN_DT_LNopen($event)" datepicker-popup="{{vm.dtFormat}}"
                               name="CHALAN_DT" max-date="vm.today" ng-model="vm.form.CHALAN_DT" is-open="CHALAN_DT_LNopened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close"
                               required />

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-1"></div>

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        Gate-Pass No
                    </label>
                    <div class="col-md-2">
                        <input type="text" name="GATE_PASS_NO" ng-model="vm.form.GATE_PASS_NO" class="form-control" />

                    </div>


                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        Vehicle No
                    </label>
                    <div class="col-md-2">
                        <input type="text" name="VEHICLE_NO" ng-model="vm.form.VEHICLE_NO" class="form-control" />

                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-1"></div>

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        Carrier Name
                    </label>
                    <div class="col-md-3">
                        <input type="text" name="CARRIER_NAME" ng-model="vm.form.CARRIER_NAME" class="form-control" />

                    </div>

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        Issueing Store
                    </label>
                    <div class="col-md-3">

                        <select kendo-drop-down-list name="ISS_STORE_ID" id="ISS_STORE_ID" class="form-control required"
                                options="vm.storeList" ng-model="vm.form.ISS_STORE_ID" tabindex="5" required></select>
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-1"></div>

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        Remarks
                    </label>
                    <div class="col-md-8">
                        <textarea name="CARRIER_NAME" ng-model="vm.form.REMARKS" class="form-control"></textarea>

                    </div>
                </div>
            </fieldset>

            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Program List</b></legend>

                <div class="form-group" style="margin:auto;">
                    <table class="clsTableMtex">
                        <thead class="clstheadMtex">
                            <tr class="clstdMtex">
                                <th class="clstdMtex" style="width:5%;">SL #</th>
                                <th class="clstdMtex" style="width:10%;">S/C Program #</th>
                                <th class="clstdMtex" style="width:10%;">S/C Party</th>

                                <th class="clstdMtex" style="width:10%;">Buyer Name</th>
                                <th class="clstdMtex" style="width:8%;">Style</th>
                                <th class="clstdMtex" style="width:8%;">Order</th>
                                <th class="clstdMtex" style="width:5%;">Fabric Type</th>
                                <th class="clstdMtex" style="width:5%;">Fiber Composition</th>
                                <th class="clstdMtex" style="width:5%;">Dia Type</th>
                                <th class="clstdMtex" style="width:5%;">Fin. Dia</th>
                                <th class="clstdMtex" style="width:5%;">Req. GSM</th>
                                <th class="clstdMtex" style="width:5%;">Required Qty</th>
                                <th class="clstdMtex" style="width:5%;">Issued Qty</th>
                                <th class="clstdMtex" style="width:5%;">Select</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="clstdMtex" ng-repeat="item in vm.ScProgramList">
                                <td class="clstdMtex">
                                    {{$index+1}}
                                </td>
                                <td class="clstdMtex">
                                    {{item.PRG_ISS_NO}}
                                </td>
                                <td class="clstdMtex">
                                    {{item.SUP_TRD_NAME_EN}}
                                </td>

                                <td class="clstdMtex">
                                    {{item.BUYER_NAME_EN}}
                                    <input type="hidden" ng-model="item.KNT_STYL_FAB_ITEM_ID" />
                                    <input type="hidden" ng-model="item.DF_SC_PRG_ISS_BT_D1_ID" />
                                    <input type="hidden" ng-model="item.DF_SC_PRG_ISS_BT_D1_ID" />
                                    <input type="hidden" ng-model="item.DF_SC_PRG_ISS_BT_D1_ID" />
                                    <input type="hidden" ng-model="item.DF_SC_PRG_ISS_BT_D1_ID" />
                                    <input type="hidden" ng-model="item.DF_SC_PRG_ISS_BT_D1_ID" />
                                </td>
                                <td class="clstdMtex">
                                    {{item.STYLE_NO}}
                                </td>
                                <td class="clstdMtex">
                                    {{item.ORDER_NO}}
                                </td>
                                <td class="clstdMtex">
                                    {{item.FAB_TYPE_SNAME}}
                                </td>
                                <td class="clstdMtex">
                                    {{item.FIB_COMP_NAME}}
                                </td>
                                <td class="clstdMtex">
                                    {{item.LK_DIA_TYPE_NAME}}
                                </td>
                                <td class="clstdMtex">
                                    {{item.FIN_DIA}}
                                </td>
                                <td class="clstdMtex">
                                    {{item.RQD_GSM}}
                                </td>
                                @*<td class="clstdMtex">
                                    {{item.ISS_ROLL_QTY}}
                                </td>*@
                                <td class="clstdMtex">
                                    {{item.RQD_QTY}}
                                </td>
                                <td class="clstdMtex">
                                    {{item.ISS_QTY}}
                                </td>

                                <td class="clstdMtex">
                                    <input type="checkbox" id="IS_SELECT" ng-model="item.IS_SELECT" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div style="padding:3px;">
                    </div>
                    <div class="row">
                        <div class="col-md-11">
                        </div>
                        <div class="col-md-1">
                            <a class="btn btn-sm yellow-gold" ng-disabled="!vm.form.RF_ACTN_STATUS_ID>0" ng-click="vm.addToGrid(vm.ScProgramList);"> Add to Grid</a>

                        </div>
                    </div>
                </div>

                <div style="padding:3px;">
                </div>
                <div class="form-group" style="margin:auto;">
                    <div kendo-grid k-options="vm.gridOptions" k-data-source="vm.ScItemListDS"></div>
                </div>
            </fieldset>

        </div>
        <div style="padding:3px;">
        </div>
        <div class="row">
            <div class="col-md-4">
                <button type="button" class="btn btn-sm blue" ui-sref="ScProgramChallanList">Back To List</button>
                <button type="button" ng-if="vm.form.DF_SC_BT_CHL_ISS_H_ID>0" class="btn btn-sm yellow-gold" ng-disabled="!vm.form.RF_ACTN_STATUS_ID>0" ng-click="vm.submitAll(vm.form,'N','Y');"> Finalize</button>
                <button type="button" ng-if="vm.form.DF_SC_BT_CHL_ISS_H_ID>0" class="btn btn-sm yellow-lemon" ng-disabled="!vm.form.RF_ACTN_STATUS_ID>0" ng-click="vm.submitAll(vm.form,'Y','N');"> Update</button>
                <button type="button" ng-if="vm.form.DF_SC_BT_CHL_ISS_H_ID>0" class="btn btn-sm green" ng-click="vm.printRDLC(vm.form);"> Print</button>
                <button type="button" ng-if="!vm.form.DF_SC_BT_CHL_ISS_H_ID>0" class="btn btn-sm green" ng-disabled="!vm.form.RF_ACTN_STATUS_ID>0" ng-click="vm.submitAll(vm.form,'N','N');">Save</button>
                <button type="button" class="btn btn-sm default" ui-sref="ScProgramChallan({pDF_SC_BT_CHL_ISS_H_ID : 0})" ui-sref-opts="{reload: true}">Cancel</button>

            </div>

        </div>
        <div style="padding:3px;">
        </div>
    </form>
</div>
