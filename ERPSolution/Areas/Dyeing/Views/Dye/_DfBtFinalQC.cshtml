<style>
    .dropdown-header {
        border-width: 0 0 1px 0;
        text-transform: uppercase;
    }

        .dropdown-header > span {
            display: inline-block;
            padding: 10px;
        }

            .dropdown-header > span:first-child {
                width: 10px;
            }

    .selected-value {
        display: inline-block;
        vertical-align: middle;
        width: 24px;
        height: 24px;
        background-size: 100%;
        margin-right: 5px;
        border-radius: 50%;
    }

    #customers-list .k-item {
        line-height: 1em;
        min-width: 300px;
    }

    /* Material Theme padding adjustment*/

    .k-material #customers-list .k-item,
    .k-material #customers-list .k-item.k-state-hover,
    .k-materialblack #customers-list .k-item,
    .k-materialblack #customers-list .k-item.k-state-hover {
        padding-left: 5px;
        border-left: 0;
    }

    #customers-list .k-item > span {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        display: inline-block;
        vertical-align: top;
        margin: 20px 10px 10px 5px;
    }

        #customers-list .k-item > span:first-child {
            -moz-box-shadow: inset 0 0 30px rgba(0,0,0,.3);
            -webkit-box-shadow: inset 0 0 30px rgba(0,0,0,.3);
            box-shadow: inset 0 0 30px rgba(0,0,0,.3);
            margin: 5px;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-size: 100%;
            background-repeat: no-repeat;
        }

    #customers-list h3 {
        font-size: 1.2em;
        font-weight: normal;
        margin: 0 0 1px 0;
        padding: 0;
    }

    #customers-list p {
        margin: 0;
        padding: 0;
        font-size: .8em;
    }


    /*///////////////////////*/
    .k-treeview .k-in {
        padding: 5px;
    }

    #ItemCategTreeview .k-sprite {
        background-image: url("/Content/assets/global/img/coloricons-sprite.png");
    }

    .rootfolder {
        background-position: 0 0;
    }

    .folder {
        background-position: 0 -16px;
    }

    .pdf {
        background-position: 0 -32px;
    }

    .html {
        background-position: 0 -48px;
    }

    .image {
        background-position: 0 -64px;
    }





    body {
        padding-top: 60px;
        padding-bottom: 40px;
    }

    .sidebar-nav {
        padding: 9px 0;
    }

    .dropdown-menu .sub-menu {
        left: 100%;
        position: absolute;
        top: 0;
        visibility: hidden;
        margin-top: -1px;
    }

    .dropdown-menu li:hover .sub-menu {
        visibility: visible;
    }

    .dropdown:hover .dropdown-menu {
        display: block;
    }

    .nav-tabs .dropdown-menu,
    .nav-pills .dropdown-menu,
    .navbar .dropdown-menu {
        margin-top: 0;
    }

    .navbar .sub-menu:before {
        border-bottom: 7px solid transparent;
        border-left: none;
        border-right: 7px solid rgba(0, 0, 0, 0.2);
        border-top: 7px solid transparent;
        left: -7px;
        top: 10px;
    }

    .navbar .sub-menu:after {
        border-top: 6px solid transparent;
        border-left: none;
        border-right: 6px solid #fff;
        border-bottom: 6px solid transparent;
        left: 10px;
        top: 11px;
        left: -6px;
    }

    .parent1 {
        position: static;
        width: 80px;
    }

    .child1 {
        position: absolute;
        max-width: 150px;
        right: -35px;
        top: 0px;
    }
</style>
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">MultiTex ERP</a>

    </li>
    <li>
        <a href="#">Dyeing</a>

    </li>
    <li>
        <a href="#" ng-bind="vm.Title"></a>
    </li>
</ul>

<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>
    <form name="formData" class="form-horizontal" style="background-color: white;">
        <div class="portlet-body">
            @*<tabset>
                <tab heading="Final Q.C" active="true">*@
            <fieldset class="custom-fieldset" style="padding-top:10px;">

                <div class="form-group" style="padding-left:20px;">

                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        Batch No
                    </label>
                    <div class="col-md-3">
                        <input type="text" name="DYE_BATCH_NO" style="cursor:text;text-align:left;" placeholder="Scan Batch Card Barcode" ng-model="vm.form.DYE_BATCH_NO" auto-focus class="form-control btn required" />
                    </div>

                    <div class="col-md-1">
                        <a class="btn btn-sm yellow-gold" ng-click="vm.searchBatchInfo(1)">Load</a>
                    </div>

                </div>
            </fieldset>
            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Batch Info</b></legend>

                <div class="form-group">

                    <div class="col-md-2">
                    </div>
                    <label class="control-label col-md-5" style="text-align:left;">
                        <span aria-required="true" class="required"></span>
                        <b>Batch No:</b> {{vm.form.DYE_BATCH_NO}}
                    </label>
                    <label class="control-label col-md-5" style="text-align:left;">
                        <b>Lot #:</b> {{vm.form.DYE_LOT_NO}}<b style="padding-left: 45px;">Qty:</b> {{vm.form.ACT_BATCH_QTY}} Kg
                    </label>
                </div>

                <div class="form-group">


                    <div class="col-md-2">
                    </div>
                    <label class="control-label col-md-5" style="text-align:left;">
                        <span aria-required="true" class="required"></span>
                        <b>Color:</b> {{vm.form.COLOR_NAME_EN}}
                    </label>


                    <label class="control-label col-md-5" style="text-align:left;">
                        <b>Color Group:</b> {{vm.form.COLOR_NAME_EN}}
                    </label>

                </div>

                <div class="form-group">

                    <div class="col-md-2">
                    </div>
                    <label class="control-label col-md-9" style="text-align:left;">
                        <span aria-required="true" class="required"></span>
                        <b>Buyer:</b> {{vm.form.BUYER_NAME_EN}}
                    </label>

                    <input type="hidden" name="MC_BYR_ACC_GRP_ID" ng-model="vm.form.MC_BYR_ACC_GRP_ID" />


                </div>

                <div class="form-group">

                    <div class="col-md-2">
                    </div>
                    <label class="control-label col-md-5" style="text-align:left;">
                        <b>Style #</b> {{vm.form.STYLE_NO}}
                    </label>

                    <label class="control-label col-md-5" style="text-align:left;">
                        <span aria-required="true" class="required"></span>
                        <b>Order #</b> {{vm.form.ORDER_NO}}
                    </label>

                </div>

            </fieldset>


            <fieldset class="custom-fieldset" ng-hide="collepsMaster">
                <legend class="custom-legend"><b>Batch Fabrics</b></legend>
                <div class="form-group" style="margin:auto;">

                    <div class="form-body clearfix">

                        <div kendo-grid k-options="vm.gridOptionsFinalFabric" k-data-source="vm.gridOptionsFinalFabricDs" id="IDBatchFabricDS3"></div>

                    </div>
                </div>

            </fieldset>

            <fieldset class="custom-fieldset" style="min-width:inherit">
                <legend class="custom-legend">Sub-Lot Info <a class="btn btn-xs btn-link" ng-click="Showed= !Showed"><i class="fa" ng-class="{'fa-chevron-left' : Showed, 'fa-chevron-right' : !Showed }"></i> {{Showed?'Hide':'Show'}} Sub-Lot List</a></legend>

                <div class="col-md-12" ng-hide="!Showed" style="padding-right:0px;">
                    <div kendo-grid k-options="vm.gridOptionsSubLot" k-data-source="vm.gridOptionsSubLotDs"></div>

                </div>
            </fieldset>



            <fieldset class="custom-fieldset" ng-hide="collepsMaster">
                <legend class="custom-legend"><b>Check List >>> Other Reason for Hold</b></legend>
                <div style="padding:3px;">
                </div>

                <table style="width:100%" class="clsTableMtex">

                    <tr class="clstheadMtex">

                        <td class="clstdMtex">
                            <b>Check Parameter</b>
                        </td>
                        <td class="clstdMtex">
                            <b>Insp. Status</b>
                        </td>
                        <td class="clstdMtex">
                            <b>Reason for Ignore</b>
                        </td>
                    </tr>
                    <tr class="" ng-repeat="item in vm.QcParamList">

                        <td style="padding: 5px; border: solid 1px lightgray; width: 20%; ">
                            <b> {{item.CQ_PARAM_EN_NAME}}</b>
                            <input type="hidden" ng-model="item.RF_DF_QC_PARAM_TYPE_ID" />

                        </td>

                        <td style="padding: 5px; border: solid 1px lightgray; width: 50%;">
                            <div class="form-group">
                                <div class="col-md-1">
                                </div>
                                <div ng-repeat="obj in vm.qcParamStatusList" class="col-md-2">
                                    <input type="radio" ng-click="vm.selectdeselect(item,$event);" style="border: 0px; width: 20%; height: 1.5em;" id="LOOKUP_DATA_ID_{{item.RF_DF_QC_PARAM_TYPE_ID}}_{{$index}}" value="{{obj.LOOKUP_DATA_ID}}" ng-model="item.LK_PARAM_QC_STS_ID" /><label for="LOOKUP_DATA_ID_{{item.RF_DF_QC_PARAM_TYPE_ID}}_{{$index}}"> <b>{{obj.LK_DATA_NAME_EN}}</b>&nbsp; &nbsp;&nbsp;</label>
                                </div>
                            </div>

                        </td>

                        <td style="padding: 5px; border: solid 1px lightgray; width: 30%; ">
                            <input type="text" ng-model="item.CHQ_IGNR_RSN_DESC" ng-class="{'requiredSub2':item.LK_PARAM_QC_STS_ID==714}" style="width:100%;" class="form-control" />

                        </td>

                    </tr>
                </table>

            </fieldset>

            <div style="padding:3px;">
            </div>

            <fieldset class="custom-fieldset" ng-hide="collepsMaster">
                <legend class="custom-legend"><b>Batch QC Status</b></legend>

                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Date of Action
                    </label>
                    <div class="col-md-2">
                        <input type="text" class="form-control requiredSub2" name="ACTION_DT" ng-model="vm.form.ACTION_DT" max-date="vm.today" ng-click="ACTION_DT_LNopen($event)"
                               datepicker-popup="{{vm.dtFormat}}" is-open="ACTION_DT_LNopened" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close" />

                    </div>

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Action By
                    </label>
                    <div class="col-md-3">
                        <select id="customers" kendo-drop-down-list options="vm.QcUserList" k-ng-delay="vm.QcUserList" ng-model="vm.form.CREATED_BY" class="form-control" style="width:100%;"></select>

                    </div>

                </div>

                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required"></span>
                        Remarks
                    </label>
                    <div class="col-md-8">
                        <textarea name="FINAL_NOTE" ng-model="vm.form.FINAL_NOTE" class="form-control"></textarea>
                    </div>

                </div>


                <div class="form-group">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Action Taken
                    </label>
                    <div ng-repeat="obj in vm.finalQcStatusList" class="col-md-1" ng-if="obj.KNT_QC_STS_TYPE_ID<5">
                        <input type="radio" style="border: 0px; width: 20%; height: 1.5em;" id="KNT_QC_STS_TYPE_ID_{{$index}}" value="{{obj.KNT_QC_STS_TYPE_ID}}" ng-model="vm.form.KNT_QC_STS_TYPE_ID" /><label for="KNT_QC_STS_TYPE_ID_{{$index}}"> {{obj.QC_STS_TYP_NAME}}</label>
                    </div>
                    <div ng-repeat="obj in vm.finalQcStatusList" class="col-md-2" ng-if="obj.KNT_QC_STS_TYPE_ID>4">
                        <input type="radio" style="border: 0px; width: 20%; height: 1.5em;" id="KNT_QC_STS_TYPE_ID_{{$index}}" value="{{obj.KNT_QC_STS_TYPE_ID}}" ng-model="vm.form.KNT_QC_STS_TYPE_ID" /><label for="KNT_QC_STS_TYPE_ID_{{$index}}"> {{obj.QC_STS_TYP_NAME}}</label>
                    </div>

                </div>


                <div class="form-group" ng-if="vm.form.KNT_QC_STS_TYPE_ID==3">

                    <div class="col-md-1">
                    </div>
                    <label class="control-label col-md-2">
                        <span aria-required="true" class="required">*</span>
                        Major QC Param Defect
                    </label>
                    <div class="col-md-3">
                        <select class="form-control" kendo-drop-down-list name="RF_DF_QC_PARAM_TYPE_ID" id="RF_DF_QC_PARAM_TYPE_ID"
                                k-data-text-field="'CQ_PARAM_EN_NAME'" k-data-value-field="'RF_DF_QC_PARAM_TYPE_ID'" style="max-width:350px;"
                                k-auto-bind="'true'" k-data-source="vm.MajQcParamList" k-delay="vm.MajQcParamList" k-option-label="'-- Select Major Defect --'"
                                k-filter="'contains'" ng-model="vm.form.MAJ_QC_PARAM_TYPE_ID"></select>

                    </div>

                </div>

            </fieldset>

            <div style="padding:3px;">
            </div>
            <div class="row">
                <div class="col-md-3" style="padding-left:20px;">
                    @*<button type="button" class="btn btn-sm blue" ui-sref="FabricInspectionReportList()" ui-sref-opts="{reload: true}">Back to List</button>*@
                    <a class="btn btn-sm green" ng-if="!vm.form.DF_BT_QC_STATUS_ID>0" ng-click="vm.submitQcAll(vm.form)">Save</a>
                    <a class="btn btn-sm yellow" ng-if="vm.form.DF_BT_QC_STATUS_ID>0" ng-click="vm.submitQcAll(vm.form)">Update</a>
                    <button type="button" class="btn btn-sm default" ui-sref="DfBtFinalQC()" ui-sref-opts="{reload: true}">Cancel</button>
                </div>
            </div>

            @*</tab>
                </tabset>*@
        </div>

    </form>
</div>

