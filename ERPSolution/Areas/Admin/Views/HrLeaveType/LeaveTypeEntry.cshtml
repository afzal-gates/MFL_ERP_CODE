                </div>
            </div>*@

            <div class="form-group">
                <label class="col-md-4 control-label">Days to Notify</label>
                <div class="col-md-2">
                    <input type="text" min="0" class="form-control" ng-model="vm.form.DAYS_NOTIFY" ui-number-mask="0">
                    <span class="field-validation-error" ng-repeat="err in vm.errors.DAYS_NOTIFY">
                        {{err}}
                    </span>
