                    <textarea rows="4" cols="50" ng-model="vm.form.REMARKS">
                    </textarea>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-3 col-md-9">
                    <button type="button" class="btn blue" ui-sref="LeaveTypeList">Back To List</button>
                    
