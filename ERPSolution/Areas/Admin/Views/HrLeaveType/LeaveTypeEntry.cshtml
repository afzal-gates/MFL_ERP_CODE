@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}


<form class="form-horizontal" role="form">
    <div class="form-body clearfix">
        <div class="row">

            <input id="antiForgeryToken" data-ng-model="vm.antiForgeryToken" type="hidden"
                   data-ng-init="vm.antiForgeryToken='@GetAntiForgeryToken()'" />

            <div class="form-group">
                <label class="col-md-4 control-label">Leave Type Code :</label>
                <div class="col-md-2">
                    <input type="text" class="form-control" ng-model="vm.form.LEAVE_TYPE_CODE">
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <span class="field-validation-error" ng-repeat="err in vm.errors.LEAVE_TYPE_CODE">
                        {{err}}
                    </span>
                </div>
            </div>


            <div class="form-group">
                <label class="col-md-4 control-label">Color Code :</label>
                    <input type="hidden" class="form-control" ng-init="vm.form.COLOR_CODE?vm.form.COLOR_CODE:color" ng-model="vm.form.COLOR_CODE">


                <div class="col-md-2">
                    <input kendo-color-picker k-palette="'websafe'" ng-change="vm.form.COLOR_CODE=color" ng-model="color" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <span class="field-validation-error" ng-repeat="err in vm.errors.COLOR_CODE">
