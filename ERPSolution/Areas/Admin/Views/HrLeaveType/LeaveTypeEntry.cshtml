                            <span><input type="checkbox" ng-model="vm.form.IS_FY_CF" ng-true-value="'Y'" ng-false-value="'N'"></span> 
                        </label>
                    </div>
                </div>
                <label class="col-md-2 control-label">No. of Days Forward</label>
                <div class="col-md-2">
                    <input type="text" class="form-control" min="0" ng-model="vm.form.MAX_DAYS_CF" ui-number-mask="0">
