                    <button ng-if="!vm.form.HR_LEAVE_TYPE_ID" type="button" ng-click="vm.submitData('/Hr/Admin/HrLeaveType/Save',false)" class="btn green">Save</button>

                    <button type="button" class="btn default" ui-sref="LeaveTypeEntry({data:null})">Cancel</button>
                </div>
            </div>
        </div>







    </div>
</form>
