            </div>


            <div class="form-group">
                <label class="col-md-4 control-label">Min. Days Work</label>
                <div class="col-md-2">
                    <input type="text" class="form-control" min="0" ng-model="vm.form.MIN_DAYS_WORK" ui-number-mask="0">
                    <span class="field-validation-error" ng-repeat="err in vm.errors.MIN_DAYS_WORK">
                        {{err}}
                    </span>
                </div>
            </div>

            <div class="form-group">
