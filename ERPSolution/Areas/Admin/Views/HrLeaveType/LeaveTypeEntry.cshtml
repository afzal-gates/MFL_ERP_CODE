                            <span><input type="checkbox" ng-model="vm.form.IS_HOLIDAY_INCLUDE" ng-true-value="'Y'" ng-false-value="'N'"></span>

                        </label>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <label class="col-md-4 control-label" style="padding-top: 12px;">Is Balance Check?</label>
                <div class="col-md-4">
                    <div class="checkbox-list">
                        <label class="checkbox-inline" style="margin-left:20px">
                            <span><input type="checkbox" ng-model="vm.form.IS_BAL_CHQ" ng-true-value="'Y'" ng-false-value="'N'"></span>

