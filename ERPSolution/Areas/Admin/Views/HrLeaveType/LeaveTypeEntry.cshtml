            </div>



            <div class="form-group">
                <label class="col-md-4 control-label">Leave Group</label>
                <div class="col-md-6">
                    <div class="radio-list" style="margin-left:20px">
                        <label class="radio-inline">
                            <span class="checked"><input type="radio" ng-model="vm.form.IS_L_P_A" name="optionsRadios" ng-value="'L'" checked=""></span>Leave
                        </label>
                        <label class="radio-inline">
                            <span class=""><input type="radio" ng-model="vm.form.IS_L_P_A" name="optionsRadios" ng-value="'P'" checked=""></span>Present
                        </label>

                        <label class="radio-inline">
                            <span class=""><input type="radio" ng-model="vm.form.IS_L_P_A" name="optionsRadios" ng-value="'A'" checked=""></span>Absent
                        </label>


                    </div>
                </div>
            </div>






            <div class="form-group">
                <label class="col-md-4 control-label">Min. Period of Employment :</label>
                <div class="col-md-2">
                    <input type="text" class="form-control" min="0" ng-model="vm.form.MIN_PERIOD_REQ" ui-number-mask="0">
                    <span class="field-validation-error" ng-repeat="err in vm.errors.MIN_PERIOD_REQ">
                        {{err}}
                    </span>
                </div>
                <div class="col-md-2">
                    <select class="form-control" ng-model="vm.form.HR_PERIOD_TYPE_ID" ng-options="Item.HR_PERIOD_TYPE_ID as Item.PERIOD_TYPE_NAME_EN for Item in vm.periodData">
                    </select>

                </div>
            </div>

