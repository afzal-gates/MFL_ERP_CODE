@{
    ViewBag.Title = "Designation Group";
}

<div class="portlet box blue-dark" ng-controller="DesigGroupController as vm">

    <div class="portlet-title">
        <div class="caption">
            @*<i class="fa fa-gift"></i>*@ Designation Group Information
        </div>
        <div class="tools">
            @*<a href="javascript:;" class="collapse">
            </a>*@
