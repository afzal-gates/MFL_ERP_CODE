    <div class="portlet-body">

        <div class="row">

            <div class="col-md-12">

                <div class="form-body">


                    <tabset>

                        <tab ng-repeat="tab in tabs" heading="{{tab.title}}" active="tab.active" disabled="tab.disabled" ng-model="mTab">


                            <div ng-if="tab.title=='Entry'">
                                <div class="row">
                                    <div class="col-md-10">
                                        @*Pristine: {{frmDesignation.$setPristine()}}*@
                                        <form name="frmDesignation" class="form-horizontal" method="post" action="/Admin/HrDesignation/Save" kendo-validator="validator">


                                            <input type="text" class="form-control" name="TRAN_MODE" ng-model="TRAN_MODE" ng-show="" />

                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                </label>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" name="HR_DESIGNATION_ID" ng-model="HR_DESIGNATION_ID" ng-show="" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @*<label class="control-label col-md-4">
                    Department
                </label>*@
                                                <div class="col-md-6">
                                                    <select kendo-drop-down-list name="HR_DEPARTMENT_ID" options="vm.departmentList" ng-model="vm.HR_DEPARTMENT_ID"
                                                            ng-show=""
                                                            class="form-control" @*required data-required-msg="Please select department"*@></select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                    Designation Group
                                                    <span class="required" aria-required="true">*</span>
                                                </label>
                                                <div class="col-md-6">
                                                    <select kendo-drop-down-list class="form-control" name="HR_DESIGNATION_GRP_ID" options="vm.designationGrpList" ng-model="vm.HR_DESIGNATION_GRP_ID" required data-required-msg="Please select designation group"></select>
                                                    <span class="k-invalid-msg" data-for="HR_DESIGNATION_GRP_ID"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                    Designation Code
                                                </label>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" name="DESIGNATION_CODE" ng-model="DESIGNATION_CODE" readonly />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                    Designation Name[E]
                                                    <span class="required" aria-required="true">*</span>
                                                </label>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" name="DESIGNATION_NAME_EN" ng-model="DESIGNATION_NAME_EN" required data-required-msg="Please input designation name [E]" />
                                                    <span class="k-invalid-msg" data-for="DESIGNATION_NAME_EN"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                    Designation Name[B]
                                                    @*<span class="required" aria-required="true">*</span>*@
                                                </label>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control banglafont" name="DESIGNATION_NAME_BN" ng-model="DESIGNATION_NAME_BN" />
                                                    <span class="k-invalid-msg" data-for="DESIGNATION_NAME_BN"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                    Short Name
                                                    <span class="required" aria-required="true">*</span>
                                                </label>
                                                <div class="col-md-6">
                                                    <input type="text" class="form-control" name="DESIGNATION_SNAME" ng-model="DESIGNATION_SNAME" required data-required-msg="Please input short name" />
                                                    <span class="k-invalid-msg" data-for="DESIGNATION_SNAME"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                    Description
                                                </label>
                                                <div class="col-md-6">
                                                    <textarea class="form-control" name="DESIGNATION_DESC" rows="3" ng-model="DESIGNATION_DESC"></textarea>
                                                    <span class="k-invalid-msg" data-for="DESIGNATION_DESC"></span>
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                    Management Type
                                                </label>
                                                <div class="col-md-6">
                                                    <select kendo-drop-down-list class="form-control" name="HR_MANAGEMENT_TYPE_ID" options="vm.managementTypeList" ng-model="vm.HR_MANAGEMENT_TYPE_ID"></select>
                                                    <span class="k-invalid-msg" data-for="HR_MANAGEMENT_TYPE_ID"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                    Designation Grade
                                                </label>
                                                <div class="col-md-6">
                                                    <select kendo-drop-down-list class="form-control" name="HR_GRADE_ID" options="vm.gradeList" ng-model="vm.HR_GRADE_ID"></select>
                                                    <span class="k-invalid-msg" data-for="HR_GRADE_ID"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                    Designation Order
                                                    <span class="required" aria-required="true">*</span>
                                                </label>
                                                <div class="col-md-2">
                                                    <input id="numeric" type="number" class="form-control" name="DESIG_ORDER" ng-model="DESIG_ORDER" required data-required-msg="Please input designation order"></input>
                                                    <span class="k-invalid-msg" data-for="DESIG_ORDER"></span>
                                                </div>
                                            </div>



                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                </label>
                                                <div class="col-md-7">
                                                    <div ng-if="IS_GAJETED=='Y'">
                                                        <label class="checkbox-inline">
                                                            <input type="checkbox" name="IS_GAJETED" ng-model="IS_GAJETED" ng-checked="true">Gajeted?
                                                        </label>
                                                    </div>
                                                    <div ng-if="IS_GAJETED!='Y'">
                                                        <label class="checkbox-inline">
                                                            <input type="checkbox" name="IS_GAJETED" ng-model="IS_GAJETED" ng-checked="false">Gajeted?
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <label class="control-label col-md-4">
                                                </label>
                                                <div class="col-md-2">
                                                    <div ng-if="IS_ACTIVE=='Y'">
                                                        <label class="checkbox-inline">
                                                            <input type="checkbox" name="IS_ACTIVE" ng-model="IS_ACTIVE" ng-checked="true">Active?
                                                        </label>
                                                    </div>
                                                    <div ng-if="IS_ACTIVE!='Y'">
                                                        <label class="checkbox-inline">
                                                            <input type="checkbox" name="IS_ACTIVE" ng-model="IS_ACTIVE" ng-checked="false">Active?
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="form-actions">
                                                <div class="row">
                                                    <div class="col-md-offset-4 col-md-6">
                                                        <button type="submit" class="btn green" ng-if="TRAN_MODE==1"><i class="fa fa-check"></i> Save</button>
                                                        <button type="submit" class="btn yellow-gold" ng-if="TRAN_MODE==2" @*ng-click="OnClickUpdate()"*@><i class="fa fa-check"></i> Update</button>
                                                        <button type="submit" class="btn green" ng-if="TRAN_MODE==0 || TRAN_MODE==''" disabled><i class="fa fa-check"></i> Save</button>

                                                        @*<button type="reset" class="btn blue" ng-if="TRAN_MODE==1" @*ng-click="TranCancel()">Cancel</button>*@
                                                        <button type="button" class="btn blue" @*ng-if="TRAN_MODE==2"*@ ng-click="TranCancel()">Cancel</button>
                                                        @*<a href="@Url.Action("Index","HrDesignation")" class="btn default">Back</a>*@
                                                    </div>
                                                </div>
                                            </div>

                                        </form>
                                        
                                    </div>
                                </div>

                            </div>


                            @*start list*@
                            <div ng-if="tab.title=='List'">

                                <div class="form-group">
                                    <label class="col-md-2">
                                        Designation Group
                                    </label>
                                    <div class="col-md-3">
                                        <select kendo-drop-down-list class="form-control" name="HR_DESIGNATION_GRP_ID" ng-model="vm.HR_DESIGNATION_GRP_ID"
                                                options="vm.designationGrpList" required data-required-msg="Please select designation group"></select>

                                        <a class="btn default" ng-if="vm.HR_DESIGNATION_GRP_ID==null && vm.HR_MANAGEMENT_TYPE_ID==null" disabled>show</a>
                                        <a class="btn default" ng-click="onClickShowList(vm.HR_DESIGNATION_GRP_ID, 2)" ng-if="vm.HR_DESIGNATION_GRP_ID!=null || vm.HR_MANAGEMENT_TYPE_ID!=null">show</a>
                                    </div>

                                    <label class="col-md-2">
                                        Management Type
                                    </label>
                                    <div class="col-md-3">
                                        <select kendo-drop-down-list class="form-control" name="HR_MANAGEMENT_TYPE_ID" ng-model="vm.HR_MANAGEMENT_TYPE_ID"
                                                options="vm.managementTypeList" required data-required-msg="Please select designation group"></select>

                                        <a class="btn default" ng-if="vm.HR_DESIGNATION_GRP_ID==null && vm.HR_MANAGEMENT_TYPE_ID==null" disabled>show</a>
                                        <a class="btn default" ng-click="onClickShowList(vm.HR_MANAGEMENT_TYPE_ID, 3)" ng-if="vm.HR_DESIGNATION_GRP_ID!=null || vm.HR_MANAGEMENT_TYPE_ID!=null">show</a>
                                    </div>
                                </div>

                                <p>&nbsp;</p>
                                <p>&nbsp;</p>

                                <br />

                                @*<pre>
                                        {{vm.DesignationListData|json}}
                                    </pre>*@


                                <input type="hidden" ng-model="listShow" ng-init="1" />
                                <div class="form-group" ng-if="listShow==1" >

                                    @*<div id="grid"></div>*@
                                    @*<div kendo-grid options="gridOptions" ></div>*@
                                    <kendo-grid k-options="gridOptions" k-rebind="gridOptions"></kendo-grid>


                                    @*<table id="datatbl" class="table table-bordered table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Code</th>
                                                    <th>Name</th>
                                                    <th>Department</th>
                                                    <th>Management Type</th>
                                                    <th>Active?</th>
                                                    <th>Action</th>

                                                </tr>
                                            </thead>
                                            <tbody >

                                                <tr class="odd gradex" ng-repeat="item in vm.DesignationListData.dataSource">
                                                    <td>{{item.DESIGNATION_CODE}}</td>
                                                    <td>{{item.DESIGNATION_NAME_EN}}</td>
                                                    <td>{{item.DEPARTMENT_NAME_EN}}</td>
                                                    <td>{{item.MNG_TYPE_NAME_EN}}</td>
                                                    <td>{{item.IS_ACTIVE}}</td>
                                                    <td><a ng-click="tabs[0].active = true;onClickEdit(item)">Edit</a></td>
