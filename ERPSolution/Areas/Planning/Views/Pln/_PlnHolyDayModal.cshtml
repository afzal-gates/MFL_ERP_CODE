<div class="modal-body">
    <div class="portlet grey-cascade box">
        <div class="portlet-title">
            <div style="padding-top:2px;">
                <h4 class="title">
                   <b> {{params.COMP_NAME_EN+' >> '+params.OFFICE_NAME_EN+' >> '+params.DEPARTMENT_NAME_EN}}</b> 
                    <span class="pull-right"><i class="fa fa-times red" ng-click="cancel()"></i></span>
                </h4>
            </div>
        </div>
        <div class="portlet-body">

            <div id="splash-page" data-ng-show="showSplash" class="dissolve-animation">
                <div class="page-splash">
                    <div class="page-splash-message">
                        <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                    </div>
                </div>
            </div>


            <div class="row" style="margin:auto;">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        Form Date
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-8 input-group">
                        <input type="text" class="form-control" name="FROM_DATE" ng-model="params.START_DT"
                               datepicker-popup="{{dtFormat}}" is-open="fromDateOpened"
                               min-date="today"
                               datepicker-options="dateOptions" close-text="Close" />
                        <span class="input-group-btn">
                            <button type="button" class="btn-calendar" ng-click="fromDateOpen($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>

                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-3 control-label">
                        To Date
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-8 input-group">
                        <input type="text" class="form-control" name="TO_DATE" ng-model="params.END_DT"
                               datepicker-popup="{{dtFormat}}" is-open="toDateOpened"
                               min-date="params.START_DATE"
                               datepicker-options="dateOptions" close-text="Close" />
                        <span class="input-group-btn">
                            <button type="button" class="btn-calendar" ng-click="toDateOpen($event)"><i class="glyphicon glyphicon-calendar"></i></button>
                        </span>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-3 control-label">
                        Day Type
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-8 input-group">
                        <select id="HR_DAY_TYPE_ID" name="HR_DAY_TYPE_ID" class="form-control" kendo-drop-down-list k-options="holidayTypeList" ng-model="params.HR_DAY_TYPE_ID" required></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3"></label>
                    <div class="col-md-8">
                        <div class="checkbox-list">
                            <label class="checkbox-inline">
                                <span><input type="checkbox" ng-model="params.IS_SAME_FOF_OTH" ng-true-value="'Y'" ng-false-value="'N'"></span> Same for <b> {{params.COMP_NAME_EN+' >> '+params.OFFICE_NAME_EN+' >> All'}}</b> 
                            </label>
                        </div>
                    </div>
                </div>

            </div>
            


            <div class="row" style="margin:auto;">
                <div class="col-md-12">
                    <button type="button" class="btn btn-sm green" ng-click="submitData(params)">Save</button>
                    <button type="button" class="btn btn-sm grey-cascade" ng-click="cancel()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>