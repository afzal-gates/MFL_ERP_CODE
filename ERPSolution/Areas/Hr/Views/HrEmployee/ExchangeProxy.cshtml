@model ERP.Model.HR_EMPLOYEEModel

@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}

<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">MultiTex ERP</a>

    </li>
    <li>
        <a href="#">Hr</a>

    </li>
    <li>
        <a href="#">Assign Proxy ID</a>
    </li>
</ul>


<div class="portlet box blue-dark">

    @*<input id="antiForgeryToken" data-ng-model="vm.antiForgeryToken" type="hidden"
           data-ng-init="vm.antiForgeryToken='@GetAntiForgeryToken()'" />*@

    <div class="portlet-title">
        <div class="caption">
            @*<i class="fa fa-gift"></i>*@ Assign Proxy ID
        </div>
        <div class="tools">
            @*<a href="javascript:;" class="collapse">
                </a>*@
            @*<a href="#portlet-config" data-toggle="modal" class="config">
                </a>
                <a href="javascript:;" class="reload">
                </a>*@
            @*<a href="javascript:;" class="remove">
                </a>*@
        </div>
    </div>

    <div class="portlet-body form">
        <div class="row">

            <div class="col-md-12"> 
                               
                <form name="frmExchangeProxy" class="form-horizontal" ng-class="{ loading:form.submitting }"
                      ng-submit="vm.exchangeProxy(frmExchangeProxy.$valid,vm.form)" novalidate>

                    <input id="antiForgeryToken" data-ng-model="vm.antiForgeryToken" type="hidden"
                           data-ng-init="vm.antiForgeryToken='@GetAntiForgeryToken()'" />

                    <div class="form-body">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Employee Code</label>
                                    <div class="col-md-2">
                                        <input type="text" ng-model="vm.form.EMPLOYEE_CODE" placeholder="Search..." @*ng-disabled="vm.isEmployee!=true"*@
                                               typeahead="item.EMPLOYEE_CODE as item.EMPLOYEE_CODE for item in emoloyeeAuto($viewValue)"
                                               typeahead-min-length="3" typeahead-wait-ms="1000"
                                               typeahead-on-select="onSelectItem($item)" typeahead-loading="loadingLocationsEmp" class="form-control" />
                                        <i ng-show="loadingLocationsEmp" class="glyphicon glyphicon-refresh"></i>
                                    </div>
                                </div>
                                <div class="form-group" ng-if="vm.errors.HR_EMPLOYEE_ID">
                                    <div class="col-md-offset-3" style="padding-left:15px;">
                                        <div class="field-validation-error" ng-repeat="err in vm.errors.HR_EMPLOYEE_ID">
                                            {{err}}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" ng-if="vm.form.EMP_FULL_NAME_EN!=null">
                                    <label class="col-md-3 control-label">&nbsp;</label>
                                    <div class="col-md-8" style="width:auto;">
                                        <span class="form-control" style="background-color: hsl(0, 0%, 93%)">{{vm.form.EMP_FULL_NAME_EN}}&nbsp;</span>
                                    </div>
                                </div>

                                <div class="form-group" ng-if="vm.form.HR_EMPLOYEE_ID!=null">
                                    <label class="col-md-3 control-label">Old Proxy ID</label>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" name="TA_PROXI_ID_OLD" ng-model="vm.form.TA_PROXI_ID_OLD" ng-disabled="true" />
                                    </div>
                                </div>

                                <div class="form-group" ng-if="vm.form.HR_EMPLOYEE_ID!=null">
                                    <label class="col-md-3 control-label">New Proxy ID</label>
                                    <div class="col-md-2">
                                        <input type="text" class="form-control" name="TA_PROXI_ID" ng-model="vm.form.TA_PROXI_ID" maxlength="10" />
                                    </div>
                                </div>
                                <div class="form-group" ng-if="vm.errors.TA_PROXI_ID">
                                    <div class="col-md-offset-3" style="padding-left:15px;">
                                        <div class="field-validation-error" ng-repeat="err in vm.errors.TA_PROXI_ID">
                                            {{err}}
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-actions">
                                    @*<div class="col-md-10" style="padding-left:10px;">*@
                                    <div class="col-md-offset-3">

                                        @*<button type="submit" class="btn green" ng-if="vm.insert"><i class="fa fa-check"></i> Save</button>*@
                                        <button type="submit" class="btn yellow-gold" @*ng-if="!vm.insert"*@><i class="fa fa-check"></i> Assign</button>

                                        <button type="button" class="btn blue" @*ng-if="TRAN_MODE==2" *@ ng-click="vm.TranCancel()">Cancel</button>


                                        @*<div class="col-md-offset-1"></div>*@
                                        @*<button type="button" class="col-md-offset-1 btn btn-default" ng-click="vm.backToList()">Back To List</button>*@
                                        @*<button type="button" class="btn btn-default" ng-click="vm.addNew()">Add New</button>*@
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>

                </form>

            </div>

        </div>
    </div>

</div>



