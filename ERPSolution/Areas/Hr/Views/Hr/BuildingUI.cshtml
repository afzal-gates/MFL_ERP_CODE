
<input id="access_token" data-ng-model="token" type="hidden"
       data-ng-init="token='@Session["access_token"]'" />
<div class="modal-body">
    <div class="portlet grey-cascade box">
        <div class="portlet-title">
            <div>
                <h3 class="title">
                    Office Building Entry
                    <span class="pull-right"><i class="fa fa-times red" ng-click="cancel([])"></i></span>
                </h3>
            </div>
        </div>
        <div class="portlet-body">

            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Office Building Entry</b></legend>

                <div class="form-group">

                    <div class="col-md-1"></div>

                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Company
                    </label>
                    <div class="col-md-3">

                        <select kendo-drop-down-list id="HR_COMPANY_ID" name="HR_COMPANY_ID" class="form-control required"
                                options="companyList" ng-model="vmS.form.HR_COMPANY_ID"></select>
                        <input type="hidden" ng-model="vmS.form.MC_STYLE_H_EXT_ID" />

                    </div>


                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Office
                    </label>
                    <div class="col-md-4">
                        <select kendo-drop-down-list id="HR_OFFICE_ID" name="HR_OFFICE_ID" class="form-control required"
                                options="officeList" ng-model="vmS.form.HR_OFFICE_ID" ng-change="vm.OfficeChange(vm.form);"></select>
                    </div>
                </div>

                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>

                <div class="form-group">

                    <div class="col-md-1"></div>

                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Building No
                    </label>
                    <div class="col-md-3">

                        <input type="text" name="BLDNG_NO" ng-model="vmS.form.BLDNG_NO" class="form-control" />

                    </div>


                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Building Code
                    </label>
                    <div class="col-md-4">

                        <input type="text" name="BLDNG_CODE" ng-model="vmS.form.BLDNG_CODE" class="form-control" />
                    </div>
                </div>

                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>

                <div class="form-group">

                    <div class="col-md-1"></div>

                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Building (EN)
                    </label>
                    <div class="col-md-3">

                        <input type="text" name="BLDNG_DESC_EN" ng-model="vmS.form.BLDNG_DESC_EN" class="form-control" />

                    </div>


                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Building (BN)
                    </label>
                    <div class="col-md-4">
                        <input type="text" name="BLDNG_DESC_BN" ng-model="vmS.form.BLDNG_DESC_BN" class="form-control" />
                    </div>
                </div>


                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>

                <div class="form-group">

                    <div class="col-md-1"></div>

                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Is Active
                    </label>
                    <div class="col-md-3">

                        <input type="checkbox" name="IS_ACTIVE" ng-model="vmS.form.IS_ACTIVE" ng-true-value="'Y'" ng-false-value="'N'" class="" />

                    </div>


                </div>

                <div class="row">
                    <div class="col-md-5">
                    </div>
                    <div class="col-md-7">
                        <button type="button" class="btn btn-sm green" ng-click="submitAll(vmS.form);">Save</button>
                        @*<button type="button" class="btn btn-sm yellow-gold" ng-click="submitAll(vmS.form);">Update</button>*@
                        <button type="button" class="btn btn-sm default" ng-click="cancel();">Cancel</button>

                    </div>


                </div>


                <div style="padding:2px;">
                    <div kendo-grid k-options="gridOptionsItem" id="IDRequisitionDS" k-data-source="buildingList"></div>
                </div>

            </fieldset>
        </div>
    </div>
</div>