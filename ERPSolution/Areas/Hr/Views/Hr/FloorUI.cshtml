
<input id="access_token" data-ng-model="token" type="hidden"
       data-ng-init="token='@Session["access_token"]'" />
<div class="modal-body">
    <div class="portlet grey-cascade box">
        <div class="portlet-title">
            <div>
                <h3 class="title">
                    Building Floor Entry
                    <span class="pull-right"><i class="fa fa-times red" ng-click="cancel([])"></i></span>
                </h3>
            </div>
        </div>
        <div class="portlet-body">

            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Building Floor Entry</b></legend>

                <div class="form-group">

                    <div class="col-md-1"></div>

                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Office
                    </label>
                    <div class="col-md-3">
                        <select kendo-drop-down-list id="HR_OFFICE_ID" name="HR_OFFICE_ID" class="form-control required"
                                options="officeList" ng-model="vmS.form.HR_OFFICE_ID" ng-change="vmS.OfficeChange(vmS.form);"></select>
                        

                    </div>


                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Building Name
                    </label>
                    <div class="col-md-4">
                        <select class="form-control required" kendo-drop-down-list name="HR_PROD_BLDNG_ID" k-option-label="'-- Select Building --'"
                                k-data-text-field="'BLDNG_DESC_EN'" k-data-value-field="'HR_PROD_BLDNG_ID'"
                                k-auto-bind="'true'" k-data-source="buildingList" k-ng-delay="buildingList" k-filter="'contains'"
                                ng-model="vmS.form.HR_PROD_BLDNG_ID" k-on-change="vmS.newBuildingAdd(vmS.form);"></select>
                    </div>
                </div>

                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>

                <div class="form-group">

                    <div class="col-md-1"></div>

                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Floor No
                    </label>
                    <div class="col-md-3">

                        <input type="text" name="FLOOR_NO" ng-model="vmS.form.FLOOR_NO" class="form-control" />

                    </div>


                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Floor Code
                    </label>
                    <div class="col-md-4">

                        <input type="text" name="FLOOR_CODE" ng-model="vmS.form.FLOOR_CODE" class="form-control" />
                    </div>
                </div>

                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>

                <div class="form-group">

                    <div class="col-md-1"></div>

                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Floor (EN)
                    </label>
                    <div class="col-md-3">

                        <input type="text" name="FLOOR_DESC_EN" ng-model="vmS.form.FLOOR_DESC_EN" class="form-control" />

                    </div>


                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Floor (BN)
                    </label>
                    <div class="col-md-4">
                        <input type="text" name="FLOOR_DESC_BN" ng-model="vmS.form.FLOOR_DESC_BN" class="form-control" />
                    </div>
                </div>


                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>

                <div class="form-group">

                    <div class="col-md-1"></div>

                    <label class="col-md-2 control-label">
                        <span aria-required="true" class="required"></span>
                        Line Floor
                    </label>
                    <div class="col-md-3">

                        <select kendo-drop-down-list id="LK_FLOOR_ID" name="LK_FLOOR_ID" class="form-control required"
                                options="LKFloorList" ng-model="vmS.form.LK_FLOOR_ID"></select>

                    </div>

                    <label class="control-label col-md-2 ">
                        <span aria-required="true" class="required">*</span>
                        Floor Type
                    </label>
                    <div class="col-md-3">
                        <select kendo-drop-down-list id="LK_PFLR_TYP_ID" name="LK_PFLR_TYP_ID" class="form-control required"
                                options="prdFloorTypeList" ng-model="vmS.form.LK_PFLR_TYP_ID"></select>
                    </div>

                </div>

                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>

                <div class="row">
                    <div class="form-group">

                        <div class="col-md-1">
                        </div>
                        <label class="control-label col-md-2 ">
                            <span aria-required="true" class="required">*</span>
                            Is Active
                        </label>
                        <div class="col-md-3">
                            <input type="checkbox" name="IS_ACTIVE" ng-model="vmS.form.IS_ACTIVE" ng-true-value="'Y'" ng-false-value="'N'" class="" />
                        </div>

                    </div>
                </div>

                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>
                <div style="padding:3px;">
                </div>
                <div class="row">
                    <div class="col-md-5">
                    </div>
                    <div class="col-md-7">
                        <button type="button" class="btn btn-sm green" ng-click="submitAll(vmS.form);">Save</button>
                        @*<button type="button" class="btn btn-sm yellow-gold" ng-click="submitAll(vmSS.form);">Update</button>*@
                        <button type="button" class="btn btn-sm default" ng-click="cancel();">Cancel</button>

                    </div>


                </div>


                <div style="padding:2px;">
                    <div kendo-grid k-options="gridOptionsItem" id="IDRequisitionDS" k-data-source="floorList"></div>
                </div>

            </fieldset>
        </div>
    </div>
</div>