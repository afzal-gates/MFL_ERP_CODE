<div class="modal-body">
    <div class="portlet grey-cascade box">
        <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">{{alert.msg}}</alert>

        <div class="portlet-title">
            <div>
                <h3 style="padding-top:10px;margin-top:3px;">
                     Bundle Routing Options
                    <span class="pull-right"><i class="fa fa-times red" ng-click="cancel()"></i></span>
                </h3>
            </div>
        </div>
        <div class="portlet-body">
            <table class="table" style="border:hidden;font-size:20px;">
                <tr ng-repeat="opt in opts">
                    <td>
                        <a class="btn btn-block {{opt.cls}}" ng-click="takeAction(opt)">{{opt.TEXT_1}} <br />( {{opt.TEXT_2}})</a>
                    </td>
                </tr>

            </table>
           
        </div>
    </div>
</div>