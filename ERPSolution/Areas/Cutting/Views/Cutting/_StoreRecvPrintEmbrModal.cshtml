<div class="modal-body">
    <div class="portlet grey-cascade box">
        <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">{{alert.msg}}</alert>

        <div class="portlet-title">
            <div>
                <h3 style="padding-top:10px;margin-top:3px;">
                    Print/Embr Receive : Reject & Short
                    <span class="pull-right"><i class="fa fa-times red" ng-click="cancel()"></i></span>
                </h3>
            </div>
        </div>
        <div class="portlet-body">
            <div class="row" style="margin:auto;">
                <table class="table table-condensed table-responsive table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Buyer: {{CurrentBundle.BYR_ACC_GRP_NAME_EN}}>> Style: {{CurrentBundle.STYLE_NO}}>> Order: {{CurrentBundle.ORDER_NO}}>> Color: {{CurrentBundle.COLOR_NAME_EN}}
                            </th>
                        </tr>
                        <tr>
                            <th>
                                <div class="row list-separated" style="background-color: black; margin-bottom: 0px; margin: auto;font-size:40px;">
                                    <div class="col-md-2 col-sm-2">
                                        <div class="font-grey-mint font-sm">
                                            Cutting No
                                        </div>
                                        <div class="uppercase  font-yellow-gold" style="font-size:40px;">
                                            <b><b>{{CurrentBundle.CUTNG_NO}}</b></b>
                                        </div>
                                    </div>

                                    <div class="col-md-2 col-sm-2">
                                        <div class="font-grey-mint font-sm">
                                            Bundle No
                                        </div>
                                        <div class="uppercase font-blue-sharp" style="font-size:40px;">
                                            <b><b>{{CurrentBundle.BUNDLE_NO}}</b></b>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6">
                                        <div class="font-grey-mint font-sm">
                                            SL
                                        </div>
                                        <div class="uppercase font-yellow-gold" style="font-size:40px;">
                                            <b><b>{{CurrentBundle.SL_RANGE_TXT}}</b></b>
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-sm-2">
                                        <div class="font-grey-mint font-sm">
                                            Quantity
                                        </div>
                                        <div class="uppercase font-yellow-gold" style="font-size:40px;">
                                            <b><b>{{CurrentBundle.QTY_IN_BNDL}}</b></b>
                                        </div>
                                    </div>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="col-md-12" style="padding:1px;">
                                    <table class="table table-condensed table-responsive table-bordered" style="padding: 0px; margin-bottom: 2px;">
                                        <tbody>

                                            <tr>

                                                <td style="width:15%">
                                                    <br />
                                                    <b>Desc</b>
                                                </td>
                                                <td style="width:10%">
                                                    <br />
                                                    <b>Sent</b>
                                                </td>
                                                <td style="width:15%">
                                                     Print/Embr
                                                    <b style="display:block;">Reject</b>
                                                </td>
                                                <td style="width:15%">
                                                    Fabric
                                                    <b style="display:block;">Reject</b>
                                                </td>

                                                <td style="width: 15%">
                                                    <br />
                                                    <b>Short</b>
                                                </td>

                                                <td style="width: 15%">
                                                    <br />
                                                    <b>Extra</b>
                                                </td>

                                                <td style="width: 15%">
                                                    <br />
                                                    <b>Store Recv</b>
                                                </td>

                                                <td style="width:10%">
                                                    <br />
                                                    <b>Paired</b>
                                                </td>
                                                <td style="width:10%">
                                                    <br />
                                                    <b>Adjust</b>
                                                </td>
                                                <td style="width:10%">
                                                    <br />
                                                    <b>Adjusted</b>
                                                </td>


                                            </tr>

                                            <tr ng-repeat="itm in CurrentBundle.details">
                                                <td >
                                                    {{itm.SERVICE_NAME}} // {{itm.PART_NAME_LIST}} // {{itm.SUP_TRD_NAME_EN}}
                                                </td>
                                                <td> 
                                                    <span class="label bg-purple" style="font-weight:800">
                                                        <b>{{itm.QTY_IN_BNDL}}</b>
                                                    </span>
                                                </td>


                                                <td>
                                                    <div class="input-group" style="padding-left: 15px; padding-right: 15px;">
                                                        <span class="input-group-btn" ng-if="itm.IS_ACTIVE">
                                                            <button class="btn btn-sm red" ng-disabled="itm.REJECT_QTY_FAB==0" ng-click="itm.REJECT_QTY_FAB =  itm.REJECT_QTY_FAB-1;onChange(CurrentBundle);itm.ADJUST_QTY=0" type="button"><b>-</b></button>
                                                        </span>
                                                        <input type="number" ng-model="itm.REJECT_QTY_FAB" ng-style="{ 'color': itm.REJECT_QTY_FAB > 0 ? '#E87E04':'', 'font-weight': itm.REJECT_QTY_FAB > 0 ? '800':'600'  }" style="height: 28px; font-size: 20px;text-align:center;font-weight: 600;" readonly class="form-control">
                                                        <span class="input-group-btn" ng-if="itm.IS_ACTIVE">
                                                            <button class="btn btn-sm  green" ng-click="itm.REJECT_QTY_FAB = itm.REJECT_QTY_FAB+1;onChange(CurrentBundle);itm.ADJUST_QTY=0" type="button"><b>+</b></button>
                                                        </span>
                                                    </div>
                                                </td>


                                                <td>
                                                    <div class="input-group" style="padding-left: 15px; padding-right: 15px;">
                                                        <span class="input-group-btn" ng-if="itm.IS_ACTIVE">
                                                            <button class="btn btn-sm red" ng-disabled="itm.REJECT_QTY==0" ng-click="itm.REJECT_QTY =  itm.REJECT_QTY-1;onChange(CurrentBundle);itm.ADJUST_QTY=0" type="button"><b>-</b></button>
                                                        </span>
                                                        <input type="number" ng-model="itm.REJECT_QTY" ng-style="{ 'color': itm.REJECT_QTY > 0 ? '#E87E04':'', 'font-weight': itm.REJECT_QTY > 0 ? '800':'600'  }" style="height: 28px; font-size: 20px;text-align:center;font-weight: 600;" readonly class="form-control">
                                                        <span class="input-group-btn" ng-if="itm.IS_ACTIVE">
                                                            <button class="btn btn-sm  green" ng-click="itm.REJECT_QTY = itm.REJECT_QTY+1;onChange(CurrentBundle);itm.ADJUST_QTY=0" type="button"><b>+</b></button>
                                                        </span>
                                                    </div>
                                                </td>

                                                <td>
                                                    <div class="input-group" style="padding-left: 15px; padding-right: 15px;">
                                                        <span class="input-group-btn" ng-if="itm.IS_ACTIVE">
                                                            <button class="btn btn-sm red" ng-disabled="itm.SHORT_QTY==0" ng-click="itm.SHORT_QTY =  itm.SHORT_QTY-1;onChange(CurrentBundle);itm.ADJUST_QTY=0" type="button"><b>-</b></button>
                                                        </span>
                                                        <input type="number" ng-model="itm.SHORT_QTY" ng-style="{ 'color': itm.SHORT_QTY > 0 ? '#E87E04':'', 'font-weight': itm.SHORT_QTY > 0 ? '800':'600'  }" style="height: 28px; font-size: 20px;text-align:center;font-weight: 600;" readonly class="form-control">
                                                        <span class="input-group-btn" ng-if="itm.IS_ACTIVE">
                                                            <button class="btn btn-sm  green" ng-click="itm.SHORT_QTY = itm.SHORT_QTY+1;onChange(CurrentBundle);itm.ADJUST_QTY=0" type="button"><b>+</b></button>
                                                        </span>
                                                    </div>
                                                </td>


                                                <td>
                                                    <div class="input-group" style="padding-left: 15px; padding-right: 15px;">
                                                        <span class="input-group-btn" ng-if="itm.IS_ACTIVE">
                                                            <button class="btn btn-sm red" ng-disabled="itm.SURPLS_QTY==0" ng-click="itm.SURPLS_QTY =  itm.SURPLS_QTY-1;onChange(CurrentBundle);itm.ADJUST_QTY=0" type="button"><b>-</b></button>
                                                        </span>
                                                        <input type="number" ng-model="itm.SURPLS_QTY" ng-style="{ 'color': itm.SURPLS_QTY > 0 ? '#E87E04':'', 'font-weight': itm.SURPLS_QTY > 0 ? '800':'600'  }" style="height: 28px; font-size: 20px;text-align:center;font-weight: 600;" readonly class="form-control">
                                                        <span class="input-group-btn" ng-if="itm.IS_ACTIVE">
                                                            <button class="btn btn-sm  green" ng-click="itm.SURPLS_QTY = itm.SURPLS_QTY+1;onChange(CurrentBundle);itm.ADJUST_QTY=0" type="button"><b>+</b></button>
                                                        </span>
                                                    </div>
                                                </td>

                                                <td>
                                                    <span class="label bg-purple" style="font-weight:800">
                                                        <b> {{itm.QTY_IN_BNDL-(itm.REJECT_QTY||0)-(itm.REJECT_QTY_FAB||0)-(itm.SHORT_QTY||0)+(itm.SURPLS_QTY||0)+(itm.ADJUST_QTY||0)}} </b>
                                                    </span>

                                                    
                                                </td>
                                                <td>
                                                    <span class="label bg-purple" ng-if="$first" style="font-weight:800">
                                                        <b>{{CurrentBundle.PAIRED_QTY||itm.PAIRED_QTY}}</b>
                                                    </span>
                                                </td>


                                                <td>
            
                                                    <span class="label bg-green-meadow" style="font-weight:800;cursor:pointer;" ng-click="itm.ADJUST_QTY=(CurrentBundle.MAX_QTY-CurrentBundle.PAIRED_QTY)*((itm.QTY_IN_BNDL-(itm.REJECT_QTY||0)-(itm.REJECT_QTY_FAB||0)-(itm.SHORT_QTY||0)+(itm.SURPLS_QTY||0)-CurrentBundle.PAIRED_QTY) > 0 ? -1:1);onChange(CurrentBundle)" ng-if="itm.IS_ACTIVE">
                                                        {{(itm.QTY_IN_BNDL-(itm.REJECT_QTY||0)-(itm.REJECT_QTY_FAB||0)-(itm.SHORT_QTY||0)+(itm.SURPLS_QTY||0)-CurrentBundle.PAIRED_QTY) > 0 ? '-':'+'}}
                                                        <b>{{CurrentBundle.MAX_QTY-CurrentBundle.PAIRED_QTY}}</b>
                                                    </span>
                                                </td>

                                                <td>
                                                    <b>{{itm.ADJUST_QTY}}
                                                </td>

                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
   
                            </td>
                        </tr>

                    </tbody>

                    <tfoot>

                        <tr>
                            <td>
                                <div class="row" style="padding-top:20px;">
                                    <div class="col-md-4" style="text-align: left; padding-left: 20px; padding-right: 100px;">
                                        <a class="btn purple-plum btn-lg btn-block" ng-click="prev()" ng-disabled="SL==1">
                                            <i class="fa  fa-chevron-left"></i> Previous
                                        </a>
                                    </div>
                                    <div class="col-md-4" style="text-align:center;padding-left:20px;padding-right:20px;" ng-click="save(BundleCaradList)">
                                        <a class="btn bg-blue-soft btn-lg btn-block">
                                            Save
                                        </a>
                                    </div>

                                    <div class="col-md-4" style="text-align: right; padding-left: 100px; padding-right: 20px;">
                                        <a class="btn purple-plum btn-lg btn-block" ng-click="next()" ng-disabled="SL==MAX_SL">
                                            Next <i class="fa   fa-chevron-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>