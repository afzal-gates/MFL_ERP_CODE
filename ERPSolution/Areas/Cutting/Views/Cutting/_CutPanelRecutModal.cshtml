<div class="modal-body">
    <div class="portlet grey-cascade box">
        <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">{{alert.msg}}</alert>

        <div class="portlet-title">
            <div>
                <h3 style="padding-top:10px;margin-top:3px;">
                    Cut Panel Inspection: Recut
                    <span class="pull-right"><i class="fa fa-times red" ng-click="cancel()"></i></span>
                </h3>
            </div>
        </div>
        <div class="portlet-body">
            <div class="row" style="margin:auto;">
                <table class="table table-condensed table-responsive table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Buyer: {{item.BYR_ACC_GRP_NAME_EN}}>> Style: {{item.STYLE_NO}}>> Order: {{item.ORDER_NO}}>> Color: {{item.COLOR_NAME_EN}}
                            </th>
                        </tr>
                        <tr>
                            <th>
                                <div class="row list-separated" style="background-color: black; margin-bottom: 0px; margin: auto;font-size:40px;">

                                    <div class="col-md-2 col-sm-2">
                                        <div class="font-grey-mint font-sm">
                                            Cutting No
                                        </div>
                                        <div class="uppercase  font-yellow-gold" style="font-size:40px;">
                                            <b><b>{{item.CUTNG_NO}}</b></b>
                                        </div>
                                    </div>

                                    <div class="col-md-2 col-sm-2">
                                        <div class="font-grey-mint font-sm">
                                            Bundle No
                                        </div>
                                        <div class="uppercase font-blue-sharp" style="font-size:40px;">
                                            <b><b>{{item.BUNDLE_NO}}</b></b>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6">
                                        <div class="font-grey-mint font-sm">
                                            SL
                                        </div>
                                        <div class="uppercase font-yellow-gold" style="font-size:40px;">
                                            <b><b>{{item.SL_RANGE_TXT}}</b></b>
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-sm-2">
                                        <div class="font-grey-mint font-sm">
                                            Quantity
                                        </div>
                                        <div class="uppercase font-yellow-gold" style="font-size:40px;">
                                            <b><b>{{item.QTY_IN_BNDL}}</b></b>
                                        </div>
                                    </div>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="col-md-3" style="padding:1px;">
                                    <table class="table table-condensed table-responsive table-bordered" style="padding: 0px; margin-bottom: 2px;">
                                        <tbody>

                                            <tr>

                                                <td>
                                                    <b>Part</b>
                                                </td>

                                            </tr>

                                            <tr ng-repeat="itm in item.recuts">

                                                <td style="padding-bottom: 5px; padding-top: 0px;">
                                                    <br />

                                                    <div class="input-group">
                                                        <div class="font-green-turquoise" style="font-size: 15px;">
                                                            <input type="text" ng-model="itm.GARM_PART_NAME" style="height: 28px; font-size: 20px;text-align:center;font-weight: 600;" readonly class="form-control">
                                                        </div>
                                                    </div>
                                                    <br />
                                                </td>

                                            </tr>

                                        </tbody>
                                    </table>
                                </div>

                                <div class="col-md-3" style="padding:1px;">
                                    <table class="table table-condensed table-responsive table-bordered" style="padding: 0px; margin-bottom: 2px;">
                                        <tbody>

                                            <tr>

                                                <td>
                                                    <b>Panel Reject</b>
                                                </td>

                                            </tr>

                                            <tr ng-repeat="itm in item.recuts">

                                                <td style="padding-bottom: 5px; padding-top: 0px; padding-left: 0%;">

                                                    <br />
                                                    <div class="input-group" >
                                                        <input type="number" ng-model="itm.NO_OF_PANEL_REJ" style="height: 28px; font-size: 20px;text-align:center;font-weight: 600;" readonly class="form-control">
                                                        <span class="input-group-btn">
                                                            <button class="btn btn-sm" ng-class="{'bg-blue-steel': itm.GMT_CUT_PNL_RECUT_ID > 0 }" ng-click="itm.NO_OF_PNL_RECUT = itm.NO_OF_PANEL_REJ;onChange(item)" type="button"><b>===></b></button>
                                                        </span>
                                                    </div>
                                                    <br />
                                                </td>

                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-md-3" style="padding:1px;">
                                    <table class="table table-condensed table-responsive table-bordered" style="padding: 0px; margin-bottom: 2px;">
                                        <tbody>

                                            <tr>

                                                <td>

                                                    <b>Panel Recut</b>
                                                </td>

                                            </tr>


                                            <tr ng-repeat="itm in item.recuts">

                                                <td style="padding-bottom: 5px; padding-top: 0px; padding-left: 0%;">
                                                    <br />

                                                    <div class="input-group" style="padding-left: 15px; padding-right: 15px;">
                                                        <span class="input-group-btn">
                                                            <button class="btn btn-sm red" ng-disabled="itm.NO_OF_PNL_RECUT==0" ng-click="itm.NO_OF_PNL_RECUT =  itm.NO_OF_PNL_RECUT-1;;onChange(item)" type="button"><b>-</b></button>
                                                        </span>
                                                        <input type="number" ng-model="itm.NO_OF_PNL_RECUT"  ng-style="{ 'color': item.itm.NO_OF_PNL_RECUT > 0 ? '#E87E04':'', 'font-weight': itm.NO_OF_PNL_RECUT > 0 ? '800':'600'  }" style="height: 28px; font-size: 20px;text-align:center;font-weight: 600;" readonly  class="form-control">
                                                        <span class="input-group-btn">
                                                            <button class="btn btn-sm  green" ng-disabled="itm.NO_OF_PNL_RECUT==itm.NO_OF_PANEL_REJ" ng-click="itm.NO_OF_PNL_RECUT = itm.NO_OF_PNL_RECUT+1;onChange(item)" type="button"><b>+</b></button>
                                                        </span>
                                                    </div>
                                                    <br />
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-md-3" style="padding:1px;">
                                    <table class="table table-condensed table-responsive table-bordered" style="padding: 0px; margin-bottom: 2px;">
                                        <tbody>

                                            <tr>

                                                <td>

                                                    <b>Allowed Short</b>
                                                </td>

                                            </tr>

                                            <tr>

                                                <td style="text-align:center;">
                                                    
                                                    <h1 style="font-size: 40px;font-weight:900">{{item.ALLOWED_SHRT_QTY}}</h1>   
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
  
                            </td>
                        </tr>

                    </tbody>
                    <tfoot>

                        <tr>
                            <td>
                               <div class="row" style="padding-top:20px;">
                                   <div class="col-md-4" style="text-align: left; padding-left: 20px; padding-right: 100px;">
                                       <a class="btn purple-plum btn-lg btn-block" ng-click="prev()" ng-disabled="SL==1">
                                           <i class="fa  fa-chevron-left"></i> Previous
                                       </a>
                                   </div>
                                   <div class="col-md-4" style="text-align:center;padding-left:20px;padding-right:20px;" ng-click="save(dataList)">
                                       <a class="btn bg-blue-soft btn-lg btn-block">
                                           Save
                                       </a>
                                   </div>

                                   <div class="col-md-4" style="text-align: right; padding-left: 100px; padding-right: 20px;">
                                       <a class="btn purple-plum btn-lg btn-block" ng-click="next()" ng-disabled="SL==MAX_SL">
                                           Next <i class="fa   fa-chevron-right"></i>
                                       </a>
                                   </div>
                               </div>
                            </td>
                        </tr>
                    </tfoot>

                </table>

            </div>
        </div>
    </div>
</div>