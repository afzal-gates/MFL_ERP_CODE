<div class="modal-body">
    <div class="portlet grey-cascade box">
        <alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">{{alert.msg}}</alert>

        <div class="portlet-title">
            <div>
                <h3 style="padding-top:10px;margin-top:3px;">
                     Bundle Routing Options
                    <span class="pull-right"><i class="fa fa-times red" ng-click="cancel()"></i></span>
                </h3>
            </div>
        </div>
        <div class="portlet-body">

            <table class="table table-condensed table-striped table-bordered" style="padding:5px;" ng-repeat="item in ReadyToRecv">

                <thead>
                    <tr style="font-size:15px;font-weight:900;">
                        <th colspan="14" style="color:darkorange;">
                            Buyer: {{item.BYR_ACC_GRP_NAME_EN}}>> Style: {{item.STYLE_NO}}>> Order: {{item.ORDER_NO}}>> Color: {{item.COLOR_NAME_EN}}>>Cutting No: {{item.CUTNG_NO}}

                        </th>
                    </tr>


                    <tr class="site-table-header">
                        <th style="width:20%;">
                            <small>
                                Item
                            </small>
                        </th>

                        <th style="width:10%;">
                            <small>
                                Country
                            </small>
                        </th>

                        <th style="width:10%;">
                            <small>
                                Size
                            </small>
                        </th>

                        <th style="width:10%;">
                            <small>
                                #of Bundle 
                            </small>
                        </th>
                        <th style="width:15%;">
                            <small>
                                Recv Qty
                            </small>
                        </th>
                    </tr>
                </thead>

                <tbody>
                    <tr ng-repeat="itm in item.details">

                        <td>
                            {{itm.ITEM_NAME_EN}}
                        </td>

                        <td>
                            {{itm.COUNTRY_NAME_EN}}
                        </td>

                        <td>
                            {{itm.SIZE_CODE}}
                        </td>
                    
                        <td>
                            {{itm.BNDL_RECV_QTY}}
                        </td>
                        <td>
                            {{itm.PCS_RECV_QTY}}
                        </td>
                    </tr>
                </tbody>

            </table>

            <table class="table" style="border:hidden;font-size:20px;">
                @*<tr>
                    <td>
                        <a class="btn btn-block bg-green-meadow" ng-click="storeRecvOnly(ReadyToRecv)">Store Receive Only</a>
                    </td>
                </tr>*@
                <tr>
                    <td>
                        <a class="btn btn-block bg-green-haze" ng-click="deliveryChallan(ReadyToRecv)">Store Receive with Delivery Challan <br />(Sewing Line)</a>
                    </td>
                </tr>

                <tr>
                    <td>
                        <a class="btn btn-block bg-blue-dark" ng-click="deliveryChallanSC(ReadyToRecv)">Store Receive with Sub-Contract Delivery Challan <br />(Sewing S/C Factory)</a>
                    </td>
                </tr>
            </table>
           
        </div>
    </div>
</div>