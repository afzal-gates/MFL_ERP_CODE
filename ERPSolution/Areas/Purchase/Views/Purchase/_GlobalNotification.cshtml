<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>
    <form name="formData" class="form-horizontal" style="background-color: white;">
        <div class="portlet-body">

            <fieldset class="custom-fieldset">
                <legend class="custom-legend"><b>Notification Data</b></legend>
                <div class="row" style="padding-left: 5px; padding-right: 5px;">


                    <div class="form-group">
                        <div class="col-md-1">
                        </div>
                        <label class="control-label col-md-2">
                            <span aria-required="true" class="required"></span>
                            Notification Title:
                        </label>
                        <div class="col-md-2">

                            <input type="text" class="form-control" id="title" ng-model="vm.form.title">
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-1">
                        </div>
                        <label class="control-label col-md-2">
                            <span aria-required="true" class="required"></span>
                            Notification Message:
                        </label>
                        <div class="col-md-4">

                            <textarea class="form-control" id="title" ng-model="vm.form.message"></textarea>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-1">
                        </div>
                        <label class="control-label col-md-2">
                            <span aria-required="true" class="required"></span>
                            Notification Type:
                        </label>
                        <div class="col-md-3">
                            <select class="form-control" id="alert-type" ng-model="vm.form.TypeID">
                                <option value="info" selected>Information</option>
                                <option value="success">Success</option>
                                <option value="warning">Warning</option>
                                <option value="danger">Error</option>
                            </select>
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-1">
                            </div>
                            <label class="control-label col-md-2">
                            </label>
                            <div class="col-md-8">

                                <button type="button" class="btn btn-primary" id="send-notification" ng-click="vm.showMessage();"> Send to All</button>
                            </div>
                        </div>

                    </div>
                </div>
            </fieldset>
        </div>
    </form>


</div>