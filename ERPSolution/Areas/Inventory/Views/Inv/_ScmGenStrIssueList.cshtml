<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="index.html">MultiTex ERP</a>

    </li>
    <li>
        <a href="#">Inventory</a>

    </li>
    <li>
        <a href="#" ng-bind="vm.Title"></a>
    </li>
</ul>



<div class="portlet box blue-dark">
    <div class="portlet-title">
        <div class="caption" ng-bind="vm.Title">
        </div>
        <div class="tools">
        </div>
    </div>

    <div class="portlet-body">

        <div id="splash-page" data-ng-show="vm.showSplash" class="dissolve-animation">
            <div class="page-splash">
                <div class="page-splash-message">
                    <img src="~/Content/assets/global/img/ajax-loading.gif" />  <b>Please wait ....</b>
                </div>
            </div>
        </div>
        <input id="access_token" data-ng-model="token" type="hidden"
               data-ng-init="token='@Session["access_token"]'" />
        <input ng-model="vm.form.CREATED_BY" type="hidden"
               data-ng-init="vm.form.CREATED_BY='@Session["multiScUserId"]'" />

        <input id="access_token" ng-model="vm.form.LAST_UPDATED_BY" type="hidden"
               ng-init="vm.form.LAST_UPDATED_BY='@Session["multiScUserId"]'" />

        <div class="row" style="padding:5px">
            <div class="col-md-1">
                <a ui-sref="ScmGenStrIssue({pSCM_STR_GEN_REQ_H_ID : 0})" class="btn btn-sm blue">
                    <i class="fa fa-plus"></i> Add New
                </a>
            </div>
        </div>

        <fieldset class="custom-fieldset">
            <legend class="custom-legend"><b>Searching Data</b></legend>
            <table class="clsTable">
                <thead class="clsthead">
                    <tr>
                        <th class="clstd">
                            <span aria-required="true" class="required"></span>
                            Requisition No
                        </th>
                        <th class="clstd" style="width:150px;">
                            <span aria-required="true" class="required"></span>
                            Date
                        </th>
                        <th class="clstd">
                            <span aria-required="true" class="required"></span>
                            Company
                        </th>
                        <th class="clstd">
                            <span aria-required="true" class="required"></span>
                            Requisition Type
                        </th>

                        <th class="clstd">
                            <span aria-required="true" class="required"></span>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clstr">
                        <td class="clstd">
                            <input type="text" name="STR_REQ_NO" ng-model="vm.form.STR_REQ_NO" class="form-control" />
                        </td>
                        <td class="clstd">
                            <input type="text" class="form-control required" ng-click="STR_REQ_DT_LNopen($event)" datepicker-popup="{{vm.dtFormat}}"
                                   name="STR_REQ_DT" max-date="vm.today" ng-model="vm.form.STR_REQ_DT" is-open="STR_REQ_DT_LNopened"
                                   datepicker-options="dateOptions" date-disabled="disabled(date, mode)" close-text="Close" />

                        </td>
                        <td class="clstd" style="width:150px;">

                            <input type="text" name="COMP_NAME_EN" ng-model="vm.form.COMP_NAME_EN" class="form-control" />
                        </td>
                        <td class="clstd">

                            <input type="text" name="REQ_TYPE_NAME" ng-model="vm.form.REQ_TYPE_NAME" class="form-control" />

                        </td>

                        <td class="clstd">
                            <button type="button" class="btn btn-sm default" ng-click="vm.searchData()">Search</button>
                        </td>

                    </tr>
                </tbody>
            </table>
        </fieldset>


        <div style="padding:5px;">
            <kendo-grid k-options="vm.gridOptions" k-data-source="vm.gridOptionsDS">
                <div k-detail-template>
                    <div>
                        <div kendo-grid k-options="vm.detailGridOptionsForIssue(dataItem)"></div>
                    </div>
                </div>
            </kendo-grid>
        </div>
    </div>
</div>
