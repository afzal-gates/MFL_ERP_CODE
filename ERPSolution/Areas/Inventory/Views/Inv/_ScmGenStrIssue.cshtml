                <button type="button" class="btn btn-sm default" ui-sref="ScmGenStrIssue({pSCM_STR_GEN_ISS_H_ID : 0, pSCM_STR_GEN_REQ_H_ID:0})" ui-sref-opts="{reload: true}">Cancel</button>
            </div>
            <div class="col-md-6">
                <button type="button" ng-if="vm.form.SCM_STR_GEN_ISS_H_ID>0 && vm.form.IS_FINALIZED=='N'" class="btn btn-sm green" ng-click="vm.submitAll(vm.form,'Y');">Finalized</button>
            </div>
        </div>
        <div style="padding:3px;">
        </div>
    </form>
</div>
