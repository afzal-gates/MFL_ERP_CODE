                            <select class="form-control required" style="min-width: 50px; max-width: 160px;"
                                    kendo-drop-down-list name="QTY_MOU_ID" id="QTY_MOU_ID" k-option-label="'--UoM--'"
                                    k-data-text-field="'MOU_CODE'" k-data-value-field="'RF_MOU_ID'"
                                    k-auto-bind="'true'" k-data-source="vm.mOUList" k-filter="'contains'"
                                    ng-model="item.QTY_MOU_ID" ng-disabled="item.QTY_MOU_ID>0"></select>
                        </td>*@

                        <td class="clstdMtex">
                            <a class="btn btn-xs red" ng-if="vm.form.IS_FINALIZED!='Y'" ng-click="vm.removeItemData(item)"><i class="fa fa-remove"></i></a>

                        </td>
                    </tr>
                </table>


            </fieldset>
        </div>
        <div style="padding:3px;">
        </div>
        <div class="row">
            <div class="col-md-6">
                <button type="button" class="btn btn-sm blue" ui-sref="ScmGenStrIssueList">Back To List</button>
                
                <button type="button" ng-if="vm.form.SCM_STR_GEN_ISS_H_ID>0 && vm.form.IS_FINALIZED=='N'" class="btn btn-sm yellow-gold" ng-click="vm.submitAll(vm.form,'N');">Update</button>
