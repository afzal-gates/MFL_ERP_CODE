    </style>
</head>
<body>
    <h4 style="margin:5px;"><span style="color: #5e9ca0;">TnA Failure for Development on @DateTime.Now.ToString("dd-MMM-yyyy") &nbsp;&nbsp;</span></h4>    
    <table  border="1" cellpadding="0" cellspacing="0" style="width: 900px; border: solid 1px #8a8a8a;">
        <tbody>
            <tr>
                <td  style=" text-align: center;"><span style="color:black;font-size:14px;"><strong>Buyer</strong></span></td>
                <td style=" text-align: center;"><span style="color:black;font-size:14px;"><strong>Style Information</strong></span></td>
                <td style="text-align: center; "><span style="color:black;font-size:14px;"><strong>Task Failed</strong></span></td>
                <td style="text-align: center; "><span style="color:black;font-size:14px;"><strong>Plan</strong></span></td>
                <td style="text-align: center; "><span style="color:black;font-size:14px;"><strong>Comments</strong></span></td>

            </tr>


            @for (var i = 0; i < Model.data.Count; i++)
{
    var item = Model.data[i];
                
                
                if (i % 2 == 0) { 
                    <tr style="background-color: #e5e5e5;">

        <td style="border:solid 1px #8a8a8a;font-size:12px;font-weight:700;">
            @item.BYR_ACC_NAME_EN
        </td>
        <td style="border:solid 1px #8a8a8a;font-size:12px;font-weight:700;">
            @item.STYLE_NO ( @item.STYLE_DESC )
            <br />
            <small style="font-style:italic;">
                @item.ORD_CONF_DT.ToString("dd-MMM-yyyy") - @item.SHIP_DT.ToString("dd-MMM-yyyy") ( @item.LEAD_TIME  Days)
            </small>

        </td>

        <td style="border:solid 1px #8a8a8a;font-size:12px;font-weight:700;">
            @item.TA_TASK_NAME_EN
        </td>

        <td style="border:solid 1px #8a8a8a;font-size:12px;font-weight:700;">
            @item.PLAN_ST_END.ToString("dd-MMM-yyyy")
        </td>
        <td style="border:solid 1px #8a8a8a;font-size:12px;font-weight:700;">
            @item.REMARKS
        </td>


    </tr>
                } else {
                    <tr style="background-color:white;">

                        <td style="border:solid 1px #8a8a8a;font-size:12px;font-weight:700;">
                            @item.BYR_ACC_NAME_EN
                        </td>
                        <td style="border:solid 1px #8a8a8a;font-size:12px;font-weight:700;">
                            @item.STYLE_NO ( @item.STYLE_DESC )
                            <br />
                            <small style="font-style:italic;">
                                @item.ORD_CONF_DT.ToString("dd-MMM-yyyy") - @item.SHIP_DT.ToString("dd-MMM-yyyy") ( @item.LEAD_TIME  Days)
                            </small>

                        </td>

                        <td style="border:solid 1px #8a8a8a;font-size:12px;font-weight:700;">
                            @item.TA_TASK_NAME_EN
                        </td>

                        <td style="border:solid 1px #8a8a8a;font-size:12px;font-weight:700;">
                            @item.PLAN_ST_END.ToString("dd-MMM-yyyy")
                        </td>

                        <td style="border:solid 1px #8a8a8a;font-size:12px;font-weight:700;">
                            @item.REMARKS
                        </td>
    </tr>
                
                }
}

        </tbody>
    </table>
