<div class="row">
    <div class="col-md-12 ">
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="index.html">MultiTex ERP</a>

            </li>
            <li>
                <a href="#">Garments</a>

            </li>
            <li>
                <a href="#" ng-bind="vm.Title"></a>
            </li>
        </ul>

        <!-- BEGIN Portlet PORTLET-->
        <div class="portlet box blue-dark">
            <div class="portlet-title">
                <div class="row" style="padding-top: 10px;font-size:14px;">
                    <div class="col-md-8">



                        <div class="btn-group btn-group" ng-click="itm.IS_ACTIVE = !itm.IS_ACTIVE " style="padding:3px;" ng-repeat="itm in FloorList">
                            <a class="btn default btn-xs" ng-class="{'blue': itm.HR_PROD_FLR_ID == vm.selectedFlr}" ng-click="vm.OnChangeFloor(itm)">
                                {{itm.FLOOR_DESC_EN}}
                            </a>
                        </div>

                        <div class="btn-group btn-group">

                            <a class="btn green-meadow btn-xs" ng-click="vm.refresh()">
                                <i class="fa fa-refresh"></i> Refresh
                            </a>
                        </div>

                        <div class="btn-group btn-group">
                            <a href="/Home/HourlyProductionEntry?a=165/#/HourlyProductionEntry?pFLOOR_LIST={{vm.selectedFlr}}" class="btn purple-plum btn-xs">
                                Hourly Production Entry
                            </a>
                        </div>

                        <div class="btn-group btn-group">
                            <input type="hidden" class="form-control" datepicker-popup="{{format}}" ng-model="dt" is-open="opened" max-date="minDate" ng-change="vm.onDateSelect(dt)" datepicker-options="dateOptions" close-text="Close" />
                            <span style="color:white;text-align:right;"><b><i class="glyphicon glyphicon-calendar"></i></b></span>
                            <span style="color: yellow; text-align: right; border: 1px solid white; ">&nbsp;&nbsp;<b>{{dt|date:'dd-MMM-yyyy'}}</b>&nbsp;&nbsp;</span>
                            <span style="color: white; cursor: pointer;" ng-click="open($event)"><b>Change</b></span>
                        </div>
                    </div>



                    <div class="col-md-4" align="right">
                        <button class="btn btn-xs" ng-click="vm.openConfigModal()">
                            <span class="item"> <span aria-hidden="true" class="icon-settings"></span>&nbsp; Setting</span>
                        </button>
                    </div>

                </div>
            </div>

            <div class="portlet-body">
                <form name="LineLoadPlanEntry" role="form" novalidate>
                    <table class="table table-condensed table-bordered table-striped" style="margin-bottom:0px;">
                        <thead style="text-align:center;" class="site-table-header">
                            <tr>
                                <th rowspan="3" width="1%">
                                    Line
                                </th>
                                <th colspan="3" rowspan="1" width="6%">
                                    Used MP
                                </th>
                                <th colspan="7" width="24%" style="text-align:center;">
                                    6PM-12AM
                                </th>


                                <th colspan="2" width="9%" style="text-align:center;">
                                    12AM+
                                </th>

                            </tr>
                            <tr>
                                <th width="2%" rowspan="2" style="border-top:1px solid;">
                                    OP
                                </th>
                                <th width="2%" rowspan="2" style="border-top:1px solid;">
                                    HP
                                </th>
                                <th width="2%" rowspan="2" style="border-top:1px solid;">
                                    TTL
                                </th>


                                <th width="3%" style="border-top:1px solid;">
                                    9th(6PM)
                                </th>
                                <th width="3%">
                                    10th(7PM)
                                </th>
                                <th width="3%">
                                    11th(8PM)
                                </th>
                                <th width="3%">
                                    12th(9PM)
                                </th>
                                <th width="3%">
                                    13th(10PM)
                                </th>
                                <th width="3%">
                                    14th(11PM)
                                </th>
                                <th width="3%">
                                    15th(12PM)
                                </th>

                                <th width="4%" style="border-top:1px solid;">
                                    MP
                                </th>

                                <th width="2%">
                                    Hr
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="itm in vm.FloorLineData">
                                <td width="1%">
                                    {{itm.LINE_CODE}}
                                </td>


                               
                                <td width="2%" style="padding-left:0px;padding-right:3px;">
                                    {{itm.USE_OPERATOR}}
                                </td>
                                <td width="2%" style="padding-left:0px;padding-right:3px;">
                                    {{itm.USE_HELPER}}
                                </td>
                                <td width="2%" style="padding-left:0px;padding-right:3px;">
                                    {{itm.USE_HELPER+itm.USE_OPERATOR}}
                                </td>


                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    <input type="number" class="form-control" tabindex="{{vm.FloorLineData.length*2 + $index+2}}" min="0" ng-model="itm.H9_MP_ADD" />
                                </td>
                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    <input type="number" class="form-control" tabindex="{{vm.FloorLineData.length*3 + $index+2}}" min="0" ng-model="itm.H10_MP_ADD" />
                                </td>
                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    <input type="number" class="form-control" tabindex="{{vm.FloorLineData.length*4 + $index+2}}" min="0" ng-model="itm.H11_MP_ADD" />
                                </td>
                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    <input type="number" class="form-control" tabindex="{{vm.FloorLineData.length*5 + $index+2}}" min="0" ng-model="itm.H12_MP_ADD" />
                                </td>

                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    <input type="number" class="form-control" tabindex="{{vm.FloorLineData.length*6 + $index+2}}" min="0" ng-model="itm.H13_MP_ADD" />
                                </td>
                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    <input type="number" class="form-control" tabindex="{{vm.FloorLineData.length*7 + $index+2}}" min="0" ng-model="itm.H14_MP_ADD" />
                                </td>
                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    <input type="number" class="form-control" min="0" tabindex="{{vm.FloorLineData.length*8 + $index+2}}" ng-model="itm.H15_MP_ADD" />
                                </td>

                                <td width="4%" style="padding-left:0px;padding-right:3px;">
                                    <input type="number" class="form-control" tabindex="{{vm.FloorLineData.length*10 + $index+2}}" min="0" ng-model="itm.H15_P_MP_ADD" />
                                </td>

                                <td width="2%" style="padding-left:0px;padding-right:3px;">
                                    <input type="number" class="form-control" tabindex="{{vm.FloorLineData.length*11 + $index+2}}" min="0" ng-model="itm.H15_P_WH" />
                                </td>
                            </tr>
                        </tbody>

                        <tbody style="font-weight:600;color:blue;background-color:gray;">
                            <tr>

                                <td width="1%" colspan="4"  align="right">
                                   Total
                                </td>
                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    {{vm.H9_MP_ADD_TTL}}
                                </td>

                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    {{vm.H10_MP_ADD_TTL}}
                                </td>
                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    {{vm.H11_MP_ADD_TTL}}
                                </td>
                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    {{vm.H12_MP_ADD_TTL}}
                                </td>
                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    {{vm.H13_MP_ADD_TTL}}
                                </td>

                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    {{vm.H14_MP_ADD_TTL}}
                                </td>
                                <td width="3%" style="padding-left:0px;padding-right:3px;">
                                    {{vm.H15_MP_ADD_TTL}}
                                </td>

                                <td width="4%" style="padding-left:0px;padding-right:3px;">
                                    {{vm.H15_P_MP_ADD_TTL}}
                                </td>
                                <td width="2%" style="padding-left:0px;padding-right:3px;">
                                    {{vm.H15_P_WH_TTL}}
                                </td>
           
                            </tr>
                        </tbody>
                    </table>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" class="btn btn-sm green" ng-click="vm.save(vm.FloorLineData,LineLoadPlanEntry.$valid);LineLoadPlanEntry.$submitted=true">Save</button>
                            <button type="button" class="btn btn-sm default" ng-click="vm.cancel()">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- END Portlet PORTLET-->
        </div>
    </div>
</div>

    <script type="text/ng-template" id="HourlyProductionBoardConfigModal.html">
        <div class="modal-body">
            <div id="splash-page" data-ng-show="showSplash" class="dissolve-animation">
                <div class="page-splash">
                    <div class="page-splash-message">
                        <b>Please wait ....</b>
                    </div>
                </div>
            </div>

            <div class="portlet grey-cascade box">
                <div class="portlet-title">
                    <div>
                        <h3 style="padding-top:10px;margin-top:3px;">
                            <span class="item"> <span aria-hidden="true" class="icon-settings"></span>&nbsp;Setting</span>
